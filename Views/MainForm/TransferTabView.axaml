<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MTM_WIP_Application_Avalonia.ViewModels"
             xmlns:controls="using:Avalonia.Controls"
             xmlns:materialIcons="using:Material.Icons.Avalonia"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600"
             x:Class="MTM_WIP_Application_Avalonia.Views.TransferTabView"
             x:CompileBindings="True"
             x:DataType="vm:TransferItemViewModel">

  <!-- Modern MTM Transfer Interface -->
  <ScrollViewer Classes="mtm-content">
    <StackPanel Spacing="24" Margin="24">
      
      <!-- Hero Section with MTM Gradient -->
      <Border Classes="mtm-hero-card" 
              Height="140">
        <Grid Margin="32">
          <StackPanel VerticalAlignment="Center" Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="12">
              <TextBlock Text="↔️" FontSize="28"/>
              <TextBlock Text="Inventory Transfer"
                         FontSize="24"
                         FontWeight="Bold"
                         Foreground="{DynamicResource MTM.LightTextBrush}"/>
            </StackPanel>
            <TextBlock Text="Move inventory items between locations with quantity tracking"
                       FontSize="14"
                       Foreground="{DynamicResource MTM.LightTextBrush}"
                       Opacity="0.9"/>
          </StackPanel>
        </Grid>
      </Border>
      
      <!-- Search Card -->
      <Border Classes="mtm-card-elevated">
        <Grid RowDefinitions="Auto,24,Auto" Margin="32">
          
          <!-- Search Header -->
          <Grid Grid.Row="0" ColumnDefinitions="Auto,16,*,Auto">
            <Border Grid.Column="0"
                    Background="{DynamicResource MTM.SuccessBrush}"
                    CornerRadius="8"
                    Width="40" Height="40">
              <TextBlock Text="🔍" 
                         FontSize="20"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
            </Border>
            
            <StackPanel Grid.Column="2" Spacing="4">
              <TextBlock Text="Find Items to Transfer"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource MTM.PrimaryTextBrush}"/>
              <TextBlock Text="Search for inventory items available for transfer"
                         FontSize="13"
                         Foreground="{DynamicResource MTM.SecondaryTextBrush}"/>
            </StackPanel>
            
            <!-- Quick Clear Button -->
            <Button Grid.Column="3"
                    Classes="mtm-secondary"
                    Command="{Binding ResetCommand}"
                    ToolTip.Tip="Clear search criteria"
                    Padding="8"
                    MinWidth="0">
              <TextBlock Text="🗑️" FontSize="14"/>
            </Button>
          </Grid>
          
          <!-- Search Controls -->
          <Grid Grid.Row="2" 
                RowDefinitions="Auto,16,Auto"
                ColumnDefinitions="Auto,24,*,24,Auto,24,*">
            
            <!-- Part ID Search -->
            <StackPanel Grid.Row="0" Grid.Column="0" 
                        Orientation="Horizontal" 
                        Spacing="8"
                        VerticalAlignment="Center">
              <TextBlock Text="🏷️" FontSize="16"/>
              <TextBlock Text="Part Number"
                         FontWeight="Medium"
                         Foreground="{DynamicResource MTM.PrimaryTextBrush}"/>
            </StackPanel>
            <ComboBox Grid.Row="0" Grid.Column="2"
                      Classes="mtm-combo"
                      PlaceholderText="Select or search part ID..."
                      ItemsSource="{Binding PartOptions}"
                      SelectedItem="{Binding SelectedPart, Mode=TwoWay}"
                      IsTextSearchEnabled="True"
                      ToolTip.Tip="Select or search for a part number"/>

            <!-- Operation Search -->
            <StackPanel Grid.Row="0" Grid.Column="4" 
                        Orientation="Horizontal" 
                        Spacing="8"
                        VerticalAlignment="Center">
              <TextBlock Text="⚙️" FontSize="16"/>
              <TextBlock Text="Operation"
                         FontWeight="Medium"
                         Foreground="{DynamicResource MTM.PrimaryTextBrush}"/>
            </StackPanel>
            <ComboBox Grid.Row="0" Grid.Column="6"
                      Classes="mtm-combo"
                      PlaceholderText="Select operation..."
                      ItemsSource="{Binding OperationOptions}"
                      SelectedItem="{Binding SelectedOperation, Mode=TwoWay}"
                      ToolTip.Tip="Select an operation number (optional)"/>
            
            <!-- Search Actions -->
            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="7"
                        Orientation="Horizontal" 
                        Spacing="12"
                        HorizontalAlignment="Right">
              <Button Classes="mtm-secondary"
                      Command="{Binding ResetCommand}"
                      ToolTip.Tip="Reset search criteria and refresh all data">
                <StackPanel Orientation="Horizontal" Spacing="6">
                  <TextBlock Text="🔄" FontSize="14"/>
                  <TextBlock Text="Reset"/>
                </StackPanel>
              </Button>
              
              <Button Classes="mtm-primary"
                      Command="{Binding SearchCommand}"
                      ToolTip.Tip="Search inventory (F5)">
                <StackPanel Orientation="Horizontal" Spacing="6">
                  <TextBlock Text="🔍" FontSize="14"/>
                  <TextBlock Text="Search"/>
                </StackPanel>
              </Button>
            </StackPanel>
          </Grid>
        </Grid>
      </Border>
      
      <!-- Transfer Configuration Card -->
      <Border Classes="mtm-card-elevated"
              BorderBrush="{DynamicResource MTM.SuccessBrush}"
              BorderThickness="2">
        <Grid RowDefinitions="Auto,24,Auto" Margin="32">
          
          <!-- Transfer Header -->
          <Grid Grid.Row="0" ColumnDefinitions="Auto,16,*">
            <Border Grid.Column="0"
                    Background="{DynamicResource MTM.SuccessBrush}"
                    CornerRadius="8"
                    Width="40" Height="40">
              <TextBlock Text="➡️" 
                         FontSize="20"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
            </Border>
            
            <StackPanel Grid.Column="2" Spacing="4">
              <TextBlock Text="Transfer Configuration"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource MTM.PrimaryTextBrush}"/>
              <TextBlock Text="Configure destination and quantity for transfer"
                         FontSize="13"
                         Foreground="{DynamicResource MTM.SecondaryTextBrush}"/>
            </StackPanel>
          </Grid>
          
          <!-- Transfer Controls -->
          <Grid Grid.Row="2" 
                RowDefinitions="Auto,16,Auto"
                ColumnDefinitions="Auto,24,*,24,Auto,24,Auto,Auto">
            
            <!-- Destination Location -->
            <StackPanel Grid.Row="0" Grid.Column="0" 
                        Orientation="Horizontal" 
                        Spacing="8"
                        VerticalAlignment="Center">
              <TextBlock Text="📍" FontSize="16"/>
              <TextBlock Text="To Location"
                         FontWeight="Medium"
                         Foreground="{DynamicResource MTM.PrimaryTextBrush}"/>
            </StackPanel>
            <ComboBox Grid.Row="0" Grid.Column="2"
                      Classes="mtm-combo"
                      PlaceholderText="Select destination..."
                      ItemsSource="{Binding LocationOptions}"
                      SelectedItem="{Binding SelectedToLocation, Mode=TwoWay}"
                      ToolTip.Tip="Select the destination location for transfer"/>
            
            <!-- Transfer Quantity -->
            <StackPanel Grid.Row="0" Grid.Column="4" 
                        Orientation="Horizontal" 
                        Spacing="8"
                        VerticalAlignment="Center">
              <TextBlock Text="🔢" FontSize="16"/>
              <TextBlock Text="Quantity"
                         FontWeight="Medium"
                         Foreground="{DynamicResource MTM.PrimaryTextBrush}"/>
            </StackPanel>
            <NumericUpDown Grid.Row="0" Grid.Column="6"
                           Classes="mtm-input"
                           Value="{Binding TransferQuantity, Mode=TwoWay}"
                           Minimum="1"
                           Maximum="{Binding MaxTransferQuantity}"
                           Width="120"
                           ToolTip.Tip="Specify the quantity to transfer"/>
            
            <!-- Max Quantity Indicator -->
            <Border Grid.Row="0" Grid.Column="7"
                    Background="{DynamicResource MTM.InfoLightBrush}"
                    CornerRadius="12"
                    Padding="8,4"
                    Margin="8,0,0,0">
              <TextBlock Text="{Binding MaxTransferQuantity, StringFormat='Max: {0}'}"
                         FontSize="11"
                         Foreground="{DynamicResource MTM.InfoTextBrush}"
                         ToolTip.Tip="Maximum available quantity"/>
            </Border>
            
            <!-- Transfer Action -->
            <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="8"
                    Classes="mtm-success"
                    Command="{Binding TransferCommand}"
                    IsEnabled="{Binding CanTransfer}"
                    HorizontalAlignment="Center"
                    ToolTip.Tip="Execute transfer operation (Enter key)"
                    Padding="24,12">
              <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="↗️" FontSize="16"/>
                <TextBlock Text="Execute Transfer" FontSize="16" FontWeight="SemiBold"/>
                <TextBlock Text="↗️" FontSize="16"/>
              </StackPanel>
            </Button>
          </Grid>
        </Grid>
      </Border>
      
      <!-- Results Card -->
      <Border Classes="mtm-card-elevated">
        <Grid RowDefinitions="Auto,24,Auto,24,Auto" Margin="32">
          
          <!-- Results Header -->
          <Grid Grid.Row="0" ColumnDefinitions="Auto,16,*,Auto">
            <Border Grid.Column="0"
                    Background="{DynamicResource MTM.InfoBrush}"
                    CornerRadius="8"
                    Width="40" Height="40">
              <TextBlock Text="📊" 
                         FontSize="20"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
            </Border>
            
            <StackPanel Grid.Column="2" Spacing="4">
              <TextBlock Text="Available Items"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource MTM.PrimaryTextBrush}"/>
              <TextBlock Text="{Binding InventoryItems.Count, StringFormat='{}{0} items available for transfer'}"
                         FontSize="13"
                         Foreground="{DynamicResource MTM.SecondaryTextBrush}"/>
            </StackPanel>
            
            <!-- Export Button -->
            <Button Grid.Column="3"
                    Classes="mtm-secondary"
                    Command="{Binding PrintCommand}"
                    IsEnabled="{Binding HasInventoryItems}"
                    ToolTip.Tip="Print current inventory view (Ctrl+P)">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <TextBlock Text="🖨️" FontSize="14"/>
                <TextBlock Text="Print"/>
              </StackPanel>
            </Button>
          </Grid>
          
          <!-- Data Grid Container -->
          <Grid Grid.Row="2">
            <!-- Data Grid -->
            <DataGrid ItemsSource="{Binding InventoryItems}"
                      SelectedItem="{Binding SelectedInventoryItem, Mode=TwoWay}"
                      IsVisible="{Binding HasInventoryItems}"
                      Classes="mtm-grid"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      Background="{DynamicResource MTM.CardBackgroundBrush}"
                      MinHeight="300">
              <DataGrid.Columns>
                <DataGridTextColumn Header="📍 Location" 
                                    Binding="{Binding Location}" 
                                    Width="*"/>
                <DataGridTextColumn Header="🏷️ Part ID" 
                                    Binding="{Binding PartId}" 
                                    Width="*"/>
                <DataGridTextColumn Header="⚙️ Operation" 
                                    Binding="{Binding Operation}" 
                                    Width="Auto"/>
                <DataGridTextColumn Header="🔢 Quantity" 
                                    Binding="{Binding Quantity}" 
                                    Width="Auto"/>
                <DataGridTextColumn Header="📦 Batch #" 
                                    Binding="{Binding BatchNumber}" 
                                    Width="Auto"/>
                <DataGridTextColumn Header="📝 Notes" 
                                    Binding="{Binding Notes}" 
                                    Width="2*"/>
                <DataGridTextColumn Header="🕒 Updated" 
                                    Binding="{Binding LastUpdated, StringFormat='{}{0:MM/dd/yy HH:mm}'}" 
                                    Width="Auto"/>
              </DataGrid.Columns>
            </DataGrid>

            <!-- Empty State -->
            <StackPanel IsVisible="{Binding !HasInventoryItems}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Spacing="16">
              <Border Background="{DynamicResource MTM.SuccessLightBrush}"
                      CornerRadius="60"
                      Width="120" Height="120"
                      HorizontalAlignment="Center">
                <TextBlock Text="📦" 
                           FontSize="48"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource MTM.SuccessBrush}"/>
              </Border>
              <StackPanel Spacing="8">
                <TextBlock Text="No inventory items found"
                           HorizontalAlignment="Center"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource MTM.PrimaryTextBrush}"/>
                <TextBlock Text="Use the search criteria above to find items for transfer"
                           HorizontalAlignment="Center"
                           FontSize="12"
                           Foreground="{DynamicResource MTM.SecondaryTextBrush}"
                           TextAlignment="Center"
                           MaxWidth="250"/>
              </StackPanel>
            </StackPanel>
          </Grid>
          
          <!-- Selection Status Panel -->
          <Border Grid.Row="4" 
                  Classes="mtm-success"
                  IsVisible="{Binding SelectedInventoryItem, Converter={x:Static ObjectConverters.IsNotNull}}">
            <Grid ColumnDefinitions="Auto,16,*,Auto">
              <Border Grid.Column="0"
                      Background="{DynamicResource MTM.SuccessBrush}"
                      CornerRadius="6"
                      Width="24" Height="24">
                <TextBlock Text="✓" 
                           FontSize="12"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource MTM.LightTextBrush}"/>
              </Border>
              
              <StackPanel Grid.Column="2" Spacing="2">
                <TextBlock Text="Selected Item for Transfer"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{DynamicResource MTM.SuccessTextBrush}"/>
                <StackPanel Orientation="Horizontal" Spacing="12">
                  <TextBlock Text="{Binding SelectedInventoryItem.PartId, StringFormat='Part: {0}'}" 
                             FontSize="11"
                             Foreground="{DynamicResource MTM.SuccessTextBrush}"/>
                  <TextBlock Text="{Binding SelectedInventoryItem.Location, StringFormat='From: {0}'}" 
                             FontSize="11"
                             Foreground="{DynamicResource MTM.SuccessTextBrush}"/>
                  <TextBlock Text="{Binding SelectedInventoryItem.Quantity, StringFormat='Available: {0}'}" 
                             FontSize="11"
                             FontWeight="Medium"
                             Foreground="{DynamicResource MTM.SuccessTextBrush}"/>
                </StackPanel>
              </StackPanel>
              
              <Button Grid.Column="3"
                      Classes="mtm-secondary"
                      Command="{Binding TogglePanelCommand}"
                      ToolTip.Tip="Toggle quick actions panel"
                      Padding="8,4"
                      MinWidth="0">
                <TextBlock Text="⚙️" FontSize="12"/>
              </Button>
            </Grid>
          </Border>
        </Grid>
      </Border>
      
      <!-- Quick Info Panel -->
      <Border Classes="mtm-card"
              Background="{DynamicResource MTM.InfoLightBrush}">
        <Grid ColumnDefinitions="Auto,16,*" Margin="20">
          <TextBlock Grid.Column="0" 
                     Text="💡" 
                     FontSize="20"
                     VerticalAlignment="Center"/>
          
          <StackPanel Grid.Column="2" Spacing="4">
            <TextBlock Text="Transfer Instructions"
                       FontWeight="SemiBold"
                       FontSize="13"
                       Foreground="{DynamicResource MTM.InfoTextBrush}"/>
            <TextBlock Text="1. Search for items • 2. Select an item • 3. Choose destination • 4. Set quantity • 5. Execute transfer"
                       FontSize="11"
                       Foreground="{DynamicResource MTM.InfoTextBrush}"/>
          </StackPanel>
        </Grid>
      </Border>
    </StackPanel>
  </ScrollViewer>
</UserControl>

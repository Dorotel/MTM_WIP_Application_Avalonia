<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MTM_WIP_Application_Avalonia.ViewModels"
             xmlns:views="using:MTM_WIP_Application_Avalonia.Views"
             xmlns:controls="using:MTM_WIP_Application_Avalonia.Controls"
             mc:Ignorable="d"
             d:DesignWidth="1200"
             d:DesignHeight="700"
             x:Class="MTM_WIP_Application_Avalonia.Views.MainView"
             x:CompileBindings="True"
             x:DataType="vm:MainViewViewModel"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

  <UserControl.Resources>
    <!-- Resources are now provided by DynamicResource bindings from MTM themes -->
  </UserControl.Resources>

  <UserControl.Styles>
    <!-- TabControl styling is now handled globally by MTMComponents.axaml -->
    
    <!-- Connection Status Styles -->
    <Style Selector="Border.connection-status">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.ErrorBrush}"/>
    </Style>
    
    <Style Selector="Border.connection-status[Tag=Connected]">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.SuccessBrush}"/>
    </Style>
    
    <Style Selector="Border.connection-status[Tag=Disconnected]">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.ErrorBrush}"/>
    </Style>
    
    <Style Selector="Border.connection-status[Tag=Error]">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.WarningBrush}"/>
    </Style>

    <!-- Signal strength progress bar styles -->
    <Style Selector="ProgressBar.signal-bar[Tag=Connected]">
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.SuccessBrush}"/>
    </Style>
    
    <Style Selector="ProgressBar.signal-bar[Tag=Disconnected]">
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.ErrorBrush}"/>
    </Style>
    
    <Style Selector="ProgressBar.signal-bar[Tag=Error]">
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.WarningBrush}"/>
    </Style>
  </UserControl.Styles>

  <!-- Keyboard shortcuts -->
  <UserControl.KeyBindings>
    <KeyBinding Gesture="F5" Command="{Binding RefreshCommand}"/>
    <KeyBinding Gesture="Ctrl+S" Command="{Binding OpenSettingsCommand}"/>
    <KeyBinding Gesture="Ctrl+H" Command="{Binding OpenPersonalHistoryCommand}"/>
    <KeyBinding Gesture="Escape" Command="{Binding CancelCommand}"/>
    <!-- Remove tab specific shortcuts -->
    <KeyBinding Gesture="Delete" Command="{Binding RemoveItemViewModel.DeleteCommand}"/>
    <KeyBinding Gesture="Ctrl+Z" Command="{Binding RemoveItemViewModel.UndoCommand}"/>
    <KeyBinding Gesture="Ctrl+P" Command="{Binding RemoveItemViewModel.PrintCommand}"/>
  </UserControl.KeyBindings>

  <!-- Main container that stretches to fill entire available space -->
  <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <DockPanel HorizontalAlignment="Stretch" 
               VerticalAlignment="Stretch"
               LastChildFill="True">
    
    <!-- Header Menu with MTM Branding -->
    <Border DockPanel.Dock="Top"
            Background="{DynamicResource MTM_Shared_Logic.SidebarGradientBrush}"
            Padding="24,8"
            BoxShadow="0 2 8 0 {DynamicResource MTM_Shared_Logic.ShadowBrush}"
            HorizontalAlignment="Stretch">
      <Grid ColumnDefinitions="*,Auto" HorizontalAlignment="Stretch">
        <!-- Left side: Menu -->
        <Menu Grid.Column="0"
              Background="Transparent" 
              Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"
              HorizontalAlignment="Left">
          <MenuItem Header="_File" Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}">
            <MenuItem Header="_Settings" Command="{Binding OpenSettingsCommand}"/>
            <Separator/>
            <MenuItem Header="E_xit" Command="{Binding ExitCommand}"/>
          </MenuItem>
          <MenuItem Header="_View" Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}">
            <MenuItem Header="_Personal History" Command="{Binding OpenPersonalHistoryCommand}"/>
          </MenuItem>
          <!-- Development builds only -->
          <MenuItem Header="_Help" 
                    Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"
                    IsVisible="{Binding ShowDevelopmentMenu, FallbackValue=False}">
            <MenuItem Header="_About" Command="{Binding OpenAboutCommand}"/>
          </MenuItem>
        </Menu>
        
        <!-- Right side: Theme Quick Switcher -->
        <views:ThemeQuickSwitcher Grid.Column="1"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center"
                                 Margin="16,0,0,0"/>
      </Grid>
    </Border>

    <!-- Status Bar -->
    <Border DockPanel.Dock="Bottom"
            Background="{DynamicResource MTM_Shared_Logic.FooterBackgroundBrush}"
            Padding="24,8"
            HorizontalAlignment="Stretch"
            MinHeight="36">
      <Grid ColumnDefinitions="Auto,Auto,*,Auto,Auto" 
            ColumnSpacing="16"
            HorizontalAlignment="Stretch">
        
        <!-- Enhanced Connection Status with integrated signal bar -->
        <Border Grid.Column="0" 
                Classes="connection-status"
                Tag="{Binding ConnectionStatus}"
                Padding="12,8"
                CornerRadius="20"
                HorizontalAlignment="Left"
                Cursor="Hand"
                PointerPressed="OnConnectionStatusClicked">
          <StackPanel Orientation="Vertical" Spacing="4">
            <!-- Top: Connection info -->
            <StackPanel Orientation="Horizontal" Spacing="8">
              <Border Background="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"
                      CornerRadius="8"
                      Width="16"
                      Height="16">
                <TextBlock Text="🔗" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
              </Border>
              <TextBlock Text="Connection:" 
                         Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}" 
                         FontSize="11"
                         FontWeight="Medium"/>
              <TextBlock Text="{Binding ConnectionStatus, FallbackValue='Connected', TargetNullValue='Unknown'}"
                         Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"
                         FontWeight="Bold"
                         FontSize="11"/>
            </StackPanel>
            
            <!-- Bottom: Dynamic signal bar with quality-based length and color -->
            <StackPanel Orientation="Horizontal" Spacing="4" HorizontalAlignment="Center">
              <TextBlock Text="Signal:" 
                         Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}" 
                         FontSize="9"
                         FontWeight="Medium"/>
              <ProgressBar Classes="signal-bar"
                          BorderBrush="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"
                          BorderThickness="1"
                           Tag="{Binding ConnectionStatus}"
                           Minimum="0" Maximum="100" 
                           Width="{Binding ConnectionSignalBarWidth, FallbackValue=60}"
                           Height="8" 
                           Value="{Binding ConnectionStrength, FallbackValue=100}"
                           Background="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"
                           CornerRadius="3"/>
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Main Progress Bar (repositioned) -->
        <Border Grid.Column="1"
                Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"
                BorderThickness="1"
                Padding="12,6"
                CornerRadius="12"
                HorizontalAlignment="Left">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Progress:" 
                       Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                       FontSize="10"
                       FontWeight="Medium"/>
            <ProgressBar Minimum="0" Maximum="100"
                         Width="100" Height="8"
                         Value="{Binding ProgressValue, FallbackValue=0}"
                         Foreground="{DynamicResource MTM_Shared_Logic.ProcessingBrush}"
                         Background="{DynamicResource MTM_Shared_Logic.BorderLightBrush}"
                         CornerRadius="4"/>
          </StackPanel>
        </Border>

        <!-- Spacer -->
        <Border Grid.Column="2" Background="Transparent"/>

        <!-- Enhanced Status Text Box -->
        <Border Grid.Column="3" 
                Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"
                BorderThickness="1"
                Padding="16,8"
                CornerRadius="8"
                MinWidth="120"
                HorizontalAlignment="Right">
          <TextBlock Text="{Binding StatusText, FallbackValue='Ready', TargetNullValue='Ready'}"
                     Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                     FontSize="12"
                     FontWeight="SemiBold"
                     VerticalAlignment="Center"
                     TextTrimming="CharacterEllipsis"
                     ToolTip.Tip="{Binding StatusText}"/>
        </Border>

        <!-- Enhanced Version Display -->
        <Border Grid.Column="4"
                Background="{DynamicResource MTM_Shared_Logic.PrimaryAction}"
                CornerRadius="12"
                Padding="12,6"
                HorizontalAlignment="Right">
          <TextBlock Text="Ver. 5.0"
                     Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"
                     FontSize="10"
                     FontWeight="SemiBold"
                     VerticalAlignment="Center"/>
        </Border>
      </Grid>
    </Border>

    <!-- Main Content Area - Fills remaining space -->
    <Grid HorizontalAlignment="Stretch" 
          VerticalAlignment="Stretch"
          Margin="8">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" MinWidth="400"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      
      <!-- Left Panel: Tab Control - Stretches fully -->
      <Grid Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <!-- Main Tab Control -->
        <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"
                BorderThickness="2"
                CornerRadius="8"
                Margin="8"
                BoxShadow="0 4 12 0 {DynamicResource MTM_Shared_Logic.DropShadowBrush}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
          <TabControl x:Name="MainForm_TabControl"
                      SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay, FallbackValue=0}"
                      Background="Transparent"
                      HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch">
          
          <!-- Inventory Tab -->
          <TabItem>
            <TabItem.Header>
              <StackPanel Orientation="Horizontal" Spacing="12">
                <Border CornerRadius="10"
                        Width="24"
                        Height="24">
                  <TextBlock Text="📦" 
                             FontSize="14" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Inventory" 
                           FontSize="15" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
              </StackPanel>
            </TabItem.Header>
            <!-- Content container that stretches to fill all available space -->
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" LastChildFill="True">
              <ContentControl Content="{Binding InventoryContent}"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch"
                              VerticalContentAlignment="Stretch"/>
            </DockPanel>
          </TabItem>
          
          <!-- Remove Tab -->
          <TabItem>
            <TabItem.Header>
              <StackPanel Orientation="Horizontal" Spacing="12">
                <Border CornerRadius="10"
                        Width="24"
                        Height="24">
                  <TextBlock Text="🗑️" 
                             FontSize="14" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Remove" 
                           FontSize="15" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
              </StackPanel>
            </TabItem.Header>
            <!-- Content container that stretches to fill all available space -->
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" LastChildFill="True">
              <ContentControl Content="{Binding RemoveContent}"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch"
                              VerticalContentAlignment="Stretch"/>
            </DockPanel>
          </TabItem>
          
          <!-- Transfer Tab -->
          <TabItem>
            <TabItem.Header>
              <StackPanel Orientation="Horizontal" Spacing="12">
                <Border CornerRadius="10"
                        Width="24"
                        Height="24">
                  <TextBlock Text="🔄" 
                             FontSize="14" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Transfer" 
                           FontSize="15" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
              </StackPanel>
            </TabItem.Header>
            <!-- Content container that stretches to fill all available space -->
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" LastChildFill="True">
              <ContentControl Content="{Binding TransferContent}"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch"
                              VerticalContentAlignment="Stretch"/>
            </DockPanel>
          </TabItem>
        </TabControl>
        </Border>
        
        <!-- Suggestion Overlay Panel - Covers entire left panel area when visible -->
        <Border x:Name="SuggestionOverlayPanel"
                IsVisible="False"
                Background="{DynamicResource MTM_Shared_Logic.ShadowBrush}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="8"
                CornerRadius="8"
                ZIndex="1000">
          <!-- Centered overlay container -->
          <Border Padding="16"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                  BorderBrush="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"
                  BorderThickness="2"
                  CornerRadius="12"
                  BoxShadow="0 8 32 0 {DynamicResource MTM_Shared_Logic.DropShadowBrush}">
            <!-- Overlay content will be dynamically set -->
            <ContentControl x:Name="SuggestionOverlayContent"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"/>
          </Border>
        </Border>
      </Grid>

      <!-- Right Panel: Collapsible Quick Actions -->
      <controls:CollapsiblePanel Grid.Column="1"
                                HeaderPosition="Right"
                                IsExpanded="{Binding IsQuickActionsPanelExpanded, Mode=TwoWay}"
                                IsVisible="{Binding IsAdvancedPanelVisible, FallbackValue=True}"
                                Margin="0,8,8,8"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                MinWidth="40">
        <views:QuickButtonsView DataContext="{Binding QuickButtonsViewModel}"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"/>
      </controls:CollapsiblePanel>
    </Grid>
  </DockPanel>

  <!-- SuggestionOverlayView removed for overlay ViewModel reset -->
  </Grid>
</UserControl>

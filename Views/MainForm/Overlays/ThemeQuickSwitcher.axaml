<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MTM_WIP_Application_Avalonia.Views.MainForm.Overlays.ThemeQuickSwitcher"
             x:Name="ThemeQuickSwitcherRoot">

    <!-- Theme Quick Switcher Component - Updated for Theme V2 -->
    <Border Background="{DynamicResource ThemeV2.Surface.Card}"
            BorderBrush="{DynamicResource ThemeV2.Border.Default}"
            BorderThickness="1"
            CornerRadius="6"
            Padding="8">

        <StackPanel Orientation="Horizontal" Spacing="8">

            <!-- Theme Icon with Edit Button -->
            <StackPanel Orientation="Horizontal" Spacing="4">
                <Button x:Name="EditThemeButton"
                        Content="ðŸŽ¨"
                        Classes="mtm-icon-button"
                        FontSize="12"
                        Width="24"
                        Height="24"
                        VerticalAlignment="Center"
                        ToolTip.Tip="Edit current theme colors - Opens full theme editor"
                        Cursor="Hand">
                    <Button.Styles>
                        <Style Selector="Button.mtm-icon-button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="2"/>
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                        <Style Selector="Button.mtm-icon-button:pointerover">
                            <Setter Property="Background" Value="{DynamicResource ThemeV2.Surface.Hover}"/>
                        </Style>
                        <Style Selector="Button.mtm-icon-button:pressed">
                            <Setter Property="Background" Value="{DynamicResource ThemeV2.Accent.Primary}"/>
                            <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Text.OnAccent}"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>

            <!-- Light/Dark Theme Toggle Switch -->
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="Light"
                           Foreground="{DynamicResource ThemeV2.Text.Secondary}"
                           FontSize="11"
                           VerticalAlignment="Center" />
                <ToggleSwitch x:Name="ThemeToggleSwitch"
                              OffContent=""
                              OnContent=""
                              MinWidth="48"
                              MinHeight="24"
                              VerticalAlignment="Center"
                              ToolTip.Tip="Toggle between Light and Dark theme"
                              Cursor="Hand" />
                <TextBlock Text="Dark"
                           Foreground="{DynamicResource ThemeV2.Text.Secondary}"
                           FontSize="11"
                           VerticalAlignment="Center" />
            </StackPanel>

            <!-- Accent Color Preview Button -->
            <Button x:Name="AccentColorButton"
                    Background="{DynamicResource ThemeV2.Accent.Primary}"
                    BorderBrush="{DynamicResource ThemeV2.Border.Default}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Width="32"
                    Height="24"
                    VerticalAlignment="Center"
                    ToolTip.Tip="Current accent color - Click to change"
                    Cursor="Hand">
            </Button>

            <!-- Quick Apply Button -->
            <Button x:Name="ApplyButton"
                    Content="Apply"
                    Classes="mtm-secondary"
                    FontSize="11"
                    Padding="8,4"
                    MinHeight="28"
                    VerticalAlignment="Center"
                    ToolTip.Tip="Apply theme changes"
                    Background="{DynamicResource ThemeV2.Surface.Panel}"
                    BorderBrush="{DynamicResource ThemeV2.Border.Default}"
                    Foreground="{DynamicResource ThemeV2.Text.Primary}" />
        </StackPanel>
    </Border>

</UserControl>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MTM_WIP_Application_Avalonia.ViewModels"
             xmlns:views="using:MTM_WIP_Application_Avalonia.Views"
             mc:Ignorable="d"
             d:DesignWidth="1200"
             d:DesignHeight="700"
             x:Class="MTM_WIP_Application_Avalonia.Views.MainView"
             x:CompileBindings="True"
             x:DataType="vm:MainViewViewModel">

  <!-- Keyboard shortcuts -->
  <UserControl.KeyBindings>
    <KeyBinding Gesture="F5" Command="{Binding RefreshCommand}"/>
    <KeyBinding Gesture="Ctrl+S" Command="{Binding OpenSettingsCommand}"/>
    <KeyBinding Gesture="Ctrl+H" Command="{Binding OpenPersonalHistoryCommand}"/>
    <KeyBinding Gesture="Escape" Command="{Binding CancelCommand}"/>
    <!-- Remove tab specific shortcuts -->
    <KeyBinding Gesture="Delete" Command="{Binding RemoveItemViewModel.DeleteCommand}"/>
    <KeyBinding Gesture="Ctrl+Z" Command="{Binding RemoveItemViewModel.UndoCommand}"/>
    <KeyBinding Gesture="Ctrl+P" Command="{Binding RemoveItemViewModel.PrintCommand}"/>
  </UserControl.KeyBindings>

  <!-- MANDATORY: Viewbox wrapper for proportional scaling -->
  <Viewbox Stretch="Uniform" StretchDirection="Both">
    <!-- Fixed dimensions for scaling reference -->
    <Grid Width="1200" Height="700" RowDefinitions="Auto,*,Auto" Background="{DynamicResource MTM_Shared_Logic.AppBackgroundBrush}">
      
      <!-- Header Menu with MTM Branding -->
      <Border Grid.Row="0" 
              Background="{DynamicResource MTM_Shared_Logic.HeaderBackgroundBrush}"
              Padding="24,16"
              BoxShadow="0 2 8 0 #1A000000">
        <Menu Background="Transparent" Foreground="{DynamicResource MTM_Shared_Logic.LightTextBrush}">
          <MenuItem Header="_File" Foreground="{DynamicResource MTM_Shared_Logic.LightTextBrush}">
            <MenuItem Header="_Settings" Command="{Binding OpenSettingsCommand}"/>
            <Separator/>
            <MenuItem Header="E_xit" Command="{Binding ExitCommand}"/>
          </MenuItem>
          <MenuItem Header="_View" Foreground="{DynamicResource MTM_Shared_Logic.LightTextBrush}">
            <MenuItem Header="_Personal History" Command="{Binding OpenPersonalHistoryCommand}"/>
          </MenuItem>
          <!-- Development builds only -->
          <MenuItem Header="_Help" 
                    Foreground="{DynamicResource MTM_Shared_Logic.LightTextBrush}"
                    IsVisible="{Binding ShowDevelopmentMenu}">
            <MenuItem Header="_About" Command="{Binding OpenAboutCommand}"/>
          </MenuItem>
        </Menu>
      </Border>

      <!-- Main Content Area -->
      <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Modern Tab Control with MTM Styling -->
        <Border Grid.Column="0" 
                Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                CornerRadius="8"
                Margin="16"
                BoxShadow="0 2 8 0 #11000000">
          <TabControl x:Name="MainForm_TabControl"
                      SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}"
                      Background="Transparent">
            <TabItem Header="📦 Inventory">
              <Border Padding="16">
                <!-- Control_InventoryTab placeholder -->
                <ContentControl Content="{Binding InventoryContent}"/>
              </Border>
            </TabItem>
            <TabItem Header="➖ Remove">
              <Border Padding="16">
                <!-- Control_RemoveTab placeholder -->
                <ContentControl Content="{Binding RemoveContent}"/>
              </Border>
            </TabItem>
            <TabItem Header="↔️ Transfer">
              <Border Padding="16">
                <!-- Control_TransferTab placeholder -->
                <ContentControl Content="{Binding TransferContent}"/>
              </Border>
            </TabItem>
          </TabControl>
        </Border>

        <!-- Modern Splitter with MTM Styling -->
        <GridSplitter Grid.Column="1"
                      Background="{DynamicResource MTM_Shared_Logic.PrimaryBrush}"
                      ResizeDirection="Columns"
                      ShowsPreview="True"
                      HorizontalAlignment="Stretch"
                      Width="6"
                      CornerRadius="3"
                      IsVisible="{Binding IsAdvancedPanelVisible}"
                      Margin="4,16"/>

        <!-- Right Panel: Quick Actions with Modern Styling -->
        <Border Grid.Column="2"
                Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                CornerRadius="8"
                Margin="0,16,16,16"
                BoxShadow="0 2 8 0 #11000000"
                IsVisible="{Binding IsAdvancedPanelVisible}"
                Width="300">
          <!-- Quick Actions Content -->
          <ScrollViewer Padding="8">
            <views:QuickButtonsView DataContext="{Binding QuickButtonsViewModel}"/>
          </ScrollViewer>
        </Border>
      </Grid>

      <!-- Modern Status Bar with MTM Styling -->
      <Border Grid.Row="2"
              Background="{DynamicResource MTM_Shared_Logic.StatusBarBackgroundBrush}"
              Padding="24,12">
        <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="24">
          <!-- Connection Status with Icon -->
          <Border Grid.Column="0" 
                  Background="{DynamicResource MTM_Shared_Logic.PrimaryDarkBrush}"
                  Padding="12,6"
                  CornerRadius="20">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <TextBlock Text="🔗" FontSize="14"/>
              <TextBlock Text="Connection:" 
                         Foreground="{DynamicResource MTM_Shared_Logic.LightTextBrush}" 
                         Opacity="0.8"
                         FontSize="12"/>
              <TextBlock Text="{Binding ConnectionStatus}"
                         Foreground="{DynamicResource MTM_Shared_Logic.LightPurpleBrush}"
                         FontWeight="SemiBold"
                         FontSize="12"/>
            </StackPanel>
          </Border>

          <!-- Progress Bar Area -->
          <StackPanel Grid.Column="1" 
                      Orientation="Horizontal" 
                      Spacing="12" 
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center">
            <!-- Connection Strength -->
            <StackPanel Orientation="Horizontal" Spacing="8">
              <TextBlock Text="Signal" 
                         Foreground="{DynamicResource MTM_Shared_Logic.LightTextBrush}" 
                         Opacity="0.8"
                         FontSize="11"/>
              <ProgressBar Minimum="0" Maximum="100" 
                           Width="100" Height="8" 
                           Value="{Binding ConnectionStrength}"
                           Foreground="{DynamicResource MTM_Shared_Logic.LightPurpleBrush}"
                           Background="{DynamicResource MTM_Shared_Logic.PrimaryDarkBrush}"
                           CornerRadius="4"/>
            </StackPanel>

            <!-- Main Progress -->
            <StackPanel Orientation="Horizontal" Spacing="8">
              <TextBlock Text="Progress" 
                         Foreground="{DynamicResource MTM_Shared_Logic.LightTextBrush}" 
                         Opacity="0.8"
                         FontSize="11"/>
              <ProgressBar Minimum="0" Maximum="100"
                           Width="120" Height="8"
                           Value="{Binding ProgressValue}"
                           Foreground="{DynamicResource MTM_Shared_Logic.MagentaAccentBrush}"
                           Background="{DynamicResource MTM_Shared_Logic.PrimaryDarkBrush}"
                           CornerRadius="4"/>
            </StackPanel>
          </StackPanel>

          <!-- Status Text with Modern Styling -->
          <Border Grid.Column="2" 
                  Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                  Padding="12,6"
                  CornerRadius="6">
            <TextBlock Text="{Binding StatusText}"
                       Foreground="{DynamicResource MTM_Shared_Logic.PrimaryTextBrush}"
                       FontSize="12"
                       VerticalAlignment="Center"/>
          </Border>

          <!-- Version Info -->
          <TextBlock Grid.Column="3"
                     Text="MTM WIP v1.0"
                     Foreground="{DynamicResource MTM_Shared_Logic.LightTextBrush}"
                     Opacity="0.6"
                     FontSize="10"
                     VerticalAlignment="Center"/>
        </Grid>
      </Border>
    </Grid>
  </Viewbox>
</UserControl>

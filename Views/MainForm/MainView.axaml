<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MTM_WIP_Application_Avalonia.ViewModels"
             xmlns:views="using:MTM_WIP_Application_Avalonia.Views"
             mc:Ignorable="d"
             d:DesignWidth="1200"
             d:DesignHeight="700"
             x:Class="MTM_WIP_Application_Avalonia.Views.MainView"
             x:CompileBindings="True"
             x:DataType="vm:MainViewViewModel">

  <UserControl.Resources>
    <!-- Theme resources will be provided by DynamicResource bindings -->
    <!-- Remove hardcoded colors and use theme resources from App.axaml -->
  </UserControl.Resources>

  <!-- Keyboard shortcuts -->
  <UserControl.KeyBindings>
    <KeyBinding Gesture="F5" Command="{Binding RefreshCommand}"/>
    <KeyBinding Gesture="Ctrl+S" Command="{Binding OpenSettingsCommand}"/>
    <KeyBinding Gesture="Ctrl+H" Command="{Binding OpenPersonalHistoryCommand}"/>
    <KeyBinding Gesture="Escape" Command="{Binding CancelCommand}"/>
    <!-- Remove tab specific shortcuts -->
    <KeyBinding Gesture="Delete" Command="{Binding RemoveItemViewModel.DeleteCommand}"/>
    <KeyBinding Gesture="Ctrl+Z" Command="{Binding RemoveItemViewModel.UndoCommand}"/>
    <KeyBinding Gesture="Ctrl+P" Command="{Binding RemoveItemViewModel.PrintCommand}"/>
  </UserControl.KeyBindings>

  <!-- RESPONSIVE: Dynamic sizing with content-aware scaling and monitor awareness -->
  <Viewbox Stretch="Uniform" 
           StretchDirection="Both"
           HorizontalAlignment="Center"
           VerticalAlignment="Center">
    <!-- Dynamic dimensions that adapt to content size with proper constraints -->
    <Grid MinWidth="800" MinHeight="500" 
          MaxWidth="1600" MaxHeight="1200"
          Width="1200" Height="700"
          RowDefinitions="Auto,*,Auto" 
          Background="{DynamicResource MTM_Shared_Logic.MainBackground}"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
      
      <!-- Header Menu with Black/Gold Branding - Auto-sizing -->
      <Border Grid.Row="0" 
              Background="{DynamicResource MTM_Shared_Logic.PageHeaders}"
              Padding="24,8"
              BoxShadow="0 2 8 0 #1A000000"
              HorizontalAlignment="Stretch">
        <Grid ColumnDefinitions="*,Auto" HorizontalAlignment="Stretch">
          <!-- Left side: Menu -->
          <Menu Grid.Column="0"
                Background="Transparent" 
                Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}"
                HorizontalAlignment="Left">
            <MenuItem Header="_File" Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}">
              <MenuItem Header="_Settings" Command="{Binding OpenSettingsCommand}"/>
              <Separator/>
              <MenuItem Header="E_xit" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="_View" Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}">
              <MenuItem Header="_Personal History" Command="{Binding OpenPersonalHistoryCommand}"/>
            </MenuItem>
            <!-- Development builds only -->
            <MenuItem Header="_Help" 
                      Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}"
                      IsVisible="{Binding ShowDevelopmentMenu, FallbackValue=False}">
              <MenuItem Header="_About" Command="{Binding OpenAboutCommand}"/>
            </MenuItem>
          </Menu>
          
          <!-- Right side: Theme Quick Switcher -->
          <views:ThemeQuickSwitcher Grid.Column="1"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Margin="16,0,0,0"/>
        </Grid>
      </Border>

      <!-- Main Content Area - Content-aware sizing with proper constraints -->
      <Grid Grid.Row="1" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"
            MinHeight="300">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" MinWidth="400" MaxWidth="1200"/>
          <ColumnDefinition Width="{Binding QuickActionsPanelWidth}" MinWidth="0" MaxWidth="400"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Modern Tab Control with Gold Accents - Responsive with constraints -->
        <Border Grid.Column="0" 
                Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="16"
                BoxShadow="0 2 8 0 #11000000"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                MinWidth="350"
                MinHeight="250">
          <TabControl x:Name="MainForm_TabControl"
                      SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay, FallbackValue=0}"
                      Background="Transparent"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      HorizontalContentAlignment="Stretch"
                      VerticalContentAlignment="Stretch">
            <TabItem Header="📦 Inventory">
              <Border Padding="16" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      MinHeight="200">
                <!-- Content stretches to fill available space with size constraints -->
                <ContentControl Content="{Binding InventoryContent}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"/>
              </Border>
            </TabItem>
            <TabItem Header="🗑️ Remove">
              <Border Padding="16" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      MinHeight="200">
                <!-- Content stretches to fill available space with size constraints -->
                <ContentControl Content="{Binding RemoveContent}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"/>
              </Border>
            </TabItem>
            <TabItem Header="🔄 Transfer">
              <Border Padding="16" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      MinHeight="200">
                <!-- Content stretches to fill available space with size constraints -->
                <ContentControl Content="{Binding TransferContent}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"/>
              </Border>
            </TabItem>
          </TabControl>
        </Border>

        <!-- Right Panel: Quick Actions with Gold Theme - Responsive with constraints -->
        <Border Grid.Column="1"
                Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="0,16,16,16"
                BoxShadow="0 2 8 0 #11000000"
                IsVisible="{Binding IsAdvancedPanelVisible, FallbackValue=True}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                MinWidth="150"
                MaxWidth="350">
          <Grid ColumnDefinitions="*,Auto"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <!-- Quick Actions Content - Scrollable and resizable with constraints -->
            <Border Grid.Column="0"
                    IsVisible="{Binding IsQuickActionsPanelExpanded, FallbackValue=True}"
                    Padding="4"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    MinWidth="120">
              <ScrollViewer HorizontalScrollBarVisibility="Auto"
                            VerticalScrollBarVisibility="Auto"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                <views:QuickButtonsView DataContext="{Binding QuickButtonsViewModel}"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"/>
              </ScrollViewer>
            </Border>

            <!-- Collapsible Vertical Header Bar with Gold Theme -->
            <Border Grid.Column="1"
                    Background="{DynamicResource MTM_Shared_Logic.PrimaryAction}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1,0,0,0"
                    Width="32"
                    CornerRadius="0,8,8,0"
                    VerticalAlignment="Stretch">
              <Grid RowDefinitions="*,Auto,Auto,40"
                    VerticalAlignment="Stretch">
                <!-- Quick Actions Icon (Blue on Gold) -->
                <TextBlock Grid.Row="1"
                           Text=" "
                           FontSize="16"
                           Foreground="{DynamicResource MTM_Shared_Logic.InteractiveText}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,0,0,6"
                           ToolTip.Tip="Quick Actions Panel"/>
                
                <!-- Toggle Button -->
                <Button Grid.Row="3"
                        Command="{Binding ToggleQuickActionsPanelCommand}"
                        Width="20"
                        Height="20"
                        Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                        Foreground="{DynamicResource MTM_Shared_Logic.InteractiveText}"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                        CornerRadius="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="6,0,6,6"
                        Cursor="Hand"
                        ToolTip.Tip="Toggle Quick Actions Panel">
                  <TextBlock Text="{Binding QuickActionsCollapseButtonIcon, FallbackValue='◄', TargetNullValue='◄'}"
                             FontSize="10"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Button>
              </Grid>
            </Border>
          </Grid>
        </Border>
      </Grid>

      <!-- Modern Status Bar with Black/Gold Theme - Auto-sizing with constraints -->
      <Border Grid.Row="2"
              Background="{DynamicResource MTM_Shared_Logic.StatusBarBackgroundBrush}"
              Padding="24,6"
              HorizontalAlignment="Stretch"
              MinHeight="32">
        <Grid ColumnDefinitions="Auto,*,Auto,Auto" 
              ColumnSpacing="24"
              HorizontalAlignment="Stretch">
          <!-- Connection Status with Gold Accent -->
          <Border Grid.Column="0" 
                  Background="{DynamicResource MTM_Shared_Logic.DarkNavigation}"
                  Padding="8,4"
                  CornerRadius="20"
                  HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal" Spacing="6">
              <TextBlock Text="🔗" FontSize="12"/>
              <TextBlock Text="Connection:" 
                         Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}" 
                         Opacity="0.8"
                         FontSize="11"/>
              <TextBlock Text="{Binding ConnectionStatus, FallbackValue='Connected', TargetNullValue='Unknown'}"
                         Foreground="{DynamicResource MTM_Shared_Logic.PrimaryAction}"
                         FontWeight="SemiBold"
                         FontSize="11"/>
            </StackPanel>
          </Border>

          <!-- Progress Bar Area - Flexible sizing with constraints -->
          <StackPanel Grid.Column="1" 
                      Orientation="Horizontal" 
                      Spacing="12" 
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      MinWidth="200">
            <!-- Connection Strength -->
            <StackPanel Orientation="Horizontal" Spacing="6">
              <TextBlock Text="Signal" 
                         Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}" 
                         Opacity="0.8"
                         FontSize="10"/>
              <ProgressBar Minimum="0" Maximum="100" 
                           Width="80" Height="6" 
                           Value="{Binding ConnectionStrength, FallbackValue=100}"
                           Foreground="{DynamicResource MTM_Shared_Logic.PrimaryAction}"
                           Background="{DynamicResource MTM_Shared_Logic.DarkNavigation}"
                           CornerRadius="3"/>
            </StackPanel>

            <!-- Main Progress -->
            <StackPanel Orientation="Horizontal" Spacing="6">
              <TextBlock Text="Progress" 
                         Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}" 
                         Opacity="0.8"
                         FontSize="10"/>
              <ProgressBar Minimum="0" Maximum="100"
                           Width="100" Height="6"
                           Value="{Binding ProgressValue, FallbackValue=0}"
                           Foreground="{DynamicResource MTM_Shared_Logic.InteractiveText}"
                           Background="{DynamicResource MTM_Shared_Logic.DarkNavigation}"
                           CornerRadius="3"/>
            </StackPanel>
          </StackPanel>

          <!-- Status Text with Modern Styling -->
          <Border Grid.Column="2" 
                  Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                  BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                  BorderThickness="1"
                  Padding="8,4"
                  CornerRadius="4"
                  HorizontalAlignment="Right">
            <TextBlock Text="{Binding StatusText, FallbackValue='Ready', TargetNullValue='Ready'}"
                       Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                       FontSize="11"
                       VerticalAlignment="Center"/>
          </Border>

          <!-- Version Info -->
          <TextBlock Grid.Column="3"
                     Text="MTM WIP v1.0"
                     Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}"
                     Opacity="0.6"
                     FontSize="9"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Right"/>
        </Grid>
      </Border>
    </Grid>
  </Viewbox>
</UserControl>

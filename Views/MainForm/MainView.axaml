<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MTM_WIP_Application_Avalonia.ViewModels"
             xmlns:views="using:MTM_WIP_Application_Avalonia.Views"
             mc:Ignorable="d"
             d:DesignWidth="1200"
             d:DesignHeight="700"
             x:Class="MTM_WIP_Application_Avalonia.Views.MainView"
             x:CompileBindings="True"
             x:DataType="vm:MainViewViewModel">

  <!-- Keyboard shortcuts -->
  <UserControl.KeyBindings>
    <KeyBinding Gesture="F5" Command="{Binding RefreshCommand}"/>
    <KeyBinding Gesture="Ctrl+S" Command="{Binding OpenSettingsCommand}"/>
    <KeyBinding Gesture="Ctrl+H" Command="{Binding OpenPersonalHistoryCommand}"/>
    <KeyBinding Gesture="Escape" Command="{Binding CancelCommand}"/>
    <!-- Remove tab specific shortcuts -->
    <KeyBinding Gesture="Delete" Command="{Binding RemoveItemViewModel.DeleteCommand}"/>
    <KeyBinding Gesture="Ctrl+Z" Command="{Binding RemoveItemViewModel.UndoCommand}"/>
    <KeyBinding Gesture="Ctrl+P" Command="{Binding RemoveItemViewModel.PrintCommand}"/>
  </UserControl.KeyBindings>

  <!-- MANDATORY: Viewbox wrapper for proportional scaling -->
  <Viewbox Stretch="Uniform" StretchDirection="Both">
    <!-- Fixed dimensions for scaling reference -->
    <Grid Width="1200" Height="700" RowDefinitions="Auto,*,Auto" Background="{DynamicResource ContentBackgroundBrush}">
    <!-- Menu (MenuStrip) with MTM styling -->
    <Border Grid.Row="0" 
            Background="{DynamicResource PrimaryDarkBrush}"
            BoxShadow="0 1 3 0 #22000000">
      <Menu Background="Transparent" Foreground="{DynamicResource LightTextBrush}">
        <MenuItem Header="_File" Foreground="{DynamicResource LightTextBrush}">
          <MenuItem Header="_Settings" Command="{Binding OpenSettingsCommand}"/>
          <Separator/>
          <MenuItem Header="E_xit" Command="{Binding ExitCommand}"/>
        </MenuItem>
        <MenuItem Header="_View" Foreground="{DynamicResource LightTextBrush}">
          <MenuItem Header="_Personal History" Command="{Binding OpenPersonalHistoryCommand}"/>
        </MenuItem>
        <!-- Development builds only -->
        <MenuItem Header="_Help" 
                  Foreground="{DynamicResource LightTextBrush}"
                  IsVisible="{Binding ShowDevelopmentMenu}">
          <MenuItem Header="_About" Command="{Binding OpenAboutCommand}"/>
        </MenuItem>
      </Menu>
    </Border>

    <!-- Main area (SplitContainer) -->
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      
      <!-- Left panel: TabControl with MTM styling -->
      <Border Grid.Column="0" 
              Background="{DynamicResource CardBackgroundBrush}"
              CornerRadius="8"
              Margin="8"
              BoxShadow="0 2 8 0 #11000000">
        <TabControl x:Name="MainForm_TabControl"
                    SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}"
                    Background="Transparent">
          <TabItem Header="Inventory">
            <Border Padding="16">
              <!-- Control_InventoryTab placeholder -->
              <ContentControl Content="{Binding InventoryContent}"/>
            </Border>
          </TabItem>
          <TabItem Header="Remove">
            <Border Padding="16">
              <!-- Control_RemoveTab placeholder -->
              <ContentControl Content="{Binding RemoveContent}"/>
            </Border>
          </TabItem>
          <TabItem Header="Transfer">
            <Border Padding="16">
              <!-- Control_TransferTab placeholder -->
              <ContentControl Content="{Binding TransferContent}"/>
            </Border>
          </TabItem>
        </TabControl>
      </Border>

      <!-- Splitter with MTM styling - only visible when panel is visible -->
      <GridSplitter Grid.Column="1"
                    Background="{DynamicResource AccentBrush}"
                    ResizeDirection="Columns"
                    ShowsPreview="True"
                    HorizontalAlignment="Stretch"
                    Width="6"
                    CornerRadius="3"
                    IsVisible="{Binding IsAdvancedPanelVisible}"/>

      <!-- Right panel: Quick Actions with MTM styling -->
      <Border Grid.Column="2"
              Background="{DynamicResource CardBackgroundBrush}"
              CornerRadius="8"
              Margin="0,8,8,8"
              BoxShadow="0 2 8 0 #11000000"
              IsVisible="{Binding IsAdvancedPanelVisible}"
              Width="300">
        <!-- Quick Actions content without header -->
        <ScrollViewer Padding="8">
          <views:QuickButtonsView DataContext="{Binding QuickButtonsViewModel}"/>
        </ScrollViewer>
      </Border>
    </Grid>

    <!-- Status bar (StatusStrip) with MTM styling -->
    <Border Grid.Row="2"
            Background="{DynamicResource StatusBarBackgroundBrush}"
            Padding="16,8">
      <Grid ColumnDefinitions="*,Auto,*,Auto" ColumnSpacing="16">
        <!-- Connection status -->
        <StackPanel Orientation="Horizontal" Spacing="8" Grid.Column="0">
          <TextBlock Text="Connection:" 
                     Foreground="{DynamicResource LightTextBrush}" 
                     Opacity="0.8"/>
          <TextBlock Text="{Binding ConnectionStatus}"
                     Foreground="{DynamicResource AccentBrush}"
                     FontWeight="Medium"/>
        </StackPanel>

        <!-- Connection strength -->
        <StackPanel Orientation="Horizontal" Spacing="8" Grid.Column="1" VerticalAlignment="Center">
          <TextBlock Text="Signal" 
                     Foreground="{DynamicResource LightTextBrush}" 
                     Opacity="0.8"/>
          <ProgressBar Minimum="0" Maximum="100" 
                       Width="120" Height="12" 
                       Value="{Binding ConnectionStrength}"
                       Foreground="{DynamicResource AccentBrush}"
                       Background="{DynamicResource SecondaryDarkBrush}"/>
        </StackPanel>

        <!-- Progress -->
        <ProgressBar Grid.Column="2"
                     Minimum="0" Maximum="100"
                     Height="14"
                     Value="{Binding ProgressValue}"
                     Foreground="{DynamicResource AccentBrush}"
                     Background="{DynamicResource SecondaryDarkBrush}"/>

        <!-- Status text -->
        <TextBlock Grid.Column="3"
                   Text="{Binding StatusText}"
                   Foreground="{DynamicResource LightTextBrush}"
                   VerticalAlignment="Center"/>
      </Grid>
    </Border>
  </Grid>
  </Viewbox>
</UserControl>
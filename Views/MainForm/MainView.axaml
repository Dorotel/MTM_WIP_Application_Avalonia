<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MTM_WIP_Application_Avalonia.ViewModels"
             xmlns:views="using:MTM_WIP_Application_Avalonia.Views"
             mc:Ignorable="d"
             d:DesignWidth="1200"
             d:DesignHeight="700"
             x:Class="MTM_WIP_Application_Avalonia.Views.MainView"
             x:CompileBindings="True"
             x:DataType="vm:MainViewViewModel">

  <UserControl.Resources>
    <!-- Black, White, Gold Color Scheme -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#FFD700"/>           <!-- Gold -->
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#DAA520"/>       <!-- Dark Gold -->
    <SolidColorBrush x:Key="PrimaryGradientBrush" Color="#FFD700"/>   <!-- Gold Gradient -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#F5F5DC"/>         <!-- Beige -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FFFFFF"/>     <!-- White -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>    <!-- White -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#000000"/>  <!-- Black -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#000000"/><!-- Black -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>            <!-- Light Gray -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#000000"/>       <!-- Black Text -->
    <SolidColorBrush x:Key="LightTextBrush" Color="#FFFFFF"/>         <!-- White Text -->
    <SolidColorBrush x:Key="AccentBrush" Color="#4169E1"/>            <!-- Royal Blue for icons -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#DC143C"/>             <!-- Crimson -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#228B22"/>           <!-- Forest Green -->
  </UserControl.Resources>

  <!-- Keyboard shortcuts -->
  <UserControl.KeyBindings>
    <KeyBinding Gesture="F5" Command="{Binding RefreshCommand}"/>
    <KeyBinding Gesture="Ctrl+S" Command="{Binding OpenSettingsCommand}"/>
    <KeyBinding Gesture="Ctrl+H" Command="{Binding OpenPersonalHistoryCommand}"/>
    <KeyBinding Gesture="Escape" Command="{Binding CancelCommand}"/>
    <!-- Remove tab specific shortcuts -->
    <KeyBinding Gesture="Delete" Command="{Binding RemoveItemViewModel.DeleteCommand}"/>
    <KeyBinding Gesture="Ctrl+Z" Command="{Binding RemoveItemViewModel.UndoCommand}"/>
    <KeyBinding Gesture="Ctrl+P" Command="{Binding RemoveItemViewModel.PrintCommand}"/>
  </UserControl.KeyBindings>

  <!-- MANDATORY: Viewbox wrapper for proportional scaling -->
  <Viewbox Stretch="Uniform" StretchDirection="Both">
    <!-- Fixed dimensions for scaling reference -->
    <Grid Width="1200" Height="700" RowDefinitions="Auto,*,Auto" Background="{StaticResource AppBackgroundBrush}">
      
      <!-- Header Menu with Black/Gold Branding -->
      <Border Grid.Row="0" 
              Background="{StaticResource HeaderBackgroundBrush}"
              Padding="24,8"
              BoxShadow="0 2 8 0 #1A000000">
        <Menu Background="Transparent" Foreground="{StaticResource LightTextBrush}">
          <MenuItem Header="_File" Foreground="{StaticResource LightTextBrush}">
            <MenuItem Header="_Settings" Command="{Binding OpenSettingsCommand}"/>
            <Separator/>
            <MenuItem Header="E_xit" Command="{Binding ExitCommand}"/>
          </MenuItem>
          <MenuItem Header="_View" Foreground="{StaticResource LightTextBrush}">
            <MenuItem Header="_Personal History" Command="{Binding OpenPersonalHistoryCommand}"/>
          </MenuItem>
          <!-- Development builds only -->
          <MenuItem Header="_Help" 
                    Foreground="{StaticResource LightTextBrush}"
                    IsVisible="{Binding ShowDevelopmentMenu, FallbackValue=False}">
            <MenuItem Header="_About" Command="{Binding OpenAboutCommand}"/>
          </MenuItem>
        </Menu>
      </Border>

      <!-- Main Content Area -->
      <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="{Binding QuickActionsPanelWidth, FallbackValue=300, TargetNullValue=300}"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Modern Tab Control with Gold Accents -->
        <Border Grid.Column="0" 
                Background="{StaticResource CardBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="16"
                BoxShadow="0 2 8 0 #11000000">
          <TabControl x:Name="MainForm_TabControl"
                      SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay, FallbackValue=0}"
                      Background="Transparent">
            <TabItem Header="ðŸ“¦ Inventory">
              <Border Padding="16">
                <!-- Control_InventoryTab placeholder -->
                <ContentControl Content="{Binding InventoryContent}"/>
              </Border>
            </TabItem>
            <TabItem Header="ðŸ—‘ï¸ Remove">
              <Border Padding="16">
                <!-- Control_RemoveTab placeholder -->
                <ContentControl Content="{Binding RemoveContent}"/>
              </Border>
            </TabItem>
            <TabItem Header="ðŸ”„ Transfer">
              <Border Padding="16">
                <!-- Control_TransferTab placeholder -->
                <ContentControl Content="{Binding TransferContent}"/>
              </Border>
            </TabItem>
            <TabItem Header="ðŸ§ª Test Controls">
              <Border Padding="16">
                <!-- Test Controls tab content -->
                <ContentControl Content="{Binding TestControlsContent}"/>
              </Border>
            </TabItem>
          </TabControl>
        </Border>

        <!-- Right Panel: Quick Actions with Gold Theme -->
        <Border Grid.Column="1"
                Background="{StaticResource CardBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="0,16,16,16"
                BoxShadow="0 2 8 0 #11000000"
                IsVisible="{Binding IsAdvancedPanelVisible, FallbackValue=True}">
          <Grid ColumnDefinitions="*,Auto">
            <!-- Quick Actions Content -->
            <Border Grid.Column="0"
                    IsVisible="{Binding IsQuickActionsPanelExpanded, FallbackValue=True}"
                    Padding="4">
              <ScrollViewer>
                <views:QuickButtonsView DataContext="{Binding QuickButtonsViewModel}"/>
              </ScrollViewer>
            </Border>

            <!-- Collapsible Vertical Header Bar with Gold Theme -->
            <Border Grid.Column="1"
                    Background="{StaticResource PrimaryBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1,0,0,0"
                    Width="32"
                    CornerRadius="0,8,8,0">
              <Grid RowDefinitions="*,Auto,Auto,*">
                <!-- Quick Actions Icon (Blue on Gold) -->
                <TextBlock Grid.Row="1"
                           Text="âš¡"
                           FontSize="16"
                           Foreground="{StaticResource AccentBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,0,0,6"
                           ToolTip.Tip="Quick Actions Panel"/>
                
                <!-- Toggle Button -->
                <Button Grid.Row="2"
                        Command="{Binding ToggleQuickActionsPanelCommand}"
                        Width="20"
                        Height="20"
                        Background="{StaticResource CardBackgroundBrush}"
                        Foreground="{StaticResource AccentBrush}"
                        BorderThickness="1"
                        BorderBrush="{StaticResource BorderBrush}"
                        CornerRadius="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="6,0,6,6"
                        Cursor="Hand"
                        ToolTip.Tip="Toggle Quick Actions Panel">
                  <TextBlock Text="{Binding QuickActionsCollapseButtonIcon, FallbackValue='â—„', TargetNullValue='â—„'}"
                             FontSize="10"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Button>
              </Grid>
            </Border>
          </Grid>
        </Border>
      </Grid>

      <!-- Modern Status Bar with Black/Gold Theme -->
      <Border Grid.Row="2"
              Background="{StaticResource StatusBarBackgroundBrush}"
              Padding="24,6">
        <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="24">
          <!-- Connection Status with Gold Accent -->
          <Border Grid.Column="0" 
                  Background="{StaticResource PrimaryDarkBrush}"
                  Padding="8,4"
                  CornerRadius="20">
            <StackPanel Orientation="Horizontal" Spacing="6">
              <TextBlock Text="ðŸ”—" FontSize="12"/>
              <TextBlock Text="Connection:" 
                         Foreground="{StaticResource LightTextBrush}" 
                         Opacity="0.8"
                         FontSize="11"/>
              <TextBlock Text="{Binding ConnectionStatus, FallbackValue='Connected', TargetNullValue='Unknown'}"
                         Foreground="{StaticResource PrimaryBrush}"
                         FontWeight="SemiBold"
                         FontSize="11"/>
            </StackPanel>
          </Border>

          <!-- Progress Bar Area -->
          <StackPanel Grid.Column="1" 
                      Orientation="Horizontal" 
                      Spacing="12" 
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center">
            <!-- Connection Strength -->
            <StackPanel Orientation="Horizontal" Spacing="6">
              <TextBlock Text="Signal" 
                         Foreground="{StaticResource LightTextBrush}" 
                         Opacity="0.8"
                         FontSize="10"/>
              <ProgressBar Minimum="0" Maximum="100" 
                           Width="80" Height="6" 
                           Value="{Binding ConnectionStrength, FallbackValue=100}"
                           Foreground="{StaticResource PrimaryBrush}"
                           Background="{StaticResource PrimaryDarkBrush}"
                           CornerRadius="3"/>
            </StackPanel>

            <!-- Main Progress -->
            <StackPanel Orientation="Horizontal" Spacing="6">
              <TextBlock Text="Progress" 
                         Foreground="{StaticResource LightTextBrush}" 
                         Opacity="0.8"
                         FontSize="10"/>
              <ProgressBar Minimum="0" Maximum="100"
                           Width="100" Height="6"
                           Value="{Binding ProgressValue, FallbackValue=0}"
                           Foreground="{StaticResource AccentBrush}"
                           Background="{StaticResource PrimaryDarkBrush}"
                           CornerRadius="3"/>
            </StackPanel>
          </StackPanel>

          <!-- Status Text with Modern Styling -->
          <Border Grid.Column="2" 
                  Background="{StaticResource CardBackgroundBrush}"
                  BorderBrush="{StaticResource BorderBrush}"
                  BorderThickness="1"
                  Padding="8,4"
                  CornerRadius="4">
            <TextBlock Text="{Binding StatusText, FallbackValue='Ready', TargetNullValue='Ready'}"
                       Foreground="{StaticResource PrimaryTextBrush}"
                       FontSize="11"
                       VerticalAlignment="Center"/>
          </Border>

          <!-- Version Info -->
          <TextBlock Grid.Column="3"
                     Text="MTM WIP v1.0"
                     Foreground="{StaticResource LightTextBrush}"
                     Opacity="0.6"
                     FontSize="9"
                     VerticalAlignment="Center"/>
        </Grid>
      </Border>
    </Grid>
  </Viewbox>
</UserControl>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MTM_WIP_Application_Avalonia.ViewModels"
             xmlns:views="using:MTM_WIP_Application_Avalonia.Views"
             mc:Ignorable="d"
             d:DesignWidth="1200"
             d:DesignHeight="700"
             x:Class="MTM_WIP_Application_Avalonia.Views.MainView"
             x:CompileBindings="True"
             x:DataType="vm:MainViewViewModel"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

  <UserControl.Resources>
    <!-- Resources are now provided by DynamicResource bindings from MTM themes -->
  </UserControl.Resources>

  <UserControl.Styles>
    <!-- Custom TabControl styling with MTM theme - No animations -->
    <Style Selector="TabControl">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="TabStripPlacement" Value="Top"/>
    </Style>

    <!-- TabItem header styling with better separation and alignment -->
    <Style Selector="TabItem">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Margin" Value="0,0,12,0"/>
      <Setter Property="Padding" Value="0"/>
      <Setter Property="MinWidth" Value="140"/>
      <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <!-- Custom TabItem header with MTM industrial styling -->
    <Style Selector="TabItem /template/ Border#PART_HeaderBorder">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderDarkBrush}"/>
      <Setter Property="BorderThickness" Value="2,2,2,0"/>
      <Setter Property="CornerRadius" Value="8,8,0,0"/>
      <Setter Property="Padding" Value="20,16"/>
      <Setter Property="MinHeight" Value="50"/>
    </Style>

    <!-- Selected TabItem gets the MTM gradient highlight -->
    <Style Selector="TabItem:selected /template/ Border#PART_HeaderBorder">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.PrimaryGradientBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
      <Setter Property="BorderThickness" Value="3,3,3,0"/>
      <Setter Property="BoxShadow" Value="0 -3 12 0 #44FF8F00"/>
    </Style>

    <!-- Hover effect for non-selected tabs -->
    <Style Selector="TabItem:pointerover:not(:selected) /template/ Border#PART_HeaderBorder">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"/>
      <Setter Property="BorderThickness" Value="2,2,2,0"/>
    </Style>

    <!-- Tab content area styling with proper alignment -->
    <Style Selector="TabControl /template/ Border#PART_ContentBorder">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"/>
      <Setter Property="BorderThickness" Value="2,0,2,2"/>
      <Setter Property="CornerRadius" Value="0,8,8,8"/>
      <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- Selected tab text styling - readable colors -->
    <Style Selector="TabItem:selected TextBlock">
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.HeadingText}"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Setter Property="FontSize" Value="15"/>
    </Style>

    <!-- Non-selected tab text styling -->
    <Style Selector="TabItem:not(:selected) TextBlock">
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BodyText}"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Icon styling for selected tabs -->
    <Style Selector="TabItem:selected Border">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.TextonDark}"/>
    </Style>

    <!-- Hover effects -->
    <Style Selector="TabItem:pointerover:not(:selected) Border">
      <Setter Property="Opacity" Value="0.9"/>
    </Style>

    <Style Selector="TabItem:pointerover:not(:selected) TextBlock">
      <Setter Property="Opacity" Value="0.95"/>
    </Style>
  </UserControl.Styles>

  <!-- Keyboard shortcuts -->
  <UserControl.KeyBindings>
    <KeyBinding Gesture="F5" Command="{Binding RefreshCommand}"/>
    <KeyBinding Gesture="Ctrl+S" Command="{Binding OpenSettingsCommand}"/>
    <KeyBinding Gesture="Ctrl+H" Command="{Binding OpenPersonalHistoryCommand}"/>
    <KeyBinding Gesture="Escape" Command="{Binding CancelCommand}"/>
    <!-- Remove tab specific shortcuts -->
    <KeyBinding Gesture="Delete" Command="{Binding RemoveItemViewModel.DeleteCommand}"/>
    <KeyBinding Gesture="Ctrl+Z" Command="{Binding RemoveItemViewModel.UndoCommand}"/>
    <KeyBinding Gesture="Ctrl+P" Command="{Binding RemoveItemViewModel.PrintCommand}"/>
  </UserControl.KeyBindings>

  <!-- Main container that stretches to fill entire available space -->
  <DockPanel HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch"
             LastChildFill="True">
    
    <!-- Header Menu with MTM Branding -->
    <Border DockPanel.Dock="Top"
            Background="{DynamicResource MTM_Shared_Logic.SidebarGradientBrush}"
            Padding="24,8"
            BoxShadow="0 2 8 0 #1A000000"
            HorizontalAlignment="Stretch">
      <Grid ColumnDefinitions="*,Auto" HorizontalAlignment="Stretch">
        <!-- Left side: Menu -->
        <Menu Grid.Column="0"
              Background="Transparent" 
              Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}"
              HorizontalAlignment="Left">
          <MenuItem Header="_File" Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}">
            <MenuItem Header="_Settings" Command="{Binding OpenSettingsCommand}"/>
            <Separator/>
            <MenuItem Header="E_xit" Command="{Binding ExitCommand}"/>
          </MenuItem>
          <MenuItem Header="_View" Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}">
            <MenuItem Header="_Personal History" Command="{Binding OpenPersonalHistoryCommand}"/>
          </MenuItem>
          <!-- Development builds only -->
          <MenuItem Header="_Help" 
                    Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}"
                    IsVisible="{Binding ShowDevelopmentMenu, FallbackValue=False}">
            <MenuItem Header="_About" Command="{Binding OpenAboutCommand}"/>
          </MenuItem>
        </Menu>
        
        <!-- Right side: Theme Quick Switcher -->
        <views:ThemeQuickSwitcher Grid.Column="1"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center"
                                 Margin="16,0,0,0"/>
      </Grid>
    </Border>

    <!-- Status Bar -->
    <Border DockPanel.Dock="Bottom"
            Background="{DynamicResource MTM_Shared_Logic.FooterBackgroundBrush}"
            Padding="24,8"
            HorizontalAlignment="Stretch"
            MinHeight="36">
      <Grid ColumnDefinitions="Auto,*,Auto,Auto" 
            ColumnSpacing="24"
            HorizontalAlignment="Stretch">
        <!-- Connection Status -->
        <Border Grid.Column="0" 
                Background="{DynamicResource MTM_Shared_Logic.PrimaryAction}"
                Padding="12,6"
                CornerRadius="16"
                HorizontalAlignment="Left">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <Border Background="{DynamicResource MTM_Shared_Logic.TextonDark}"
                    CornerRadius="8"
                    Width="16"
                    Height="16">
              <TextBlock Text="🔗" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <TextBlock Text="Connection:" 
                       Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}" 
                       FontSize="11"
                       FontWeight="Medium"/>
            <TextBlock Text="{Binding ConnectionStatus, FallbackValue='Connected', TargetNullValue='Unknown'}"
                       Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}"
                       FontWeight="Bold"
                       FontSize="11"/>
          </StackPanel>
        </Border>

        <!-- Progress Bar Area -->
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" 
                    Spacing="16" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    MinWidth="200">
          <!-- Connection Strength -->
          <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Signal" 
                       Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}" 
                       FontSize="10"
                       FontWeight="Medium"/>
            <ProgressBar Minimum="0" Maximum="100" 
                         Width="80" Height="8" 
                         Value="{Binding ConnectionStrength, FallbackValue=100}"
                         Foreground="{DynamicResource MTM_Shared_Logic.SuccessBrush}"
                         Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                         CornerRadius="4"/>
          </StackPanel>

          <!-- Main Progress -->
          <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Progress" 
                       Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}" 
                       FontSize="10"
                       FontWeight="Medium"/>
            <ProgressBar Minimum="0" Maximum="100"
                         Width="100" Height="8"
                         Value="{Binding ProgressValue, FallbackValue=0}"
                         Foreground="{DynamicResource MTM_Shared_Logic.ProcessingBrush}"
                         Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                         CornerRadius="4"/>
          </StackPanel>
        </StackPanel>

        <!-- Status Text -->
        <Border Grid.Column="2" 
                Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"
                BorderThickness="1"
                Padding="12,6"
                CornerRadius="6"
                HorizontalAlignment="Right">
          <TextBlock Text="{Binding StatusText, FallbackValue='Ready', TargetNullValue='Ready'}"
                     Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                     FontSize="11"
                     FontWeight="SemiBold"
                     VerticalAlignment="Center"/>
        </Border>

        <!-- Version Info -->
        <Border Grid.Column="3"
                Background="{DynamicResource MTM_Shared_Logic.TextonDark}"
                CornerRadius="12"
                Padding="8,4"
                HorizontalAlignment="Right">
          <TextBlock Text="MTM WIP v1.0"
                     Foreground="{DynamicResource MTM_Shared_Logic.TertiaryTextBrush}"
                     FontSize="9"
                     FontWeight="Medium"
                     VerticalAlignment="Center"/>
        </Border>
      </Grid>
    </Border>

    <!-- Main Content Area - Fills remaining space -->
    <Grid HorizontalAlignment="Stretch" 
          VerticalAlignment="Stretch"
          Margin="8">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" MinWidth="400"/>
        <ColumnDefinition Width="{Binding QuickActionsPanelWidth}" MinWidth="0"/>
      </Grid.ColumnDefinitions>
      
      <!-- Left Panel: Tab Control - Stretches fully -->
      <Border Grid.Column="0" 
              Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
              BorderBrush="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"
              BorderThickness="2"
              CornerRadius="8"
              Margin="8"
              BoxShadow="0 4 12 0 #22000000"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
        <TabControl x:Name="MainForm_TabControl"
                    SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay, FallbackValue=0}"
                    Background="Transparent"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch">
          
          <!-- Inventory Tab -->
          <TabItem>
            <TabItem.Header>
              <StackPanel Orientation="Horizontal" Spacing="12">
                <Border Background="{DynamicResource MTM_Shared_Logic.PrimaryAction}"
                        CornerRadius="10"
                        Width="24"
                        Height="24">
                  <TextBlock Text="📦" 
                             FontSize="14" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Inventory" 
                           FontSize="15" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
              </StackPanel>
            </TabItem.Header>
            <!-- Content container that stretches to fill all available space -->
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" LastChildFill="True">
              <ContentControl Content="{Binding InventoryContent}"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch"
                              VerticalContentAlignment="Stretch"/>
            </DockPanel>
          </TabItem>
          
          <!-- Remove Tab -->
          <TabItem>
            <TabItem.Header>
              <StackPanel Orientation="Horizontal" Spacing="12">
                <Border Background="{DynamicResource MTM_Shared_Logic.ErrorBrush}"
                        CornerRadius="10"
                        Width="24"
                        Height="24">
                  <TextBlock Text="🗑️" 
                             FontSize="14" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Remove" 
                           FontSize="15" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
              </StackPanel>
            </TabItem.Header>
            <!-- Content container that stretches to fill all available space -->
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" LastChildFill="True">
              <ContentControl Content="{Binding RemoveContent}"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch"
                              VerticalContentAlignment="Stretch"/>
            </DockPanel>
          </TabItem>
          
          <!-- Transfer Tab -->
          <TabItem>
            <TabItem.Header>
              <StackPanel Orientation="Horizontal" Spacing="12">
                <Border Background="{DynamicResource MTM_Shared_Logic.SuccessBrush}"
                        CornerRadius="10"
                        Width="24"
                        Height="24">
                  <TextBlock Text="🔄" 
                             FontSize="14" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Transfer" 
                           FontSize="15" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
              </StackPanel>
            </TabItem.Header>
            <!-- Content container that stretches to fill all available space -->
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" LastChildFill="True">
              <ContentControl Content="{Binding TransferContent}"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch"
                              VerticalContentAlignment="Stretch"/>
            </DockPanel>
          </TabItem>
        </TabControl>
      </Border>

      <!-- Right Panel: Quick Actions -->
      <Border Grid.Column="1"
              Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
              BorderBrush="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"
              BorderThickness="2"
              CornerRadius="8"
              Margin="0,8,8,8"
              BoxShadow="0 4 12 0 #22000000"
              IsVisible="{Binding IsAdvancedPanelVisible, FallbackValue=True}"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
        <Grid ColumnDefinitions="*,Auto"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
          <!-- Quick Actions Content - Scrollable and responsive -->
          <Border Grid.Column="0"
                  IsVisible="{Binding IsQuickActionsPanelExpanded, FallbackValue=True}"
                  Padding="4"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">
              <views:QuickButtonsView DataContext="{Binding QuickButtonsViewModel}"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"/>
            </ScrollViewer>
          </Border>

          <!-- Collapsible Vertical Header Bar -->
          <Border Grid.Column="1"
                  Background="{DynamicResource MTM_Shared_Logic.PrimaryGradientBrush}"
                  BorderBrush="{DynamicResource MTM_Shared_Logic.BorderDarkBrush}"
                  BorderThickness="1,0,0,0"
                  Width="36"
                  CornerRadius="0,8,8,0"
                  VerticalAlignment="Stretch">
            <Grid RowDefinitions="*,Auto,Auto,50"
                  VerticalAlignment="Stretch">
              <!-- Quick Actions Icon -->
              <Border Grid.Row="1"
                      Background="{DynamicResource MTM_Shared_Logic.TextonDark}"
                      CornerRadius="12"
                      Width="24"
                      Height="24"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,8">
                <TextBlock Text="⚡"
                           FontSize="14"
                           Foreground="{DynamicResource MTM_Shared_Logic.PrimaryAction}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           ToolTip.Tip="Quick Actions Panel"/>
              </Border>
              
              <!-- Toggle Button -->
              <Button Grid.Row="3"
                      Command="{Binding ToggleQuickActionsPanelCommand}"
                      Width="24"
                      Height="24"
                      Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                      Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                      BorderThickness="1"
                      BorderBrush="{DynamicResource MTM_Shared_Logic.BorderDarkBrush}"
                      CornerRadius="6"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Bottom"
                      Margin="6,0,6,12"
                      Cursor="Hand"
                      ToolTip.Tip="Toggle Quick Actions Panel">
                <TextBlock Text="{Binding QuickActionsCollapseButtonIcon, FallbackValue='◄', TargetNullValue='◄'}"
                           FontSize="12"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
              </Button>
            </Grid>
          </Border>
        </Grid>
      </Border>
    </Grid>
  </DockPanel>
</UserControl>

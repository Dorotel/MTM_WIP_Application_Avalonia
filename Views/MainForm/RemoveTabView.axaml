<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MTM_WIP_Application_Avalonia.ViewModels"
             xmlns:controls="using:Avalonia.Controls"
             xmlns:materialIcons="using:Material.Icons.Avalonia"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600"
             x:Class="MTM_WIP_Application_Avalonia.Views.RemoveTabView"
             x:CompileBindings="True"
             x:DataType="vm:RemoveItemViewModel">

  <!-- Modern MTM Remove Inventory Interface -->
  <ScrollViewer Classes="mtm-content">
    <StackPanel Spacing="24" Margin="24">
      
      <!-- Hero Section with MTM Gradient -->
      <Border Classes="mtm-hero-card" 
              Height="140">
        <Grid Margin="32">
          <StackPanel VerticalAlignment="Center" Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="12">
              <TextBlock Text="âž–" FontSize="28"/>
              <TextBlock Text="Inventory Removal"
                         FontSize="24"
                         FontWeight="Bold"
                         Foreground="{DynamicResource MTM.LightTextBrush}"/>
            </StackPanel>
            <TextBlock Text="Search and remove inventory items from the system with full tracking"
                       FontSize="14"
                       Foreground="{DynamicResource MTM.LightTextBrush}"
                       Opacity="0.9"/>
          </StackPanel>
        </Grid>
      </Border>
      
      <!-- Search Card -->
      <Border Classes="mtm-card-elevated">
        <Grid RowDefinitions="Auto,24,Auto" Margin="32">
          
          <!-- Search Header -->
          <Grid Grid.Row="0" ColumnDefinitions="Auto,16,*,Auto">
            <Border Grid.Column="0"
                    Background="{DynamicResource MTM.ErrorBrush}"
                    CornerRadius="8"
                    Width="40" Height="40">
              <TextBlock Text="ðŸ”" 
                         FontSize="20"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
            </Border>
            
            <StackPanel Grid.Column="2" Spacing="4">
              <TextBlock Text="Search Inventory"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource MTM.PrimaryTextBrush}"/>
              <TextBlock Text="Find items to remove from inventory"
                         FontSize="13"
                         Foreground="{DynamicResource MTM.SecondaryTextBrush}"/>
            </StackPanel>
            
            <!-- Quick Clear Button -->
            <Button Grid.Column="3"
                    Classes="mtm-secondary"
                    Command="{Binding ResetCommand}"
                    ToolTip.Tip="Clear search criteria"
                    Padding="8"
                    MinWidth="0">
              <TextBlock Text="ðŸ—‘ï¸" FontSize="14"/>
            </Button>
          </Grid>
          
          <!-- Search Controls -->
          <Grid Grid.Row="2" 
                RowDefinitions="Auto,16,Auto"
                ColumnDefinitions="Auto,24,*,24,Auto,24,*">
            
            <!-- Part ID Search -->
            <StackPanel Grid.Row="0" Grid.Column="0" 
                        Orientation="Horizontal" 
                        Spacing="8"
                        VerticalAlignment="Center">
              <TextBlock Text="ðŸ·ï¸" FontSize="16"/>
              <TextBlock Text="Part Number"
                         FontWeight="Medium"
                         Foreground="{DynamicResource MTM.PrimaryTextBrush}"/>
            </StackPanel>
            <ComboBox Grid.Row="0" Grid.Column="2"
                      Classes="mtm-combo"
                      PlaceholderText="Select or search part ID..."
                      ItemsSource="{Binding PartOptions}"
                      SelectedItem="{Binding SelectedPart, Mode=TwoWay}"
                      IsTextSearchEnabled="True"
                      ToolTip.Tip="Select or search for a part number"/>

            <!-- Operation Search -->
            <StackPanel Grid.Row="0" Grid.Column="4" 
                        Orientation="Horizontal" 
                        Spacing="8"
                        VerticalAlignment="Center">
              <TextBlock Text="âš™ï¸" FontSize="16"/>
              <TextBlock Text="Operation"
                         FontWeight="Medium"
                         Foreground="{DynamicResource MTM.PrimaryTextBrush}"/>
            </StackPanel>
            <ComboBox Grid.Row="0" Grid.Column="6"
                      Classes="mtm-combo"
                      PlaceholderText="Select operation..."
                      ItemsSource="{Binding OperationOptions}"
                      SelectedItem="{Binding SelectedOperation, Mode=TwoWay}"
                      ToolTip.Tip="Select an operation number (optional)"/>
            
            <!-- Search Actions -->
            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="7"
                        Orientation="Horizontal" 
                        Spacing="12"
                        HorizontalAlignment="Right">
              <Button Classes="mtm-secondary"
                      Command="{Binding ResetCommand}"
                      ToolTip.Tip="Reset search criteria and refresh all data">
                <StackPanel Orientation="Horizontal" Spacing="6">
                  <TextBlock Text="ðŸ”„" FontSize="14"/>
                  <TextBlock Text="Reset"/>
                </StackPanel>
              </Button>
              
              <Button Classes="mtm-primary"
                      Command="{Binding SearchCommand}"
                      ToolTip.Tip="Search inventory (F5)">
                <StackPanel Orientation="Horizontal" Spacing="6">
                  <TextBlock Text="ðŸ”" FontSize="14"/>
                  <TextBlock Text="Search"/>
                </StackPanel>
              </Button>
            </StackPanel>
          </Grid>
        </Grid>
      </Border>
      
      <!-- Results Card -->
      <Border Classes="mtm-card-elevated">
        <Grid RowDefinitions="Auto,24,Auto,24,Auto" Margin="32">
          
          <!-- Results Header -->
          <Grid Grid.Row="0" ColumnDefinitions="Auto,16,*,Auto">
            <Border Grid.Column="0"
                    Background="{DynamicResource MTM.InfoBrush}"
                    CornerRadius="8"
                    Width="40" Height="40">
              <TextBlock Text="ðŸ“Š" 
                         FontSize="20"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
            </Border>
            
            <StackPanel Grid.Column="2" Spacing="4">
              <TextBlock Text="Search Results"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource MTM.PrimaryTextBrush}"/>
              <TextBlock Text="{Binding InventoryItems.Count, StringFormat='{}{0} items found'}"
                         FontSize="13"
                         Foreground="{DynamicResource MTM.SecondaryTextBrush}"/>
            </StackPanel>
            
            <!-- Export Button -->
            <Button Grid.Column="3"
                    Classes="mtm-secondary"
                    Command="{Binding PrintCommand}"
                    IsEnabled="{Binding HasInventoryItems}"
                    ToolTip.Tip="Print current inventory view (Ctrl+P)">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <TextBlock Text="ðŸ–¨ï¸" FontSize="14"/>
                <TextBlock Text="Print"/>
              </StackPanel>
            </Button>
          </Grid>
          
          <!-- Data Grid Container -->
          <Grid Grid.Row="2">
            <!-- Data Grid -->
            <DataGrid ItemsSource="{Binding InventoryItems}"
                      SelectedItem="{Binding SelectedItem}"
                      IsVisible="{Binding HasInventoryItems}"
                      Classes="mtm-grid"
                      AutoGenerateColumns="False"
                      SelectionMode="Extended"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      Background="{DynamicResource MTM.CardBackgroundBrush}"
                      MinHeight="300">
              <DataGrid.Columns>
                <DataGridTextColumn Header="ðŸ“ Location" 
                                    Binding="{Binding Location}" 
                                    Width="*"/>
                <DataGridTextColumn Header="ðŸ·ï¸ Part ID" 
                                    Binding="{Binding PartId}" 
                                    Width="*"/>
                <DataGridTextColumn Header="âš™ï¸ Operation" 
                                    Binding="{Binding Operation}" 
                                    Width="Auto"/>
                <DataGridTextColumn Header="ðŸ”¢ Quantity" 
                                    Binding="{Binding Quantity}" 
                                    Width="Auto"/>
                <DataGridTextColumn Header="ðŸ“ Notes" 
                                    Binding="{Binding Notes}" 
                                    Width="2*"/>
              </DataGrid.Columns>
            </DataGrid>

            <!-- Empty State -->
            <StackPanel IsVisible="{Binding !HasInventoryItems}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Spacing="16">
              <Border Background="{DynamicResource MTM.PrimaryLightBrush}"
                      CornerRadius="60"
                      Width="120" Height="120"
                      HorizontalAlignment="Center">
                <TextBlock Text="ðŸ”" 
                           FontSize="48"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource MTM.PrimaryBrush}"/>
              </Border>
              <StackPanel Spacing="8">
                <TextBlock Text="No inventory items found"
                           HorizontalAlignment="Center"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource MTM.PrimaryTextBrush}"/>
                <TextBlock Text="Try adjusting your search criteria or use the reset button"
                           HorizontalAlignment="Center"
                           FontSize="12"
                           Foreground="{DynamicResource MTM.SecondaryTextBrush}"
                           TextAlignment="Center"
                           MaxWidth="250"/>
              </StackPanel>
            </StackPanel>
          </Grid>
          
          <!-- Action Panel -->
          <Grid Grid.Row="4" ColumnDefinitions="*,Auto,Auto,Auto">
            <!-- Selection Info -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        Spacing="8"
                        VerticalAlignment="Center"
                        IsVisible="{Binding SelectedItem, Converter={x:Static ObjectConverters.IsNotNull}}">
              <Border Background="{DynamicResource MTM.InfoLightBrush}"
                      CornerRadius="12"
                      Padding="8,4">
                <StackPanel Orientation="Horizontal" Spacing="6">
                  <TextBlock Text="âœ“" FontSize="12" Foreground="{DynamicResource MTM.InfoTextBrush}"/>
                  <TextBlock Text="Selected:" FontSize="12" Foreground="{DynamicResource MTM.InfoTextBrush}"/>
                  <TextBlock Text="{Binding SelectedItem.PartId}" 
                             FontWeight="SemiBold" 
                             FontSize="12"
                             Foreground="{DynamicResource MTM.InfoTextBrush}"/>
                </StackPanel>
              </Border>
            </StackPanel>
            
            <!-- Action Buttons -->
            <Button Grid.Column="1"
                    Classes="mtm-secondary"
                    Command="{Binding UndoCommand}"
                    IsEnabled="{Binding CanUndo}"
                    ToolTip.Tip="Restore last removed items (Ctrl+Z)">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <TextBlock Text="â†¶" FontSize="14"/>
                <TextBlock Text="Undo"/>
              </StackPanel>
            </Button>
            
            <Button Grid.Column="2"
                    Classes="mtm-secondary"
                    Command="{Binding AdvancedRemovalCommand}"
                    ToolTip.Tip="Open advanced removal features">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <TextBlock Text="ðŸ”§" FontSize="14"/>
                <TextBlock Text="Advanced"/>
              </StackPanel>
            </Button>
            
            <Button Grid.Column="3"
                    Classes="mtm-danger"
                    Command="{Binding DeleteCommand}"
                    IsEnabled="{Binding CanDelete}"
                    ToolTip.Tip="Remove selected items (Delete key)">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <TextBlock Text="ðŸ—‘ï¸" FontSize="14"/>
                <TextBlock Text="Remove"/>
              </StackPanel>
            </Button>
          </Grid>
        </Grid>
      </Border>
      
      <!-- Quick Info Panel -->
      <Border Classes="mtm-card"
              Background="{DynamicResource MTM.WarningLightBrush}">
        <Grid ColumnDefinitions="Auto,16,*,Auto" Margin="20">
          <TextBlock Grid.Column="0" 
                     Text="âš ï¸" 
                     FontSize="20"
                     VerticalAlignment="Center"/>
          
          <StackPanel Grid.Column="2" Spacing="4">
            <TextBlock Text="Removal Warning"
                       FontWeight="SemiBold"
                       FontSize="13"
                       Foreground="{DynamicResource MTM.WarningTextBrush}"/>
            <TextBlock Text="Deleted items can be restored using the Undo button until the session ends"
                       FontSize="11"
                       Foreground="{DynamicResource MTM.WarningTextBrush}"/>
          </StackPanel>
          
          <Button Grid.Column="3"
                  Classes="mtm-secondary"
                  Command="{Binding TogglePanelCommand}"
                  ToolTip.Tip="Toggle quick actions panel"
                  Padding="8,4"
                  MinWidth="0">
            <TextBlock Text="âš™ï¸" FontSize="12"/>
          </Button>
        </Grid>
      </Border>
    </StackPanel>
  </ScrollViewer>
</UserControl>

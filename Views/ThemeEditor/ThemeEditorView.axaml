<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MTM_WIP_Application_Avalonia.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="1000"
             d:DesignHeight="700"
             x:Class="MTM_WIP_Application_Avalonia.Views.ThemeEditorView"
             x:CompileBindings="False">

    <!-- Simplified Theme Editor Placeholder -->
    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
            Padding="20">
        <StackPanel Spacing="16" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Header -->
            <TextBlock Text="ðŸŽ¨ Advanced Theme Editor"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

            <!-- Placeholder Message -->
            <TextBlock Text="Advanced Theme Editor functionality will be reimplemented in a future update."
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

            <!-- Current Theme Info -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,16,0,0">
                <StackPanel Spacing="8">
                    <TextBlock Text="Current Theme: Light"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Use the main Settings panel to change themes."
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    <TextBlock Text="This advanced editor will provide detailed color customization capabilities."
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               TextWrapping="Wrap"
                               MaxWidth="300"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </Border>
</UserControl>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MTM_WIP_Application_Avalonia.ViewModels"
             xmlns:converters="using:MTM_WIP_Application_Avalonia.Converters"
             xmlns:materialIcons="using:Material.Icons.Avalonia"
             mc:Ignorable="d"
             d:DesignWidth="1000"
             d:DesignHeight="700"
             x:Class="MTM_WIP_Application_Avalonia.Views.ThemeEditorView"
             x:CompileBindings="True"
             x:DataType="vm:ThemeEditorViewModel"
             Background="{DynamicResource MTM_Shared_Logic.MainBackground}">

  <UserControl.Resources>
    <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    <converters:StringEqualsConverter x:Key="StringEqualsConverter" />
  </UserControl.Resources>

  <UserControl.Styles>
    <!-- MTM Theme Input Field Styles -->
    <Style Selector="TextBox.input-field">
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderDarkBrush}" />
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BodyText}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="Padding" Value="8,6" />
      <Setter Property="MinHeight" Value="32" />
      <Setter Property="HorizontalContentAlignment" Value="Left" />
      <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <!-- Error state styling -->
    <Style Selector="TextBox.input-field.error">
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.ErrorBrush}" />
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.ErrorLightBrush}" />
    </Style>

    <!-- Focus state styling -->
    <Style Selector="TextBox.input-field:focus">
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.FocusBrush}" />
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}" />
    </Style>

    <!-- Primary Button styling -->
    <Style Selector="Button.primary">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}" />
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderDarkBrush}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="MinHeight" Value="32" />
      <Setter Property="Padding" Value="12,6" />
    </Style>

    <!-- Secondary Button styling -->
    <Style Selector="Button.secondary">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.HeadingText}" />
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}" />
      <Setter Property="BorderThickness" Value="1.5" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="MinHeight" Value="32" />
      <Setter Property="Padding" Value="12,6" />
    </Style>

    <Style Selector="Button.secondary:pointerover">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}" />
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BorderDarkBrush}" />
    </Style>

    <!-- Navigation Button styling -->
    <Style Selector="Button.navigation">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BodyText}" />
      <Setter Property="BorderBrush" Value="Transparent" />
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="MinHeight" Value="40" />
      <Setter Property="Padding" Value="12,8" />
      <Setter Property="HorizontalContentAlignment" Value="Left" />
      <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style Selector="Button.navigation:pointerover">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.HeadingText}" />
    </Style>

    <Style Selector="Button.navigation.selected">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}" />
      <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <!-- Tertiary Button styling -->
    <Style Selector="Button.tertiary">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.InteractiveText}" />
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderBrush}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="MinHeight" Value="28" />
      <Setter Property="Padding" Value="8,4" />
    </Style>
  </UserControl.Styles>

  <!-- Main Layout Container - ScrollViewer for overflow handling -->
  <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                VerticalScrollBarVisibility="Auto" 
                Background="{DynamicResource MTM_Shared_Logic.MainBackground}">
    
    <Grid x:Name="MainContainer" 
          RowDefinitions="*,Auto" 
          MinWidth="800" 
          MinHeight="500" 
          Margin="8">

      <!-- Main Theme Editor Panel - Left Navigation + Right Content -->
      <Border Grid.Row="0"  
              Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
              BorderBrush="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}" 
              BorderThickness="1" 
              CornerRadius="6" 
              Padding="0" 
              Margin="0,0,0,8">
        
        <Grid x:Name="ThemeEditorGrid" ColumnDefinitions="280,*">
          
          <!-- Left Navigation Panel -->
          <Border Grid.Column="0" 
                  Background="{DynamicResource MTM_Shared_Logic.SidebarGradientBrush}" 
                  CornerRadius="6,0,0,6" 
                  Padding="16">
            
            <Grid RowDefinitions="Auto,*,Auto">
              
              <!-- Navigation Header -->
              <Border Grid.Row="0" 
                      Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                      CornerRadius="6" 
                      Padding="12,8" 
                      Margin="0,0,0,16">
                <Grid ColumnDefinitions="Auto,*,Auto">
                  <materialIcons:MaterialIcon Grid.Column="0" 
                                            Kind="Palette" 
                                            Width="16" 
                                            Height="16" 
                                            Foreground="{DynamicResource MTM_Shared_Logic.InteractiveText}" 
                                            VerticalAlignment="Center" 
                                            Margin="0,0,8,0" />
                  <TextBlock Grid.Column="1" 
                            Text="Theme Editor" 
                            FontSize="13" 
                            FontWeight="Bold" 
                            Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                            VerticalAlignment="Center" />
                  <!-- Unsaved Changes Indicator -->
                  <Border Grid.Column="2" 
                          Background="{DynamicResource MTM_Shared_Logic.WarningBrush}" 
                          CornerRadius="8" 
                          Padding="6,2" 
                          IsVisible="{Binding HasUnsavedChanges, FallbackValue=False}">
                    <TextBlock Text="●" 
                              FontSize="10" 
                              Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                              FontWeight="Bold" />
                  </Border>
                </Grid>
              </Border>

              <!-- Navigation Menu -->
              <StackPanel Grid.Row="1" Spacing="4">
                
                <!-- Core Colors Navigation -->
                <Button x:Name="CoreColorsNavButton"
                        Classes="navigation"
                        Classes.selected="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Core'}"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Core">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <materialIcons:MaterialIcon Kind="CircleMultiple" Width="16" Height="16" />
                    <TextBlock Text="Core Colors" FontSize="12" />
                  </StackPanel>
                </Button>

                <!-- Text Colors Navigation -->
                <Button x:Name="TextColorsNavButton"
                        Classes="navigation"
                        Classes.selected="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Text'}"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Text">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <materialIcons:MaterialIcon Kind="FormatText" Width="16" Height="16" />
                    <TextBlock Text="Text Colors" FontSize="12" />
                  </StackPanel>
                </Button>

                <!-- Background Colors Navigation -->
                <Button x:Name="BackgroundColorsNavButton"
                        Classes="navigation"
                        Classes.selected="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Background'}"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Background">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <materialIcons:MaterialIcon Kind="Image" Width="16" Height="16" />
                    <TextBlock Text="Background Colors" FontSize="12" />
                  </StackPanel>
                </Button>

                <!-- Status Colors Navigation -->
                <Button x:Name="StatusColorsNavButton"
                        Classes="navigation"
                        Classes.selected="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Status'}"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Status">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <materialIcons:MaterialIcon Kind="AlertCircle" Width="16" Height="16" />
                    <TextBlock Text="Status Colors" FontSize="12" />
                  </StackPanel>
                </Button>

                <!-- Border Colors Navigation -->
                <Button x:Name="BorderColorsNavButton"
                        Classes="navigation"
                        Classes.selected="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Border'}"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Border">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <materialIcons:MaterialIcon Kind="BorderAll" Width="16" Height="16" />
                    <TextBlock Text="Border Colors" FontSize="12" />
                  </StackPanel>
                </Button>

                <!-- Advanced Tools Navigation -->
                <Button x:Name="AdvancedToolsNavButton"
                        Classes="navigation"
                        Classes.selected="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Tools'}"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Tools">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <materialIcons:MaterialIcon Kind="Tools" Width="16" Height="16" />
                    <TextBlock Text="Advanced Tools" FontSize="12" />
                  </StackPanel>
                </Button>

              </StackPanel>

              <!-- Status Message in Sidebar -->
              <Border Grid.Row="2" 
                      Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                      CornerRadius="6" 
                      Padding="8" 
                      Margin="0,16,0,0">
                <TextBlock Text="{Binding StatusMessage, FallbackValue='Ready to edit theme colors'}" 
                          FontSize="10" 
                          Foreground="{DynamicResource MTM_Shared_Logic.BodyText}" 
                          TextWrapping="Wrap" />
              </Border>

            </Grid>
          </Border>

          <!-- Right Content Panel -->
          <Border Grid.Column="1" 
                  Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}" 
                  CornerRadius="0,6,6,0" 
                  Padding="24">
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled">
              
              <!-- Dynamic Content based on Selected Category -->
              <Grid>
                
                <!-- Core Colors Content -->
                <StackPanel Spacing="16" 
                           IsVisible="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Core'}">
                  
                  <TextBlock Text="Core Action Colors" 
                            FontSize="18" 
                            FontWeight="Bold" 
                            Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                            Margin="0,0,0,8" />
                  
                  <!-- Primary Action Color with Professional RGB/HSL/Hex Controls -->
                  <Border Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                          BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                          BorderThickness="1" 
                          CornerRadius="6" 
                          Padding="16" 
                          Margin="0,0,0,12">
                    <StackPanel Spacing="12">
                      
                      <!-- Header Row -->
                      <Grid ColumnDefinitions="*,80,40" ColumnSpacing="12">
                        <TextBlock Grid.Column="0" 
                                  Text="Primary Action Color" 
                                  FontSize="14" 
                                  FontWeight="Bold" 
                                  Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                                  VerticalAlignment="Center" />
                        <!-- Large Color Preview -->
                        <Border Grid.Column="1" 
                               Background="{Binding PrimaryActionColor, Converter={StaticResource ColorToBrushConverter}}" 
                               CornerRadius="6" 
                               Height="40" 
                               BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                               BorderThickness="2"
                               Cursor="Hand"
                               PointerPressed="ColorPreview_OnPointerPressed"
                               Tag="PrimaryAction"
                               ToolTip.Tip="Click to open color picker">
                          <Border.Styles>
                            <Style Selector="Border:pointerover">
                              <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
                              <Setter Property="BorderThickness" Value="3" />
                            </Style>
                          </Border.Styles>
                        </Border>
                        <!-- Advanced Picker Button -->
                        <Button Grid.Column="2"
                               Classes="tertiary" 
                               Width="40" 
                               Height="40"
                               Padding="8"
                               Command="{Binding OpenAdvancedColorPickerCommand}"
                               CommandParameter="PrimaryAction"
                               ToolTip.Tip="Open professional color picker">
                          <materialIcons:MaterialIcon Kind="Tune" Width="20" Height="20" />
                        </Button>
                      </Grid>

                      <!-- Professional Color Input Controls -->
                      <Grid ColumnDefinitions="60,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="8" RowSpacing="8">
                        
                        <!-- Hex Input -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Hex:" FontWeight="Medium" VerticalAlignment="Center" />
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                Text="{Binding PrimaryActionColorHex, Mode=TwoWay}" 
                                Classes="input-field"
                                Watermark="#0078D4"
                                KeyboardNavigation.IsTabStop="True"
                                ToolTip.Tip="Enter hex color code (e.g., #0078D4)" />
                        
                        <!-- RGB Sliders -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="RGB:" FontWeight="Medium" VerticalAlignment="Center" />
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                          <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="R:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Value="{Binding PrimaryActionColorRed, Mode=TwoWay}" 
                                   Minimum="0" Maximum="255" 
                                   Width="60" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Red component (0-255)" />
                            <TextBlock Text="{Binding PrimaryActionColorRed}" FontSize="10" Width="30" VerticalAlignment="Center" />
                          </StackPanel>
                          <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="G:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Value="{Binding PrimaryActionColorGreen, Mode=TwoWay}" 
                                   Minimum="0" Maximum="255" 
                                   Width="60" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Green component (0-255)" />
                            <TextBlock Text="{Binding PrimaryActionColorGreen}" FontSize="10" Width="30" VerticalAlignment="Center" />
                          </StackPanel>
                          <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="B:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Value="{Binding PrimaryActionColorBlue, Mode=TwoWay}" 
                                   Minimum="0" Maximum="255" 
                                   Width="60" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Blue component (0-255)" />
                            <TextBlock Text="{Binding PrimaryActionColorBlue}" FontSize="10" Width="30" VerticalAlignment="Center" />
                          </StackPanel>
                        </StackPanel>

                        <!-- HSL Sliders -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="HSL:" FontWeight="Medium" VerticalAlignment="Center" />
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                          <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="H:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Value="{Binding PrimaryActionColorHue, Mode=TwoWay}" 
                                   Minimum="0" Maximum="360" 
                                   Width="60" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Hue (0-360°)" />
                            <TextBlock Text="{Binding PrimaryActionColorHue, StringFormat='{}{0}°'}" FontSize="10" Width="35" VerticalAlignment="Center" />
                          </StackPanel>
                          <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="S:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Value="{Binding PrimaryActionColorSaturation, Mode=TwoWay}" 
                                   Minimum="0" Maximum="100" 
                                   Width="60" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Saturation (0-100%)" />
                            <TextBlock Text="{Binding PrimaryActionColorSaturation, StringFormat='{}{0}%'}" FontSize="10" Width="35" VerticalAlignment="Center" />
                          </StackPanel>
                          <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="L:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Value="{Binding PrimaryActionColorLightness, Mode=TwoWay}" 
                                   Minimum="0" Maximum="100" 
                                   Width="60" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Lightness (0-100%)" />
                            <TextBlock Text="{Binding PrimaryActionColorLightness, StringFormat='{}{0}%'}" FontSize="10" Width="35" VerticalAlignment="Center" />
                          </StackPanel>
                        </StackPanel>

                        <!-- Color Actions -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Actions:" FontWeight="Medium" VerticalAlignment="Center" />
                        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                          <Button Classes="tertiary" 
                                 Content="Eye Dropper" 
                                 Command="{Binding EyeDropperCommand}" 
                                 CommandParameter="PrimaryAction"
                                 ToolTip.Tip="Pick color from screen">
                            <Button.ContentTemplate>
                              <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                  <materialIcons:MaterialIcon Kind="Eyedropper" Width="12" Height="12" />
                                  <TextBlock Text="Pick" FontSize="10" />
                                </StackPanel>
                              </DataTemplate>
                            </Button.ContentTemplate>
                          </Button>
                          <Button Classes="tertiary" 
                                 Content="Copy Hex" 
                                 Command="{Binding CopyColorCommand}" 
                                 CommandParameter="PrimaryAction"
                                 ToolTip.Tip="Copy hex code to clipboard">
                            <Button.ContentTemplate>
                              <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                  <materialIcons:MaterialIcon Kind="ContentCopy" Width="12" Height="12" />
                                  <TextBlock Text="Copy" FontSize="10" />
                                </StackPanel>
                              </DataTemplate>
                            </Button.ContentTemplate>
                          </Button>
                          <Button Classes="tertiary" 
                                 Content="Reset" 
                                 Command="{Binding ResetColorCommand}" 
                                 CommandParameter="PrimaryAction"
                                 ToolTip.Tip="Reset to default color">
                            <Button.ContentTemplate>
                              <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                  <materialIcons:MaterialIcon Kind="Refresh" Width="12" Height="12" />
                                  <TextBlock Text="Reset" FontSize="10" />
                                </StackPanel>
                              </DataTemplate>
                            </Button.ContentTemplate>
                          </Button>
                        </StackPanel>
                      </Grid>

                      <!-- WCAG Contrast Information -->
                      <Border Background="{DynamicResource MTM_Shared_Logic.InfoLightBrush}" 
                              CornerRadius="4" 
                              Padding="8">
                        <StackPanel Spacing="4">
                          <TextBlock Text="Accessibility Information" FontSize="11" FontWeight="Bold" />
                          <TextBlock Text="{Binding PrimaryActionColorContrastInfo}" 
                                    FontSize="10" 
                                    TextWrapping="Wrap" 
                                    Foreground="{DynamicResource MTM_Shared_Logic.TertiaryTextBrush}" />
                        </StackPanel>
                      </Border>
                      
                    </StackPanel>
                  </Border>

                  <!-- Secondary Action Color -->
                  <Grid ColumnDefinitions="140,*,80,40" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Secondary Action:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" 
                              Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding SecondaryActionColorHex, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #106EBE)"
                            ToolTip.Tip="Enter hex color code or click the color preview to open picker" />
                    <!-- Color Preview with Click-to-Edit -->
                    <Border Grid.Column="2" 
                           Background="{Binding SecondaryActionColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="2"
                           Cursor="Hand"
                           ToolTip.Tip="Click to open color picker">
                      <Border.Styles>
                        <Style Selector="Border:pointerover">
                          <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
                          <Setter Property="BorderThickness" Value="3" />
                        </Style>
                      </Border.Styles>
                    </Border>
                    <!-- Quick Color Picker Button -->
                    <Button Grid.Column="3"
                           Classes="tertiary" 
                           Width="32" 
                           Height="32"
                           Padding="4"
                           Command="{Binding OpenColorPickerCommand}"
                           CommandParameter="SecondaryAction"
                           ToolTip.Tip="Open advanced color picker">
                      <materialIcons:MaterialIcon Kind="Palette" Width="16" Height="16" />
                    </Button>
                  </Grid>

                  <!-- Accent Color -->
                  <Grid ColumnDefinitions="140,*,80,40" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Accent Color:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" 
                              Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding AccentColorHex, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #40A2E8)"
                            ToolTip.Tip="Enter hex color code or click the color preview to open picker" />
                    <!-- Color Preview with Click-to-Edit -->
                    <Border Grid.Column="2" 
                           Background="{Binding AccentColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="2"
                           Cursor="Hand"
                           ToolTip.Tip="Click to open color picker">
                      <Border.Styles>
                        <Style Selector="Border:pointerover">
                          <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
                          <Setter Property="BorderThickness" Value="3" />
                        </Style>
                      </Border.Styles>
                    </Border>
                    <!-- Quick Color Picker Button -->
                    <Button Grid.Column="3"
                           Classes="tertiary" 
                           Width="32" 
                           Height="32"
                           Padding="4"
                           Command="{Binding OpenColorPickerCommand}"
                           CommandParameter="Accent"
                           ToolTip.Tip="Open advanced color picker">
                      <materialIcons:MaterialIcon Kind="Palette" Width="16" Height="16" />
                    </Button>
                  </Grid>

                  <!-- Highlight Color -->
                  <Grid ColumnDefinitions="140,*,80,40" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Highlight Color:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" 
                              Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding HighlightColorHex, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #005A9E)"
                            ToolTip.Tip="Enter hex color code or click the color preview to open picker" />
                    <!-- Color Preview with Click-to-Edit -->
                    <Border Grid.Column="2" 
                           Background="{Binding HighlightColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="2"
                           Cursor="Hand"
                           ToolTip.Tip="Click to open color picker">
                      <Border.Styles>
                        <Style Selector="Border:pointerover">
                          <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
                          <Setter Property="BorderThickness" Value="3" />
                        </Style>
                      </Border.Styles>
                    </Border>
                    <!-- Quick Color Picker Button -->
                    <Button Grid.Column="3"
                           Classes="tertiary" 
                           Width="32" 
                           Height="32"
                           Padding="4"
                           Command="{Binding OpenColorPickerCommand}"
                           CommandParameter="Highlight"
                           ToolTip.Tip="Open advanced color picker">
                      <materialIcons:MaterialIcon Kind="Palette" Width="16" Height="16" />
                    </Button>
                  </Grid>
                  
                </StackPanel>

                <!-- Text Colors Content -->
                <StackPanel Spacing="16" 
                           IsVisible="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Text'}">
                  
                  <TextBlock Text="Text Colors" 
                            FontSize="18" 
                            FontWeight="Bold" 
                            Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                            Margin="0,0,0,8" />
                  
                  <!-- Heading Text Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Heading Text:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding HeadingTextColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #323130)" />
                    <Border Grid.Column="2" 
                           Background="{Binding HeadingTextColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Body Text Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Body Text:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding BodyTextColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #605E5C)" />
                    <Border Grid.Column="2" 
                           Background="{Binding BodyTextColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Interactive Text Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Interactive Text:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding InteractiveTextColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #0078D4)" />
                    <Border Grid.Column="2" 
                           Background="{Binding InteractiveTextColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Overlay Text Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Overlay Text:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding OverlayTextColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #FFFFFF)" />
                    <Border Grid.Column="2" 
                           Background="{Binding OverlayTextColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Tertiary Text Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Tertiary Text:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding TertiaryTextColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #8A8886)" />
                    <Border Grid.Column="2" 
                           Background="{Binding TertiaryTextColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>
                  
                </StackPanel>

                <!-- Background Colors Content -->
                <StackPanel Spacing="16" 
                           IsVisible="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Background'}">
                  
                  <TextBlock Text="Background Colors" 
                            FontSize="18" 
                            FontWeight="Bold" 
                            Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                            Margin="0,0,0,8" />
                  
                  <!-- Main Background Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Main Background:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding MainBackgroundColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #FFFFFF)" />
                    <Border Grid.Column="2" 
                           Background="{Binding MainBackgroundColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Card Background Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Card Background:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding CardBackgroundColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #F3F2F1)" />
                    <Border Grid.Column="2" 
                           Background="{Binding CardBackgroundColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Hover Background Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Hover Background:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding HoverBackgroundColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #F0F0F0)" />
                    <Border Grid.Column="2" 
                           Background="{Binding HoverBackgroundColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Panel Background Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Panel Background:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding PanelBackgroundColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #FAFAFA)" />
                    <Border Grid.Column="2" 
                           Background="{Binding PanelBackgroundColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Sidebar Background Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Sidebar Background:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding SidebarBackgroundColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #F8F9FA)" />
                    <Border Grid.Column="2" 
                           Background="{Binding SidebarBackgroundColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>
                  
                </StackPanel>

                <!-- Status Colors Content -->
                <StackPanel Spacing="16" 
                           IsVisible="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Status'}">
                  
                  <TextBlock Text="Status Colors" 
                            FontSize="18" 
                            FontWeight="Bold" 
                            Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                            Margin="0,0,0,8" />
                  
                  <!-- Success Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Success Color:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding SuccessColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #10B981)" />
                    <Border Grid.Column="2" 
                           Background="{Binding SuccessColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Warning Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Warning Color:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding WarningColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #F59E0B)" />
                    <Border Grid.Column="2" 
                           Background="{Binding WarningColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Error Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Error Color:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding ErrorColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #EF4444)" />
                    <Border Grid.Column="2" 
                           Background="{Binding ErrorColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Info Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Info Color:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding InfoColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #3B82F6)" />
                    <Border Grid.Column="2" 
                           Background="{Binding InfoColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>
                  
                </StackPanel>

                <!-- Border Colors Content -->
                <StackPanel Spacing="16" 
                           IsVisible="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Border'}">
                  
                  <TextBlock Text="Border Colors" 
                            FontSize="18" 
                            FontWeight="Bold" 
                            Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                            Margin="0,0,0,8" />
                  
                  <!-- Primary Border Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Primary Border:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding BorderColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #E5E7EB)" />
                    <Border Grid.Column="2" 
                           Background="{Binding BorderColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Accent Border Color -->
                  <Grid ColumnDefinitions="140,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Accent Border:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding BorderAccentColor, Mode=TwoWay}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #D1D5DB)" />
                    <Border Grid.Column="2" 
                           Background="{Binding BorderAccentColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>
                  
                </StackPanel>

                <!-- Advanced Tools Content -->
                <StackPanel Spacing="20" 
                           IsVisible="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Tools'}">
                  
                  <TextBlock Text="Advanced Theme Tools" 
                            FontSize="18" 
                            FontWeight="Bold" 
                            Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                            Margin="0,0,0,8" />
                  
                  <!-- Auto-Fill Algorithms Section -->
                  <Border Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                          BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                          BorderThickness="1" 
                          CornerRadius="6" 
                          Padding="16">
                    <StackPanel Spacing="12">
                      <TextBlock Text="Auto-Fill Algorithms" 
                                FontSize="14" 
                                FontWeight="Bold" 
                                Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" />
                      
                      <WrapPanel Orientation="Horizontal" ItemWidth="160" ItemHeight="36">
                        <Button Content="Material Design" 
                               Classes="tertiary" 
                               Command="{Binding AutoFillCoreColorsCommand}" 
                               Margin="0,0,8,8"
                               ToolTip.Tip="Generate harmonious color palette" />
                        <Button Content="Monochromatic" 
                               Classes="tertiary" 
                               Command="{Binding AutoFillMonochromaticCommand}" 
                               Margin="0,0,8,8"
                               ToolTip.Tip="Generate tints and shades" />
                        <Button Content="Complementary" 
                               Classes="tertiary" 
                               Command="{Binding AutoFillComplementaryCommand}" 
                               Margin="0,0,8,8"
                               ToolTip.Tip="Use opposite colors" />
                        <Button Content="Analogous" 
                               Classes="tertiary" 
                               Command="{Binding AutoFillAnalogousCommand}" 
                               Margin="0,0,8,8"
                               ToolTip.Tip="Adjacent color harmony" />
                        <Button Content="Triadic" 
                               Classes="tertiary" 
                               Command="{Binding AutoFillTriadicCommand}" 
                               Margin="0,0,8,8"
                               ToolTip.Tip="Three-color balance" />
                        <Button Content="Accessibility" 
                               Classes="tertiary" 
                               Command="{Binding AutoFillAccessibilityCommand}" 
                               Margin="0,0,8,8"
                               ToolTip.Tip="WCAG AAA compliant" />
                      </WrapPanel>
                    </StackPanel>
                  </Border>

                  <!-- Theme Templates Section -->
                  <Border Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                          BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                          BorderThickness="1" 
                          CornerRadius="6" 
                          Padding="16">
                    <StackPanel Spacing="12">
                      <TextBlock Text="Industry Templates" 
                                FontSize="14" 
                                FontWeight="Bold" 
                                Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" />
                      
                      <WrapPanel Orientation="Horizontal" ItemWidth="160" ItemHeight="36">
                        <Button Content="Manufacturing" 
                               Classes="tertiary" 
                               Command="{Binding ApplyOptimizedManufacturingThemeCommand}" 
                               Margin="0,0,8,8"
                               ToolTip.Tip="Industrial color scheme" />
                        <Button Content="Healthcare" 
                               Classes="tertiary" 
                               Command="{Binding ApplyHealthcareThemeCommand}" 
                               Margin="0,0,8,8"
                               ToolTip.Tip="Calming medical colors" />
                        <Button Content="Office" 
                               Classes="tertiary" 
                               Command="{Binding ApplyOfficeThemeCommand}" 
                               Margin="0,0,8,8"
                               ToolTip.Tip="Professional business colors" />
                        <Button Content="High Contrast" 
                               Classes="tertiary" 
                               Command="{Binding ApplyHighContrastThemeCommand}" 
                               Margin="0,0,8,8"
                               ToolTip.Tip="Maximum accessibility" />
                      </WrapPanel>
                    </StackPanel>
                  </Border>

                  <!-- Validation and Export Section -->
                  <Border Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                          BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                          BorderThickness="1" 
                          CornerRadius="6" 
                          Padding="16">
                    <StackPanel Spacing="12">
                      <TextBlock Text="Validation and Export" 
                                FontSize="14" 
                                FontWeight="Bold" 
                                Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" />
                      
                      <WrapPanel Orientation="Horizontal" ItemWidth="160" ItemHeight="36">
                        <Button Content="Validate Theme" 
                               Classes="tertiary" 
                               Command="{Binding ValidateThemeCommand}" 
                               Margin="0,0,8,8"
                               ToolTip.Tip="Check WCAG compliance" />
                        <Button Content="Export Theme" 
                               Classes="tertiary" 
                               Command="{Binding ExportThemeCommand}" 
                               Margin="0,0,8,8"
                               ToolTip.Tip="Export to file" />
                        <Button Content="Import Theme" 
                               Classes="tertiary" 
                               Command="{Binding ImportThemeCommand}" 
                               Margin="0,0,8,8"
                               ToolTip.Tip="Import from file" />
                        <Button Content="Generate Report" 
                               Classes="tertiary" 
                               Command="{Binding GenerateThemeReportCommand}" 
                               Margin="0,0,8,8"
                               ToolTip.Tip="Color accessibility report" />
                      </WrapPanel>
                    </StackPanel>
                  </Border>

                  <!-- Color History and Undo Section -->
                  <Border Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                          BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                          BorderThickness="1" 
                          CornerRadius="6" 
                          Padding="16">
                    <StackPanel Spacing="12">
                      <TextBlock Text="History and Tools" 
                                FontSize="14" 
                                FontWeight="Bold" 
                                Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" />
                      
                      <WrapPanel Orientation="Horizontal" ItemWidth="120" ItemHeight="36">
                        <Button Content="Undo" 
                               Classes="tertiary" 
                               Command="{Binding UndoCommand}" 
                               IsEnabled="{Binding CanUndo}"
                               Margin="0,0,8,8"
                               ToolTip.Tip="Undo last change" />
                        <Button Content="Redo" 
                               Classes="tertiary" 
                               Command="{Binding RedoCommand}" 
                               IsEnabled="{Binding CanRedo}"
                               Margin="0,0,8,8"
                               ToolTip.Tip="Redo last change" />
                        <Button Content="Brightness +20%" 
                               Classes="tertiary" 
                               Command="{Binding AdjustBrightnessCommand}" 
                               CommandParameter="20"
                               Margin="0,0,8,8"
                               ToolTip.Tip="Brighten all colors" />
                        <Button Content="Brightness -20%" 
                               Classes="tertiary" 
                               Command="{Binding AdjustBrightnessCommand}" 
                               CommandParameter="-20"
                               Margin="0,0,8,8"
                               ToolTip.Tip="Darken all colors" />
                      </WrapPanel>
                    </StackPanel>
                  </Border>

                  <!-- Recent Colors Palette Section -->
                  <Border Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                          BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                          BorderThickness="1" 
                          CornerRadius="6" 
                          Padding="16">
                    <StackPanel Spacing="12">
                      <TextBlock Text="Recent Colors" 
                                FontSize="14" 
                                FontWeight="Bold" 
                                Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" />
                      
                      <!-- Recent Colors Palette Display -->
                      <ItemsControl ItemsSource="{Binding RecentColors}"
                                   IsVisible="{Binding RecentColors.Count}">
                        <ItemsControl.ItemsPanel>
                          <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                          </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                          <DataTemplate>
                            <Border Background="{Binding Converter={StaticResource ColorToBrushConverter}}"
                                   Width="32" 
                                   Height="32" 
                                   CornerRadius="4" 
                                   BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                                   BorderThickness="1" 
                                   Margin="4,2"
                                   Cursor="Hand"
                                   ToolTip.Tip="{Binding .}">
                              <Border.Styles>
                                <Style Selector="Border:pointerover">
                                  <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
                                  <Setter Property="BorderThickness" Value="2" />
                                </Style>
                              </Border.Styles>
                            </Border>
                          </DataTemplate>
                        </ItemsControl.ItemTemplate>
                      </ItemsControl>
                      
                      <!-- Message when no recent colors -->
                      <TextBlock Text="No recent colors yet. Start editing colors to see them here."
                                Foreground="{DynamicResource MTM_Shared_Logic.TertiaryTextBrush}"
                                FontStyle="Italic"
                                FontSize="12"
                                IsVisible="{Binding !RecentColors.Count}" />
                    </StackPanel>
                  </Border>
                  
                </StackPanel>

              </Grid>
            </ScrollViewer>
          </Border>

        </Grid>
      </Border>

      <!-- Action Buttons Panel -->
      <Border Grid.Row="1" 
              Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
              BorderBrush="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}" 
              BorderThickness="1" 
              CornerRadius="6" 
              Padding="12" 
              Margin="0,0,0,8">
        
        <Grid x:Name="ActionButtonsGrid" ColumnDefinitions="Auto,*,Auto">
          
          <!-- Left Info Section -->
          <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
            <Border Background="{DynamicResource MTM_Shared_Logic.InfoColor}" 
                    CornerRadius="12" 
                    Padding="8,4">
              <TextBlock Text="{Binding SelectedCategory, StringFormat='Current: {0}', FallbackValue='Current: Core'}" 
                        FontSize="10" 
                        Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}" 
                        FontWeight="SemiBold" />
            </Border>
          </StackPanel>
          
          <!-- Center spacing -->
          <Grid Grid.Column="1" />
          
          <!-- Action buttons -->
          <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
            
            <Button Classes="secondary" 
                    Width="100" 
                    Command="{Binding PreviewThemeCommand}" 
                    IsEnabled="{Binding HasUnsavedChanges, FallbackValue=False}"
                    ToolTip.Tip="Preview changes without saving">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6">
                <materialIcons:MaterialIcon Kind="Eye" Width="14" Height="14" />
                <TextBlock Text="Preview" FontSize="11" />
              </StackPanel>
            </Button>
            
            <Button Classes="primary" 
                    Width="100" 
                    Command="{Binding ApplyThemeCommand}" 
                    IsEnabled="{Binding CanApplyTheme, FallbackValue=True}"
                    ToolTip.Tip="Apply and save theme changes">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6">
                <materialIcons:MaterialIcon Kind="Check" Width="14" Height="14" />
                <TextBlock Text="Apply" FontSize="11" FontWeight="SemiBold" />
              </StackPanel>
            </Button>
            
            <Button Classes="secondary" 
                    Width="100" 
                    Command="{Binding ResetThemeCommand}" 
                    IsEnabled="{Binding HasUnsavedChanges, FallbackValue=False}"
                    ToolTip.Tip="Reset to default colors">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6">
                <materialIcons:MaterialIcon Kind="Refresh" Width="14" Height="14" />
                <TextBlock Text="Reset" FontSize="11" />
              </StackPanel>
            </Button>
            
            <Button Classes="secondary" 
                    Width="80" 
                    Command="{Binding CloseCommand}" 
                    ToolTip.Tip="Close theme editor">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6">
                <materialIcons:MaterialIcon Kind="Close" Width="14" Height="14" />
                <TextBlock Text="Close" FontSize="11" />
              </StackPanel>
            </Button>
            
          </StackPanel>
        </Grid>
      </Border>

    </Grid>
  </ScrollViewer>
</UserControl>
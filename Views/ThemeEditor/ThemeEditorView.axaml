<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MTM_WIP_Application_Avalonia.ViewModels"
             xmlns:converters="using:MTM_WIP_Application_Avalonia.Converters"
             xmlns:materialIcons="using:Material.Icons.Avalonia"
             mc:Ignorable="d"
             d:DesignWidth="1000"
             d:DesignHeight="700"
             x:Class="MTM_WIP_Application_Avalonia.Views.ThemeEditorView"
             x:CompileBindings="True"
             x:DataType="vm:ThemeEditorViewModel"
             Background="{DynamicResource MTM_Shared_Logic.MainBackground}">

  <UserControl.Resources>
    <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    <converters:StringEqualsConverter x:Key="StringEqualsConverter" />
  </UserControl.Resources>

  <UserControl.Styles>
    <!-- MTM Theme Input Field Styles -->
    <Style Selector="TextBox.input-field">
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderDarkBrush}" />
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BodyText}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="Padding" Value="8,6" />
      <Setter Property="MinHeight" Value="32" />
      <Setter Property="HorizontalContentAlignment" Value="Left" />
      <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <!-- Error state styling -->
    <Style Selector="TextBox.input-field.error">
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.ErrorBrush}" />
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.ErrorLightBrush}" />
    </Style>

    <!-- Focus state styling -->
    <Style Selector="TextBox.input-field:focus">
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.FocusBrush}" />
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}" />
    </Style>

    <!-- Primary Button styling -->
    <Style Selector="Button.primary">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}" />
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderDarkBrush}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="MinHeight" Value="32" />
      <Setter Property="Padding" Value="12,6" />
    </Style>

    <!-- Secondary Button styling -->
    <Style Selector="Button.secondary">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.HeadingText}" />
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}" />
      <Setter Property="BorderThickness" Value="1.5" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="MinHeight" Value="32" />
      <Setter Property="Padding" Value="12,6" />
    </Style>

    <Style Selector="Button.secondary:pointerover">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}" />
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BorderDarkBrush}" />
    </Style>

    <!-- Navigation Button styling -->
    <Style Selector="Button.navigation">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BodyText}" />
      <Setter Property="BorderBrush" Value="Transparent" />
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="MinHeight" Value="40" />
      <Setter Property="Padding" Value="12,8" />
      <Setter Property="HorizontalContentAlignment" Value="Left" />
      <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style Selector="Button.navigation:pointerover">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.HeadingText}" />
    </Style>

    <Style Selector="Button.navigation.selected">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}" />
      <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <!-- Tertiary Button styling -->
    <Style Selector="Button.tertiary">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.InteractiveText}" />
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderBrush}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="MinHeight" Value="28" />
      <Setter Property="Padding" Value="8,4" />
    </Style>
  </UserControl.Styles>

  <!-- Main Layout Container - Fixed grid layout for proper stretching -->
  <Grid x:Name="MainContainer" 
        RowDefinitions="*,Auto" 
        Background="{DynamicResource MTM_Shared_Logic.MainBackground}" 
        Margin="8">

      <!-- Main Theme Editor Panel - Left Navigation + Right Content -->
      <Border Grid.Row="0"  
              Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
              BorderBrush="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}" 
              BorderThickness="1" 
              CornerRadius="6" 
              Padding="0" 
              Margin="0,0,0,8">
        
        <Grid x:Name="ThemeEditorGrid" ColumnDefinitions="280,*">
          
          <!-- Left Navigation Panel -->
          <Border Grid.Column="0" 
                  Background="{DynamicResource MTM_Shared_Logic.SidebarGradientBrush}" 
                  CornerRadius="6,0,0,6" 
                  Padding="16">
            
            <Grid RowDefinitions="Auto,*,Auto">
              
              <!-- Navigation Header -->
              <Border Grid.Row="0" 
                      Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                      CornerRadius="6" 
                      Padding="12,8" 
                      Margin="0,0,0,16">
                <Grid ColumnDefinitions="Auto,*,Auto">
                  <materialIcons:MaterialIcon Grid.Column="0" 
                                            Kind="Palette" 
                                            Width="16" 
                                            Height="16" 
                                            Foreground="{DynamicResource MTM_Shared_Logic.InteractiveText}" 
                                            VerticalAlignment="Center" 
                                            Margin="0,0,8,0" />
                  <TextBlock Grid.Column="1" 
                            Text="Theme Editor" 
                            FontSize="13" 
                            FontWeight="Bold" 
                            Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                            VerticalAlignment="Center" />
                  <!-- Unsaved Changes Indicator -->
                  <Border Grid.Column="2" 
                          Background="{DynamicResource MTM_Shared_Logic.WarningBrush}" 
                          CornerRadius="8" 
                          Padding="6,2" 
                          IsVisible="{Binding HasUnsavedChanges, FallbackValue=False}">
                    <TextBlock Text="●" 
                              FontSize="10" 
                              Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                              FontWeight="Bold" />
                  </Border>
                </Grid>
              </Border>

              <!-- Navigation Menu -->
              <StackPanel Grid.Row="1" Spacing="4">
                
                <!-- Core Colors Navigation -->
                <Button x:Name="CoreColorsNavButton"
                        Classes="navigation"
                        Classes.selected="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Core'}"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Core">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <materialIcons:MaterialIcon Kind="CircleMultiple" Width="16" Height="16" />
                    <TextBlock Text="Core Colors" FontSize="12" />
                  </StackPanel>
                </Button>

                <!-- Text Colors Navigation -->
                <Button x:Name="TextColorsNavButton"
                        Classes="navigation"
                        Classes.selected="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Text'}"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Text">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <materialIcons:MaterialIcon Kind="FormatText" Width="16" Height="16" />
                    <TextBlock Text="Text Colors" FontSize="12" />
                  </StackPanel>
                </Button>

                <!-- Background Colors Navigation -->
                <Button x:Name="BackgroundColorsNavButton"
                        Classes="navigation"
                        Classes.selected="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Background'}"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Background">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <materialIcons:MaterialIcon Kind="Image" Width="16" Height="16" />
                    <TextBlock Text="Background Colors" FontSize="12" />
                  </StackPanel>
                </Button>

                <!-- Status Colors Navigation -->
                <Button x:Name="StatusColorsNavButton"
                        Classes="navigation"
                        Classes.selected="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Status'}"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Status">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <materialIcons:MaterialIcon Kind="AlertCircle" Width="16" Height="16" />
                    <TextBlock Text="Status Colors" FontSize="12" />
                  </StackPanel>
                </Button>

                <!-- Border Colors Navigation -->
                <Button x:Name="BorderColorsNavButton"
                        Classes="navigation"
                        Classes.selected="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Border'}"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Border">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <materialIcons:MaterialIcon Kind="BorderAll" Width="16" Height="16" />
                    <TextBlock Text="Border Colors" FontSize="12" />
                  </StackPanel>
                </Button>

                <!-- Advanced Tools Navigation -->
                <Button x:Name="AdvancedToolsNavButton"
                        Classes="navigation"
                        Classes.selected="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Tools'}"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Tools">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <materialIcons:MaterialIcon Kind="Tools" Width="16" Height="16" />
                    <TextBlock Text="Advanced Tools" FontSize="12" />
                  </StackPanel>
                </Button>

              </StackPanel>

              <!-- Status Message in Sidebar -->
              <Border Grid.Row="2" 
                      Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                      CornerRadius="6" 
                      Padding="8" 
                      Margin="0,16,0,0">
                <TextBlock Text="{Binding StatusMessage, FallbackValue='Ready to edit theme colors'}" 
                          FontSize="10" 
                          Foreground="{DynamicResource MTM_Shared_Logic.BodyText}" 
                          TextWrapping="Wrap" />
              </Border>

            </Grid>
          </Border>

          <!-- Right Content Panel -->
          <Border Grid.Column="1" 
                  Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}" 
                  CornerRadius="0,6,6,0" 
                  Padding="24">
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled">
              
              <!-- Dynamic Content based on Selected Category -->
              <Grid>
                
                <!-- Core Colors Content -->
                <StackPanel Spacing="16" 
                           IsVisible="{Binding SelectedCategory, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Core'}">
                  
                  <TextBlock Text="Core Action Colors" 
                            FontSize="18" 
                            FontWeight="Bold" 
                            Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                            Margin="0,0,0,8" />
                  
                  <!-- Primary Action Color with Professional RGB/HSL/Hex Controls -->
                  <Border Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                          BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                          BorderThickness="1" 
                          CornerRadius="6" 
                          Padding="16" 
                          Margin="0,0,0,12">
                    <StackPanel Spacing="12">
                      
                      <!-- Header Row -->
                      <Grid ColumnDefinitions="*,80,40" ColumnSpacing="12">
                        <TextBlock Grid.Column="0" 
                                  Text="Primary Action Color" 
                                  FontSize="14" 
                                  FontWeight="Bold" 
                                  Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                                  VerticalAlignment="Center" />
                        <!-- Large Color Preview -->
                        <Border Grid.Column="1" 
                               Background="{Binding PrimaryActionColor, Converter={StaticResource ColorToBrushConverter}}" 
                               CornerRadius="6" 
                               Height="40" 
                               BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                               BorderThickness="2"
                               Cursor="Hand"
                               PointerPressed="ColorPreview_OnPointerPressed"
                               Tag="PrimaryAction"
                               ToolTip.Tip="Click to open color picker">
                          <Border.Styles>
                            <Style Selector="Border:pointerover">
                              <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
                              <Setter Property="BorderThickness" Value="3" />
                            </Style>
                          </Border.Styles>
                        </Border>
                        <!-- Advanced Picker Button -->
                        <Button Grid.Column="2"
                               Classes="tertiary" 
                               Width="40" 
                               Height="40"
                               Padding="8"
                               Command="{Binding OpenAdvancedColorPickerCommand}"
                               CommandParameter="PrimaryAction"
                               ToolTip.Tip="Open professional color picker">
                          <materialIcons:MaterialIcon Kind="Tune" Width="20" Height="20" />
                        </Button>
                      </Grid>

                      <!-- Professional Color Input Controls -->
                      <Grid ColumnDefinitions="60,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="8" RowSpacing="8">
                        
                        <!-- Hex Input -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Hex:" FontWeight="Medium" VerticalAlignment="Center" />
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                Text="{Binding PrimaryActionColorHex, Mode=TwoWay}" 
                                Classes="input-field"
                                Watermark="#0078D4"
                                KeyboardNavigation.IsTabStop="True"
                                ToolTip.Tip="Enter hex color code (e.g., #0078D4)" />
                        
                        <!-- RGB Sliders -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="RGB:" FontWeight="Medium" VerticalAlignment="Top" />
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Spacing="4">
                          <Grid ColumnDefinitions="20,*,40" ColumnSpacing="4">
                            <TextBlock Grid.Column="0" Text="R:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Grid.Column="1" 
                                   Value="{Binding PrimaryActionColorRed, Mode=TwoWay}" 
                                   Minimum="0" Maximum="255" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Red component (0-255)" />
                            <TextBlock Grid.Column="2" Text="{Binding PrimaryActionColorRed}" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right" />
                          </Grid>
                          <Grid ColumnDefinitions="20,*,40" ColumnSpacing="4">
                            <TextBlock Grid.Column="0" Text="G:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Grid.Column="1" 
                                   Value="{Binding PrimaryActionColorGreen, Mode=TwoWay}" 
                                   Minimum="0" Maximum="255" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Green component (0-255)" />
                            <TextBlock Grid.Column="2" Text="{Binding PrimaryActionColorGreen}" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right" />
                          </Grid>
                          <Grid ColumnDefinitions="20,*,40" ColumnSpacing="4">
                            <TextBlock Grid.Column="0" Text="B:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Grid.Column="1" 
                                   Value="{Binding PrimaryActionColorBlue, Mode=TwoWay}" 
                                   Minimum="0" Maximum="255" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Blue component (0-255)" />
                            <TextBlock Grid.Column="2" Text="{Binding PrimaryActionColorBlue}" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right" />
                          </Grid>
                        </StackPanel>

                        <!-- HSL Sliders -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="HSL:" FontWeight="Medium" VerticalAlignment="Top" />
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Spacing="4">
                          <Grid ColumnDefinitions="20,*,40" ColumnSpacing="4">
                            <TextBlock Grid.Column="0" Text="H:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Grid.Column="1" 
                                   Value="{Binding PrimaryActionColorHue, Mode=TwoWay}" 
                                   Minimum="0" Maximum="360" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Hue (0-360°)" />
                            <TextBlock Grid.Column="2" Text="{Binding PrimaryActionColorHue, StringFormat='{}{0}°'}" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right" />
                          </Grid>
                          <Grid ColumnDefinitions="20,*,40" ColumnSpacing="4">
                            <TextBlock Grid.Column="0" Text="S:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Grid.Column="1" 
                                   Value="{Binding PrimaryActionColorSaturation, Mode=TwoWay}" 
                                   Minimum="0" Maximum="100" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Saturation (0-100%)" />
                            <TextBlock Grid.Column="2" Text="{Binding PrimaryActionColorSaturation, StringFormat='{}{0}%'}" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right" />
                          </Grid>
                          <Grid ColumnDefinitions="20,*,40" ColumnSpacing="4">
                            <TextBlock Grid.Column="0" Text="L:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Grid.Column="1" 
                                   Value="{Binding PrimaryActionColorLightness, Mode=TwoWay}" 
                                   Minimum="0" Maximum="100" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Lightness (0-100%)" />
                            <TextBlock Grid.Column="2" Text="{Binding PrimaryActionColorLightness, StringFormat='{}{0}%'}" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right" />
                          </Grid>
                        </StackPanel>

                        <!-- Color Actions -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Actions:" FontWeight="Medium" VerticalAlignment="Top" />
                        <WrapPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                          <Button Classes="tertiary" 
                                 Margin="0,0,8,4"
                                 Command="{Binding EyeDropperCommand}" 
                                 CommandParameter="PrimaryAction"
                                 ToolTip.Tip="Pick color from screen">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                              <materialIcons:MaterialIcon Kind="Eyedropper" Width="12" Height="12" />
                              <TextBlock Text="Pick" FontSize="10" />
                            </StackPanel>
                          </Button>
                          <Button Classes="tertiary" 
                                 Margin="0,0,8,4"
                                 Command="{Binding CopyColorCommand}" 
                                 CommandParameter="PrimaryAction"
                                 ToolTip.Tip="Copy hex code to clipboard">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                              <materialIcons:MaterialIcon Kind="ContentCopy" Width="12" Height="12" />
                              <TextBlock Text="Copy" FontSize="10" />
                            </StackPanel>
                          </Button>
                          <Button Classes="tertiary" 
                                 Margin="0,0,8,4"
                                 Command="{Binding ResetColorCommand}" 
                                 CommandParameter="PrimaryAction"
                                 ToolTip.Tip="Reset to default color">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                              <materialIcons:MaterialIcon Kind="Refresh" Width="12" Height="12" />
                              <TextBlock Text="Reset" FontSize="10" />
                            </StackPanel>
                          </Button>
                        </WrapPanel>
                      </Grid>

                      <!-- WCAG Contrast Information -->
                      <Border Background="{DynamicResource MTM_Shared_Logic.InfoLightBrush}" 
                              CornerRadius="4" 
                              Padding="8">
                        <StackPanel Spacing="4">
                          <TextBlock Text="Accessibility Information" FontSize="11" FontWeight="Bold" />
                          <TextBlock Text="{Binding PrimaryActionColorContrastInfo}" 
                                    FontSize="10" 
                                    TextWrapping="Wrap" 
                                    Foreground="{DynamicResource MTM_Shared_Logic.TertiaryTextBrush}" />
                        </StackPanel>
                      </Border>
                      
                    </StackPanel>
                  </Border>

                  <!-- Secondary Action Color with Professional RGB/HSL/Hex Controls -->
                  <Border Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                          BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                          BorderThickness="1" 
                          CornerRadius="6" 
                          Padding="16" 
                          Margin="0,0,0,12">
                    <StackPanel Spacing="12">
                      
                      <!-- Header Row -->
                      <Grid ColumnDefinitions="*,80,40" ColumnSpacing="12">
                        <TextBlock Grid.Column="0" 
                                  Text="Secondary Action Color" 
                                  FontSize="14" 
                                  FontWeight="Bold" 
                                  Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                                  VerticalAlignment="Center" />
                        <!-- Large Color Preview -->
                        <Border Grid.Column="1" 
                               Background="{Binding SecondaryActionColor, Converter={StaticResource ColorToBrushConverter}}" 
                               CornerRadius="6" 
                               Height="40" 
                               BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                               BorderThickness="2"
                               Cursor="Hand"
                               PointerPressed="ColorPreview_OnPointerPressed"
                               Tag="SecondaryAction"
                               ToolTip.Tip="Click to open color picker">
                          <Border.Styles>
                            <Style Selector="Border:pointerover">
                              <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
                              <Setter Property="BorderThickness" Value="3" />
                            </Style>
                          </Border.Styles>
                        </Border>
                        <!-- Advanced Picker Button -->
                        <Button Grid.Column="2"
                               Classes="tertiary" 
                               Width="40" 
                               Height="40"
                               Padding="8"
                               Command="{Binding OpenAdvancedColorPickerCommand}"
                               CommandParameter="SecondaryAction"
                               ToolTip.Tip="Open professional color picker">
                          <materialIcons:MaterialIcon Kind="Tune" Width="20" Height="20" />
                        </Button>
                      </Grid>

                      <!-- Professional Color Input Controls -->
                      <Grid ColumnDefinitions="60,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="8" RowSpacing="8">
                        
                        <!-- Hex Input -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Hex:" FontWeight="Medium" VerticalAlignment="Center" />
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                Text="{Binding SecondaryActionColorHex, Mode=TwoWay}" 
                                Classes="input-field"
                                Watermark="#106EBE"
                                KeyboardNavigation.IsTabStop="True"
                                ToolTip.Tip="Enter hex color code (e.g., #106EBE)" />
                        
                        <!-- RGB Sliders -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="RGB:" FontWeight="Medium" VerticalAlignment="Top" />
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Spacing="4">
                          <Grid ColumnDefinitions="20,*,40" ColumnSpacing="4">
                            <TextBlock Grid.Column="0" Text="R:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Grid.Column="1" 
                                   Value="{Binding SecondaryActionColorRed, Mode=TwoWay}" 
                                   Minimum="0" Maximum="255" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Red component (0-255)" />
                            <TextBlock Grid.Column="2" Text="{Binding SecondaryActionColorRed}" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right" />
                          </Grid>
                          <Grid ColumnDefinitions="20,*,40" ColumnSpacing="4">
                            <TextBlock Grid.Column="0" Text="G:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Grid.Column="1" 
                                   Value="{Binding SecondaryActionColorGreen, Mode=TwoWay}" 
                                   Minimum="0" Maximum="255" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Green component (0-255)" />
                            <TextBlock Grid.Column="2" Text="{Binding SecondaryActionColorGreen}" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right" />
                          </Grid>
                          <Grid ColumnDefinitions="20,*,40" ColumnSpacing="4">
                            <TextBlock Grid.Column="0" Text="B:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Grid.Column="1" 
                                   Value="{Binding SecondaryActionColorBlue, Mode=TwoWay}" 
                                   Minimum="0" Maximum="255" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Blue component (0-255)" />
                            <TextBlock Grid.Column="2" Text="{Binding SecondaryActionColorBlue}" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right" />
                          </Grid>
                        </StackPanel>

                        <!-- HSL Sliders -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="HSL:" FontWeight="Medium" VerticalAlignment="Top" />
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Spacing="4">
                          <Grid ColumnDefinitions="20,*,40" ColumnSpacing="4">
                            <TextBlock Grid.Column="0" Text="H:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Grid.Column="1" 
                                   Value="{Binding SecondaryActionColorHue, Mode=TwoWay}" 
                                   Minimum="0" Maximum="360" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Hue (0-360°)" />
                            <TextBlock Grid.Column="2" Text="{Binding SecondaryActionColorHue, StringFormat='{}{0}°'}" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right" />
                          </Grid>
                          <Grid ColumnDefinitions="20,*,40" ColumnSpacing="4">
                            <TextBlock Grid.Column="0" Text="S:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Grid.Column="1" 
                                   Value="{Binding SecondaryActionColorSaturation, Mode=TwoWay}" 
                                   Minimum="0" Maximum="100" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Saturation (0-100%)" />
                            <TextBlock Grid.Column="2" Text="{Binding SecondaryActionColorSaturation, StringFormat='{}{0}%'}" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right" />
                          </Grid>
                          <Grid ColumnDefinitions="20,*,40" ColumnSpacing="4">
                            <TextBlock Grid.Column="0" Text="L:" FontSize="10" VerticalAlignment="Center" />
                            <Slider Grid.Column="1" 
                                   Value="{Binding SecondaryActionColorLightness, Mode=TwoWay}" 
                                   Minimum="0" Maximum="100" 
                                   KeyboardNavigation.IsTabStop="True"
                                   ToolTip.Tip="Lightness (0-100%)" />
                            <TextBlock Grid.Column="2" Text="{Binding SecondaryActionColorLightness, StringFormat='{}{0}%'}" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right" />
                          </Grid>
                        </StackPanel>

                        <!-- Color Actions -->

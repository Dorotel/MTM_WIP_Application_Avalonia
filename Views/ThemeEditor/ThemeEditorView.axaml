                              <Setter Property="Padding" Value="8,4" />
                            </Style>
                          </Button.Styles>
                        </Button>
                      </WrapPanel>
                      
                      <!-- Available Custom Themes List -->
                      <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                              BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                              BorderThickness="1"
                              CornerRadius="4"
                              MaxHeight="200">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                          <ItemsControl ItemsSource="{Binding AvailableCustomThemes}">
                            <ItemsControl.ItemTemplate>
                              <DataTemplate>
                                <Border Background="Transparent" 
                                        BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        Padding="8">
                                  <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                                    <StackPanel Grid.Column="0" Spacing="2">
                                      <TextBlock Text="{Binding DisplayName}" 
                                                FontWeight="Medium" 
                                                FontSize="11"
                                                Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" />
                                      <TextBlock Text="{Binding CreatedDateDisplay}" 
                                                FontSize="10"
                                                Foreground="{DynamicResource MTM_Shared_Logic.TertiaryTextBrush}" />
                                      <TextBlock Text="{Binding Description}" 
                                                FontSize="10"
                                                FontStyle="Italic"
                                                Foreground="{DynamicResource MTM_Shared_Logic.TertiaryTextBrush}"
                                                TextWrapping="Wrap" />
                                    </StackPanel>
                                    
                                    <Button Grid.Column="1" 
                                           Content="Load" 
                                           Classes="tertiary"
                                           FontSize="10"
                                           Padding="6,3"
                                           Command="{Binding $parent[UserControl].DataContext.LoadCustomThemeCommand}"
                                           CommandParameter="{Binding FilePath}"
                                           ToolTip.Tip="Load this custom theme" />
                                           
                                    <Button Grid.Column="2" 
                                           Content="Delete" 
                                           Classes="tertiary"
                                           FontSize="10"
                                           Padding="6,3"
                                           Command="{Binding $parent[UserControl].DataContext.DeleteCustomThemeCommand}"
                                           CommandParameter="{Binding}"
                                           ToolTip.Tip="Delete this custom theme">
                                      <Button.Styles>
                                        <Style Selector="Button.tertiary:pointerover">
                                          <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.ErrorBrush}" />
                                        </Style>
                                      </Button.Styles>
                                    </Button>
                                  </Grid>
                                </Border>
                              </DataTemplate>
                            </ItemsControl.ItemTemplate>
                          </ItemsControl>
                        </ScrollViewer>
                      </Border>
                      
                      <!-- Message when no custom themes -->
                      <TextBlock Text="No custom themes found. Save your first custom theme to get started."
                                Foreground="{DynamicResource MTM_Shared_Logic.TertiaryTextBrush}"
                                FontStyle="Italic"
                                FontSize="12"
                                HorizontalAlignment="Center"
                                IsVisible="{Binding !AvailableCustomThemes.Count}" />
                    </StackPanel>
                  </Border>

                  <!-- Enhanced Color Blindness Simulation Section -->
                  <Border Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                          BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                          BorderThickness="1" 
                          CornerRadius="6" 
                          Padding="16">
                    <StackPanel Spacing="12">
                      <TextBlock Text="Color Blindness Simulation" 
                                FontSize="14" 
                                FontWeight="Bold" 
                                Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" />
                      
                      <!-- Toggle and Type Selection -->
                      <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12" RowDefinitions="Auto,Auto" RowSpacing="8">
                        <CheckBox Grid.Row="0" Grid.Column="0"
                                 IsChecked="{Binding IsColorBlindPreviewEnabled}"
                                 Command="{Binding ToggleColorBlindPreviewCommand}"
                                 ToolTip.Tip="Enable color blindness simulation preview"
                                 KeyboardNavigation.IsTabStop="True" />
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                  Text="Enable Color Blindness Preview"
                                  FontWeight="Medium"
                                  VerticalAlignment="Center"
                                  Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" />
                        
                        <!-- Color Blindness Type Selection -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                  Text="Type:"
                                  FontWeight="Medium"
                                  VerticalAlignment="Center" />
                        <ComboBox Grid.Row="1" Grid.Column="1"
                                 ItemsSource="{Binding ColorBlindnessTypes}"
                                 SelectedItem="{Binding ColorBlindnessType}"
                                 IsEnabled="{Binding IsColorBlindPreviewEnabled}"
                                 HorizontalAlignment="Stretch"
                                 KeyboardNavigation.IsTabStop="True"
                                 ToolTip.Tip="Select type of color blindness to simulate">
                          <ComboBox.ItemTemplate>
                            <DataTemplate>
                              <TextBlock Text="{Binding}" FontSize="12" />
                            </DataTemplate>
                          </ComboBox.ItemTemplate>
                        </ComboBox>
                      </Grid>
                      
                      <TextBlock Text="Preview how your theme appears to users with different types of color vision deficiency"
                                FontSize="11"
                                Foreground="{DynamicResource MTM_Shared_Logic.TertiaryTextBrush}"
                                TextWrapping="Wrap" />
                    </StackPanel>
                  </Border>
                  
                </StackPanel>

              </Grid>
            </ScrollViewer>
          </Border>

        </Grid>
      </Border>

      <!-- Action Buttons Panel -->
      <Border Grid.Row="1" 
              Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
              BorderBrush="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}" 
              BorderThickness="1" 
              CornerRadius="6" 
              Padding="12" 
              Margin="0,0,0,8">
        
        <Grid x:Name="ActionButtonsGrid" ColumnDefinitions="Auto,*,Auto">
          
          <!-- Left Info Section -->
          <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
            <Border Background="{DynamicResource MTM_Shared_Logic.InfoColor}" 
                    CornerRadius="12" 
                    Padding="8,4">
              <TextBlock Text="{Binding SelectedCategory, StringFormat='Current: {0}', FallbackValue='Current: Core'}" 
                        FontSize="10" 
                        Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}" 
                        FontWeight="SemiBold" />
            </Border>
          </StackPanel>
          
          <!-- Center spacing -->
          <Grid Grid.Column="1" />
          
          <!-- Action buttons -->
          <WrapPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
            
            <Button Classes="secondary" 
                    MinWidth="90" 
                    Margin="0,0,8,4"
                    Command="{Binding PreviewThemeCommand}" 
                    IsEnabled="{Binding HasUnsavedChanges, FallbackValue=False}"
                    ToolTip.Tip="Preview changes without saving">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6">
                <materialIcons:MaterialIcon Kind="Eye" Width="14" Height="14" />
                <TextBlock Text="Preview" FontSize="11" />
              </StackPanel>
            </Button>
            
            <Button Classes="primary" 
                    MinWidth="90" 
                    Margin="0,0,8,4"
                    Command="{Binding ApplyThemeCommand}" 
                    IsEnabled="{Binding CanApplyTheme, FallbackValue=True}"
                    ToolTip.Tip="Apply and save theme changes">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6">
                <materialIcons:MaterialIcon Kind="Check" Width="14" Height="14" />
                <TextBlock Text="Apply" FontSize="11" FontWeight="SemiBold" />
              </StackPanel>
            </Button>
            
            <Button Classes="secondary" 
                    MinWidth="90" 
                    Margin="0,0,8,4"
                    Command="{Binding ResetThemeCommand}" 
                    IsEnabled="{Binding HasUnsavedChanges, FallbackValue=False}"
                    ToolTip.Tip="Reset to default colors">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6">
                <materialIcons:MaterialIcon Kind="Refresh" Width="14" Height="14" />
                <TextBlock Text="Reset" FontSize="11" />
              </StackPanel>
            </Button>
            
            <Button Classes="secondary" 
                    MinWidth="70" 
                    Margin="0,0,0,4"
                    Command="{Binding CloseCommand}" 
                    ToolTip.Tip="Close theme editor">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6">
                <materialIcons:MaterialIcon Kind="Close" Width="14" Height="14" />
                <TextBlock Text="Close" FontSize="11" />
              </StackPanel>
            </Button>
            
          </WrapPanel>
        </Grid>
      </Border>

  </Grid>
</UserControl>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MTM_WIP_Application_Avalonia.ViewModels"
             xmlns:converters="using:MTM_WIP_Application_Avalonia.Converters"
             xmlns:materialIcons="using:Material.Icons.Avalonia"
             mc:Ignorable="d"
             d:DesignWidth="1200"
             d:DesignHeight="800"
             x:Class="MTM_WIP_Application_Avalonia.Views.ThemeEditorView"
             x:CompileBindings="True"
             x:DataType="vm:ThemeEditorViewModel">

  <UserControl.Resources>
    <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
  </UserControl.Resources>

  <UserControl.Styles>
    <!-- MTM Theme Input Field Styles -->
    <Style Selector="TextBox.input-field">
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderDarkBrush}" />
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BodyText}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="Padding" Value="8,6" />
      <Setter Property="MinHeight" Value="32" />
      <Setter Property="HorizontalContentAlignment" Value="Left" />
      <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <!-- Error state styling -->
    <Style Selector="TextBox.input-field.error">
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.ErrorBrush}" />
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.ErrorLightBrush}" />
    </Style>

    <!-- Focus state styling -->
    <Style Selector="TextBox.input-field:focus">
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.FocusBrush}" />
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}" />
    </Style>

    <!-- Primary Button styling -->
    <Style Selector="Button.primary">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}" />
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderDarkBrush}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="MinHeight" Value="32" />
      <Setter Property="Padding" Value="12,6" />
    </Style>

    <!-- Secondary Button styling -->
    <Style Selector="Button.secondary">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.HeadingText}" />
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}" />
      <Setter Property="BorderThickness" Value="1.5" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="MinHeight" Value="32" />
      <Setter Property="Padding" Value="12,6" />
    </Style>

    <Style Selector="Button.secondary:pointerover">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}" />
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BorderDarkBrush}" />
    </Style>

    <!-- Tertiary Button styling -->
    <Style Selector="Button.tertiary">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.InteractiveText}" />
      <Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderBrush}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="MinHeight" Value="28" />
      <Setter Property="Padding" Value="8,4" />
    </Style>

    <!-- Navigation Item styling -->
    <Style Selector="Button.nav-item">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.HeadingText}" />
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="Padding" Value="12,8" />
      <Setter Property="HorizontalAlignment" Value="Stretch" />
      <Setter Property="HorizontalContentAlignment" Value="Left" />
    </Style>

    <Style Selector="Button.nav-item:pointerover">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}" />
    </Style>

    <Style Selector="Button.nav-item.selected">
      <Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}" />
      <Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}" />
    </Style>
  </UserControl.Styles>

  <!-- Main Layout Container - ScrollViewer for overflow handling -->
  <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                VerticalScrollBarVisibility="Auto" 
                Background="{DynamicResource MTM_Shared_Logic.MainBackground}">
    
    <Grid x:Name="MainContainer" 
          RowDefinitions="*,Auto" 
          MinWidth="1100" 
          MinHeight="600" 
          Margin="8">

      <!-- Main Content Panel -->
      <Border Grid.Row="0"  
              Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
              BorderBrush="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}" 
              BorderThickness="1" 
              CornerRadius="6" 
              Padding="0" 
              Margin="0,0,0,8">
        
        <Grid x:Name="ContentGrid" ColumnDefinitions="280,*">
          
          <!-- Left Navigation Panel -->
          <Border Grid.Column="0" 
                  Background="{DynamicResource MTM_Shared_Logic.SidebarGradientBrush}" 
                  CornerRadius="6,0,0,6" 
                  Padding="0">
            
            <Grid RowDefinitions="Auto,*">
              
              <!-- Navigation Header -->
              <Border Grid.Row="0" 
                      Background="{DynamicResource MTM_Shared_Logic.PrimaryAction}" 
                      CornerRadius="6,0,0,0" 
                      Padding="16,12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <materialIcons:MaterialIcon Kind="Palette" 
                                            Width="18" 
                                            Height="18" 
                                            Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}" />
                  <TextBlock Text="Theme Editor" 
                            FontSize="16" 
                            FontWeight="Bold" 
                            Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}" />
                </StackPanel>
              </Border>
              
              <!-- Color Category Navigation -->
              <ScrollViewer Grid.Row="1" 
                            VerticalScrollBarVisibility="Auto" 
                            HorizontalScrollBarVisibility="Disabled" 
                            Padding="12">
                <StackPanel Spacing="8">
                  
                  <!-- Core Colors Category -->
                  <Button Classes="nav-item selected" 
                          Command="{Binding SelectCategoryCommand}" 
                          CommandParameter="Core">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <materialIcons:MaterialIcon Kind="Circle" Width="16" Height="16" />
                      <StackPanel Spacing="2">
                        <TextBlock Text="Core Colors" FontWeight="SemiBold" FontSize="13" />
                        <TextBlock Text="Primary, Secondary, Accent" FontSize="10" Opacity="0.7" />
                      </StackPanel>
                    </StackPanel>
                  </Button>

                  <!-- Text Colors Category -->
                  <Button Classes="nav-item" 
                          Command="{Binding SelectCategoryCommand}" 
                          CommandParameter="Text">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <materialIcons:MaterialIcon Kind="FormatText" Width="16" Height="16" />
                      <StackPanel Spacing="2">
                        <TextBlock Text="Text Colors" FontWeight="SemiBold" FontSize="13" />
                        <TextBlock Text="Headings, Body, Interactive" FontSize="10" Opacity="0.7" />
                      </StackPanel>
                    </StackPanel>
                  </Button>

                  <!-- Background Colors Category -->
                  <Button Classes="nav-item" 
                          Command="{Binding SelectCategoryCommand}" 
                          CommandParameter="Background">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <materialIcons:MaterialIcon Kind="Image" Width="16" Height="16" />
                      <StackPanel Spacing="2">
                        <TextBlock Text="Background Colors" FontWeight="SemiBold" FontSize="13" />
                        <TextBlock Text="Main, Cards, Panels" FontSize="10" Opacity="0.7" />
                      </StackPanel>
                    </StackPanel>
                  </Button>

                  <!-- Status Colors Category -->
                  <Button Classes="nav-item" 
                          Command="{Binding SelectCategoryCommand}" 
                          CommandParameter="Status">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <materialIcons:MaterialIcon Kind="Alert" Width="16" Height="16" />
                      <StackPanel Spacing="2">
                        <TextBlock Text="Status Colors" FontWeight="SemiBold" FontSize="13" />
                        <TextBlock Text="Success, Warning, Error" FontSize="10" Opacity="0.7" />
                      </StackPanel>
                    </StackPanel>
                  </Button>

                  <!-- Border Colors Category -->
                  <Button Classes="nav-item" 
                          Command="{Binding SelectCategoryCommand}" 
                          CommandParameter="Border">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <materialIcons:MaterialIcon Kind="BorderOutside" Width="16" Height="16" />
                      <StackPanel Spacing="2">
                        <TextBlock Text="Border Colors" FontWeight="SemiBold" FontSize="13" />
                        <TextBlock Text="Standard, Accent" FontSize="10" Opacity="0.7" />
                      </StackPanel>
                    </StackPanel>
                  </Button>

                  <!-- Separator -->
                  <Border Height="1" 
                          Background="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                          Margin="0,8" />

                  <!-- Tools Section Header -->
                  <TextBlock Text="ðŸ› ï¸ Tools" 
                            FontSize="12" 
                            FontWeight="Bold" 
                            Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                            Margin="8,4" />

                  <!-- Auto-Fill Tools -->
                  <Button Classes="nav-item" 
                          Command="{Binding SelectCategoryCommand}" 
                          CommandParameter="AutoFill">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <materialIcons:MaterialIcon Kind="AutoFix" Width="16" Height="16" />
                      <StackPanel Spacing="2">
                        <TextBlock Text="Auto-Fill Palettes" FontWeight="SemiBold" FontSize="13" />
                        <TextBlock Text="Generate color schemes" FontSize="10" Opacity="0.7" />
                      </StackPanel>
                    </StackPanel>
                  </Button>

                  <!-- Advanced Tools -->
                  <Button Classes="nav-item" 
                          Command="{Binding SelectCategoryCommand}" 
                          CommandParameter="Advanced">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <materialIcons:MaterialIcon Kind="Cog" Width="16" Height="16" />
                      <StackPanel Spacing="2">
                        <TextBlock Text="Advanced Tools" FontWeight="SemiBold" FontSize="13" />
                        <TextBlock Text="History, Preview, Validation" FontSize="10" Opacity="0.7" />
                      </StackPanel>
                    </StackPanel>
                  </Button>

                </StackPanel>
              </ScrollViewer>
            </Grid>
          </Border>

          <!-- Right Content Panel -->
          <Border Grid.Column="1" 
                  Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}" 
                  CornerRadius="0,6,6,0" 
                  Padding="0">
            
            <Grid RowDefinitions="Auto,*">
              
              <!-- Content Header -->
              <Border Grid.Row="0" 
                      Background="{DynamicResource MTM_Shared_Logic.SecondaryAction}" 
                      CornerRadius="0,6,0,0" 
                      Padding="20,12">
                <Grid ColumnDefinitions="*,Auto,Auto">
                  <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="ðŸŽ¨" FontSize="18" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding SelectedCategoryTitle, FallbackValue='Core Colors'}" 
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                              VerticalAlignment="Center" />
                  </StackPanel>
                  
                  <!-- Current Theme Indicator -->
                  <Border Grid.Column="1" 
                          Background="{DynamicResource MTM_Shared_Logic.PrimaryAction}" 
                          CornerRadius="12" 
                          Padding="12,4" 
                          Margin="0,0,8,0">
                    <TextBlock Text="{Binding CurrentThemeName, FallbackValue='MTM Theme'}" 
                              FontSize="11" 
                              Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}" 
                              FontWeight="SemiBold" />
                  </Border>

                  <!-- Unsaved Changes Indicator -->
                  <Border Grid.Column="2" 
                          Background="{DynamicResource MTM_Shared_Logic.WarningBrush}" 
                          CornerRadius="12" 
                          Padding="8,4" 
                          IsVisible="{Binding HasUnsavedChanges, FallbackValue=False}">
                    <TextBlock Text="â— Unsaved" 
                              FontSize="11" 
                              Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" 
                              FontWeight="SemiBold" />
                  </Border>
                </Grid>
              </Border>
              
              <!-- Dynamic Content Area -->
              <ScrollViewer Grid.Row="1" 
                            VerticalScrollBarVisibility="Auto" 
                            HorizontalScrollBarVisibility="Disabled" 
                            Padding="20">
                
                <Grid>
                  <!-- Core Colors Content -->
                  <StackPanel Spacing="16" IsVisible="{Binding IsCoreColorsSelected, FallbackValue=True}">
                  
                  <!-- Primary Action Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Primary Action" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding PrimaryActionColor, FallbackValue='#0078D4'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #0078D4)" />
                    <Border Grid.Column="2" 
                           Background="{Binding PrimaryActionColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Secondary Action Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Secondary Action" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding SecondaryActionColor, FallbackValue='#106EBE'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #106EBE)" />
                    <Border Grid.Column="2" 
                           Background="{Binding SecondaryActionColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Accent Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Accent Color" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding AccentColor, FallbackValue='#40A2E8'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #40A2E8)" />
                    <Border Grid.Column="2" 
                           Background="{Binding AccentColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Highlight Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Highlight Color" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding HighlightColor, FallbackValue='#005A9E'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #005A9E)" />
                    <Border Grid.Column="2" 
                           Background="{Binding HighlightColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Auto-Fill Actions -->
                  <Border Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                          BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                          BorderThickness="1" 
                          CornerRadius="4" 
                          Padding="16" 
                          Margin="0,16,0,0">
                    <StackPanel Spacing="12">
                      <TextBlock Text="ðŸŽ¨ Quick Fill Options" 
                                FontWeight="SemiBold" 
                                FontSize="14" />
                      <WrapPanel Orientation="Horizontal">
                        <Button Content="Material Design" 
                               Classes="tertiary" 
                               Command="{Binding AutoFillCoreColorsCommand}" 
                               Margin="0,0,8,4"
                               ToolTip.Tip="Generate harmonious core color palette" />
                        <Button Content="Monochromatic" 
                               Classes="tertiary" 
                               Command="{Binding AutoFillMonochromaticCommand}" 
                               Margin="0,0,8,4"
                               ToolTip.Tip="Generate tints and shades of primary color" />
                        <Button Content="Complementary" 
                               Classes="tertiary" 
                               Command="{Binding AutoFillComplementaryCommand}" 
                               Margin="0,0,8,4"
                               ToolTip.Tip="Use opposite colors for high contrast" />
                      </WrapPanel>
                    </StackPanel>
                  </Border>

                </StackPanel>

                <!-- Text Colors Content (initially hidden) -->
                <StackPanel Spacing="16" IsVisible="{Binding IsTextColorsSelected, FallbackValue=False}">
                  
                  <!-- Heading Text Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Heading Text" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding HeadingTextColor, FallbackValue='#1F2937'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #1F2937)" />
                    <Border Grid.Column="2" 
                           Background="{Binding HeadingTextColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Body Text Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Body Text" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding BodyTextColor, FallbackValue='#4B5563'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #4B5563)" />
                    <Border Grid.Column="2" 
                           Background="{Binding BodyTextColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Interactive Text Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Interactive Text" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding InteractiveTextColor, FallbackValue='#0078D4'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #0078D4)" />
                    <Border Grid.Column="2" 
                           Background="{Binding InteractiveTextColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Overlay Text Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Overlay Text" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding OverlayTextColor, FallbackValue='#FFFFFF'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #FFFFFF)" />
                    <Border Grid.Column="2" 
                           Background="{Binding OverlayTextColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Tertiary Text Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Tertiary Text" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding TertiaryTextColor, FallbackValue='#9CA3AF'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #9CA3AF)" />
                    <Border Grid.Column="2" 
                           Background="{Binding TertiaryTextColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- WCAG Validation Info -->
                  <Border Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                          BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                          BorderThickness="1" 
                          CornerRadius="4" 
                          Padding="16" 
                          Margin="0,16,0,0">
                    <StackPanel Spacing="8">
                      <TextBlock Text="â™¿ Accessibility Validation" 
                                FontWeight="SemiBold" 
                                FontSize="14" />
                      <TextBlock Text="Text colors are automatically validated for WCAG contrast requirements" 
                                FontSize="12" 
                                Foreground="{DynamicResource MTM_Shared_Logic.BodyText}" />
                      <Button Content="âœ… Validate Text Colors" 
                             Classes="secondary" 
                             Command="{Binding ValidateThemeCommand}" 
                             HorizontalAlignment="Left" />
                    </StackPanel>
                  </Border>

                </StackPanel>

                <!-- Background Colors Content -->
                <StackPanel Spacing="16" IsVisible="{Binding IsBackgroundColorsSelected, FallbackValue=False}">
                  
                  <!-- Main Background Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Main Background" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding MainBackgroundColor, FallbackValue='#FFFFFF'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #FFFFFF)" />
                    <Border Grid.Column="2" 
                           Background="{Binding MainBackgroundColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Card Background Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Card Background" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding CardBackgroundColor, FallbackValue='#FAFAFA'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #FAFAFA)" />
                    <Border Grid.Column="2" 
                           Background="{Binding CardBackgroundColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Hover Background Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Hover Background" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding HoverBackgroundColor, FallbackValue='#F0F0F0'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #F0F0F0)" />
                    <Border Grid.Column="2" 
                           Background="{Binding HoverBackgroundColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Panel Background Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Panel Background" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding PanelBackgroundColor, FallbackValue='#F8F9FA'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #F8F9FA)" />
                    <Border Grid.Column="2" 
                           Background="{Binding PanelBackgroundColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Sidebar Background Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Sidebar Background" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding SidebarBackgroundColor, FallbackValue='#E9ECEF'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #E9ECEF)" />
                    <Border Grid.Column="2" 
                           Background="{Binding SidebarBackgroundColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                </StackPanel>

                <!-- Status Colors Content -->
                <StackPanel Spacing="16" IsVisible="{Binding IsStatusColorsSelected, FallbackValue=False}">
                  
                  <!-- Success Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Success Color" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding SuccessColor, FallbackValue='#10B981'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #10B981)" />
                    <Border Grid.Column="2" 
                           Background="{Binding SuccessColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Warning Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Warning Color" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding WarningColor, FallbackValue='#F59E0B'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #F59E0B)" />
                    <Border Grid.Column="2" 
                           Background="{Binding WarningColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Error Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Error Color" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding ErrorColor, FallbackValue='#EF4444'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #EF4444)" />
                    <Border Grid.Column="2" 
                           Background="{Binding ErrorColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Info Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Info Color" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding InfoColor, FallbackValue='#3B82F6'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #3B82F6)" />
                    <Border Grid.Column="2" 
                           Background="{Binding InfoColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                </StackPanel>

                <!-- Border Colors Content -->
                <StackPanel Spacing="16" IsVisible="{Binding IsBorderColorsSelected, FallbackValue=False}">
                  
                  <!-- Primary Border Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Primary Border" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding BorderColor, FallbackValue='#E5E7EB'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #E5E7EB)" />
                    <Border Grid.Column="2" 
                           Background="{Binding BorderColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                  <!-- Accent Border Color -->
                  <Grid ColumnDefinitions="150,*,80" ColumnSpacing="12">
                    <TextBlock Grid.Column="0" 
                              Text="Accent Border" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium" />
                    <TextBox Grid.Column="1" 
                            Text="{Binding BorderAccentColor, FallbackValue='#D1D5DB'}" 
                            Classes="input-field"
                            Watermark="Enter hex color (e.g., #D1D5DB)" />
                    <Border Grid.Column="2" 
                           Background="{Binding BorderAccentColor, Converter={StaticResource ColorToBrushConverter}}" 
                           CornerRadius="4" 
                           Height="32" 
                           BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                           BorderThickness="1" />
                  </Grid>

                </StackPanel>

                <!-- Placeholder for other categories -->
                <StackPanel Spacing="16" IsVisible="{Binding IsOtherCategorySelected, FallbackValue=False}">
                  <TextBlock Text="{Binding SelectedCategoryContent, FallbackValue='Content for selected category will appear here'}" 
                            FontSize="14" 
                            Foreground="{DynamicResource MTM_Shared_Logic.BodyText}" 
                            TextAlignment="Center" />
                </StackPanel>

                </Grid>
              </ScrollViewer>
            </Grid>
          </Border>
        </Grid>
      </Border>

      <!-- Action Buttons Panel -->
      <Border Grid.Row="1" 
              Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
              BorderBrush="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}" 
              BorderThickness="1" 
              CornerRadius="6" 
              Padding="16" 
              Margin="0,0,0,8">
        
        <Grid x:Name="ActionButtonsGrid" ColumnDefinitions="*,Auto">
          
          <!-- Status Message -->
          <TextBlock Grid.Column="0" 
                    Text="{Binding StatusMessage, FallbackValue='Ready to edit theme colors'}" 
                    Foreground="{DynamicResource MTM_Shared_Logic.BodyText}" 
                    VerticalAlignment="Center" />
          
          <!-- Action buttons -->
          <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
            
            <Button Classes="secondary" 
                    Width="100" 
                    Command="{Binding PreviewThemeCommand}" 
                    IsEnabled="{Binding HasUnsavedChanges, FallbackValue=False}"
                    ToolTip.Tip="Preview changes without saving">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6">
                <materialIcons:MaterialIcon Kind="Eye" Width="14" Height="14" />
                <TextBlock Text="Preview" FontSize="11" />
              </StackPanel>
            </Button>
            
            <Button Classes="primary" 
                    Width="100" 
                    Command="{Binding ApplyThemeCommand}" 
                    IsEnabled="{Binding CanApplyTheme, FallbackValue=True}"
                    ToolTip.Tip="Apply and save theme changes">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6">
                <materialIcons:MaterialIcon Kind="Check" Width="14" Height="14" />
                <TextBlock Text="Apply" FontSize="11" FontWeight="SemiBold" />
              </StackPanel>
            </Button>
            
            <Button Classes="secondary" 
                    Width="100" 
                    Command="{Binding ResetThemeCommand}" 
                    IsEnabled="{Binding HasUnsavedChanges, FallbackValue=False}"
                    ToolTip.Tip="Reset to default colors">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6">
                <materialIcons:MaterialIcon Kind="Refresh" Width="14" Height="14" />
                <TextBlock Text="Reset" FontSize="11" />
              </StackPanel>
            </Button>
            
            <Button Classes="secondary" 
                    Width="80" 
                    Command="{Binding CloseCommand}" 
                    ToolTip.Tip="Close theme editor">
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6">
                <materialIcons:MaterialIcon Kind="Close" Width="14" Height="14" />
                <TextBlock Text="Close" FontSize="11" />
              </StackPanel>
            </Button>
            
          </StackPanel>
        </Grid>
      </Border>

    </Grid>
  </ScrollViewer>
</UserControl>
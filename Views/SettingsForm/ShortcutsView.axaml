<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MTM_WIP_Application_Avalonia.Views.SettingsForm.ShortcutsView">
    
    <!-- Shortcuts Configuration Panel -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel Spacing="16" MaxWidth="700">
            
            <!-- Header -->
            <Border Background="{DynamicResource MTM_Shared_Logic.AccentBrush}"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="âŒ¨ï¸ Keyboard Shortcuts Configuration"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{DynamicResource MTM_Shared_Logic.LightTextBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Customize keyboard shortcuts for faster navigation and operations"
                               FontSize="14"
                               Foreground="{DynamicResource MTM_Shared_Logic.LightTextBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Search and Filter -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                
                <Grid ColumnDefinitions="*,Auto">
                    <TextBox Grid.Column="0"
                             Watermark="ðŸ” Search shortcuts..."
                             Text=""
                             Margin="0,0,12,0"/>
                    <ComboBox Grid.Column="1"
                              SelectedIndex="0"
                              MinWidth="150">
                        <ComboBoxItem Content="All Categories"/>
                        <ComboBoxItem Content="Navigation"/>
                        <ComboBoxItem Content="Inventory"/>
                        <ComboBoxItem Content="File Operations"/>
                        <ComboBoxItem Content="Editing"/>
                        <ComboBoxItem Content="System"/>
                    </ComboBox>
                </Grid>
            </Border>

            <!-- Navigation Shortcuts -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="16">
                    <TextBlock Text="ðŸ§­ Navigation Shortcuts"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.PrimaryTextBrush}"
                               Margin="0,0,0,8"/>
                    
                    <!-- Shortcut Items -->
                    <Grid ColumnDefinitions="250,*,Auto,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                        <!-- Headers -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Action" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Current Shortcut" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="New Shortcut" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        
                        <!-- Navigation Items -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Open Main Inventory" VerticalAlignment="Center"/>
                        <Border Grid.Row="1" Grid.Column="1" Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" BorderThickness="1" 
                                CornerRadius="4" Padding="8,4">
                            <TextBlock Text="Ctrl+I" FontFamily="Consolas"/>
                        </Border>
                        <TextBox Grid.Row="1" Grid.Column="2" Watermark="Enter shortcut" Width="120" Margin="8,0"/>
                        <Button Grid.Row="1" Grid.Column="3" Content="âœï¸" Classes="mtm-light" Width="32" Height="32"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Open Advanced Settings" VerticalAlignment="Center" Margin="0,8,0,0"/>
                        <Border Grid.Row="2" Grid.Column="1" Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" BorderThickness="1" 
                                CornerRadius="4" Padding="8,4" Margin="0,8,0,0">
                            <TextBlock Text="Ctrl+Shift+S" FontFamily="Consolas"/>
                        </Border>
                        <TextBox Grid.Row="2" Grid.Column="2" Watermark="Enter shortcut" Width="120" Margin="8,8,0,0"/>
                        <Button Grid.Row="2" Grid.Column="3" Content="âœï¸" Classes="mtm-light" Width="32" Height="32" Margin="0,8,0,0"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Quick Search" VerticalAlignment="Center" Margin="0,8,0,0"/>
                        <Border Grid.Row="3" Grid.Column="1" Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" BorderThickness="1" 
                                CornerRadius="4" Padding="8,4" Margin="0,8,0,0">
                            <TextBlock Text="Ctrl+F" FontFamily="Consolas"/>
                        </Border>
                        <TextBox Grid.Row="3" Grid.Column="2" Watermark="Enter shortcut" Width="120" Margin="8,8,0,0"/>
                        <Button Grid.Row="3" Grid.Column="3" Content="âœï¸" Classes="mtm-light" Width="32" Height="32" Margin="0,8,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Inventory Operations Shortcuts -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="16">
                    <TextBlock Text="ðŸ“¦ Inventory Operations"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.PrimaryTextBrush}"
                               Margin="0,0,0,8"/>
                    
                    <Grid ColumnDefinitions="250,*,Auto,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Add New Item" VerticalAlignment="Center"/>
                        <Border Grid.Row="0" Grid.Column="1" Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" BorderThickness="1" 
                                CornerRadius="4" Padding="8,4">
                            <TextBlock Text="Ctrl+N" FontFamily="Consolas"/>
                        </Border>
                        <TextBox Grid.Row="0" Grid.Column="2" Watermark="Enter shortcut" Width="120" Margin="8,0"/>
                        <Button Grid.Row="0" Grid.Column="3" Content="âœï¸" Classes="mtm-light" Width="32" Height="32"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Remove Item" VerticalAlignment="Center" Margin="0,8,0,0"/>
                        <Border Grid.Row="1" Grid.Column="1" Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" BorderThickness="1" 
                                CornerRadius="4" Padding="8,4" Margin="0,8,0,0">
                            <TextBlock Text="Ctrl+D" FontFamily="Consolas"/>
                        </Border>
                        <TextBox Grid.Row="1" Grid.Column="2" Watermark="Enter shortcut" Width="120" Margin="8,8,0,0"/>
                        <Button Grid.Row="1" Grid.Column="3" Content="âœï¸" Classes="mtm-light" Width="32" Height="32" Margin="0,8,0,0"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Refresh Inventory" VerticalAlignment="Center" Margin="0,8,0,0"/>
                        <Border Grid.Row="2" Grid.Column="1" Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" BorderThickness="1" 
                                CornerRadius="4" Padding="8,4" Margin="0,8,0,0">
                            <TextBlock Text="F5" FontFamily="Consolas"/>
                        </Border>
                        <TextBox Grid.Row="2" Grid.Column="2" Watermark="Enter shortcut" Width="120" Margin="8,8,0,0"/>
                        <Button Grid.Row="2" Grid.Column="3" Content="âœï¸" Classes="mtm-light" Width="32" Height="32" Margin="0,8,0,0"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Print Report" VerticalAlignment="Center" Margin="0,8,0,0"/>
                        <Border Grid.Row="3" Grid.Column="1" Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}" 
                                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" BorderThickness="1" 
                                CornerRadius="4" Padding="8,4" Margin="0,8,0,0">
                            <TextBlock Text="Ctrl+P" FontFamily="Consolas"/>
                        </Border>
                        <TextBox Grid.Row="3" Grid.Column="2" Watermark="Enter shortcut" Width="120" Margin="8,8,0,0"/>
                        <Button Grid.Row="3" Grid.Column="3" Content="âœï¸" Classes="mtm-light" Width="32" Height="32" Margin="0,8,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Shortcut Conflict Detection -->
            <Border Background="{DynamicResource MTM_Shared_Logic.WarningLightBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.WarningBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    IsVisible="False">
                
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="âš ï¸"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Shortcut Conflict Detected"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource MTM_Shared_Logic.WarningTextBrush}"/>
                        <TextBlock Text="The shortcut 'Ctrl+S' is already assigned to 'Save Settings'. Please choose a different combination."
                                   FontSize="12"
                                   Foreground="{DynamicResource MTM_Shared_Logic.WarningTextBrush}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Global Settings -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="12">
                    <TextBlock Text="âš™ï¸ Global Shortcut Settings"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.PrimaryTextBrush}"
                               Margin="0,0,0,8"/>
                    
                    <CheckBox Content="Enable keyboard shortcuts" IsChecked="True"/>
                    <CheckBox Content="Show shortcut hints in tooltips" IsChecked="True"/>
                    <CheckBox Content="Allow global shortcuts when application is minimized" IsChecked="False"/>
                    <CheckBox Content="Require Ctrl key for single-letter shortcuts" IsChecked="True"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal"
                        Spacing="12"
                        HorizontalAlignment="Center"
                        Margin="0,16,0,0">
                
                <Button Content="ðŸ’¾ Save Shortcuts"
                        Classes="mtm-primary"
                        MinWidth="120"
                        Height="36"/>
                
                <Button Content="ðŸ”„ Reset to Defaults"
                        Classes="mtm-secondary"
                        MinWidth="140"
                        Height="36"/>
                
                <Button Content="ðŸ“¥ Import Shortcuts"
                        Classes="mtm-light"
                        MinWidth="130"
                        Height="36"/>
                
                <Button Content="ðŸ“¤ Export Shortcuts"
                        Classes="mtm-light"
                        MinWidth="130"
                        Height="36"/>
            </StackPanel>

            <!-- Placeholder Notice -->
            <Border Background="{DynamicResource MTM_Shared_Logic.InfoLightBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.InfoBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,16,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="â„¹ï¸"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="This is a placeholder interface. Full shortcuts configuration will include conflict detection, custom key combination input, and profile management."
                               FontSize="12"
                               Foreground="{DynamicResource MTM_Shared_Logic.InfoTextBrush}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>

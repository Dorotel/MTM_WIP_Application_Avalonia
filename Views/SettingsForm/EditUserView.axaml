<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MTM_WIP_Application_Avalonia.Views.SettingsForm.EditUserView">
    
    <!-- Edit User Panel -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel Spacing="16" MaxWidth="600">
            
            <!-- Header -->
            <Border Background="{DynamicResource MTM_Shared_Logic.AccentBrush}"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="âœï¸ Edit User Account"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{DynamicResource MTM_Shared_Logic.LightTextBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Modify user account information and permissions"
                               FontSize="14"
                               Foreground="{DynamicResource MTM_Shared_Logic.LightTextBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- User Selection -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="12">
                    <TextBlock Text="ðŸ‘¤ Select User"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.PrimaryTextBrush}"
                               Margin="0,0,0,8"/>
                    
                    <Grid ColumnDefinitions="140,*,Auto">
                        <TextBlock Text="Select User:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <ComboBox Grid.Column="1"
                                  SelectedIndex="0"
                                  Margin="0,0,8,0">
                            <ComboBoxItem Content="john.doe - John Doe (Operator)"/>
                            <ComboBoxItem Content="jane.smith - Jane Smith (Supervisor)"/>
                            <ComboBoxItem Content="mike.wilson - Mike Wilson (Manager)"/>
                            <ComboBoxItem Content="admin - Administrator (Admin)"/>
                        </ComboBox>
                        <Button Grid.Column="2"
                                Content="ðŸ”"
                                Classes="mtm-secondary"
                                ToolTip.Tip="Search Users"
                                Width="32"
                                Height="32"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Current User Information Display -->
            <Border Background="{DynamicResource MTM_Shared_Logic.InfoLightBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.InfoBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                
                <StackPanel Spacing="8">
                    <TextBlock Text="ðŸ“‹ Current User Information"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.InfoTextBrush}"/>
                    
                    <Grid ColumnDefinitions="120,*" RowDefinitions="Auto,Auto,Auto,Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Username:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="john.doe"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Full Name:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="John Doe"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Email:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="john.doe@company.com"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Current Role:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="Operator"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Edit User Information Form -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="16">
                    <TextBlock Text="âœï¸ Edit Information"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.PrimaryTextBrush}"
                               Margin="0,0,0,8"/>
                    
                    <!-- Username (Read-only) -->
                    <Grid ColumnDefinitions="140,*">
                        <TextBlock Text="Username:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBox Grid.Column="1"
                                 Text="john.doe"
                                 IsReadOnly="True"
                                 Background="{DynamicResource MTM_Shared_Logic.DisabledBackgroundBrush}"/>
                    </Grid>
                    
                    <!-- Full Name -->
                    <Grid ColumnDefinitions="140,*">
                        <TextBlock Text="Full Name:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBox Grid.Column="1"
                                 Text="John Doe"/>
                    </Grid>
                    
                    <!-- Email -->
                    <Grid ColumnDefinitions="140,*">
                        <TextBlock Text="Email:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBox Grid.Column="1"
                                 Text="john.doe@company.com"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Change Password Section -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="16">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="ðŸ” Password Management"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource MTM_Shared_Logic.PrimaryTextBrush}"/>
                        <CheckBox Grid.Column="1"
                                  Content="Change Password"
                                  IsChecked="False"/>
                    </Grid>
                    
                    <!-- Password fields (initially disabled) -->
                    <Grid ColumnDefinitions="140,*" IsEnabled="False">
                        <TextBlock Text="New Password:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBox Grid.Column="1"
                                 Watermark="Enter new password"
                                 PasswordChar="â—"/>
                    </Grid>
                    
                    <Grid ColumnDefinitions="140,*" IsEnabled="False">
                        <TextBlock Text="Confirm Password:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBox Grid.Column="1"
                                 Watermark="Confirm new password"
                                 PasswordChar="â—"/>
                    </Grid>
                    
                    <CheckBox Content="ðŸ”„ Force password change on next login" IsEnabled="False"/>
                </StackPanel>
            </Border>

            <!-- User Permissions -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="16">
                    <TextBlock Text="ðŸ” Access Permissions"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.PrimaryTextBrush}"
                               Margin="0,0,0,8"/>
                    
                    <!-- Role Selection -->
                    <Grid ColumnDefinitions="140,*">
                        <TextBlock Text="User Role:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <ComboBox Grid.Column="1"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Operator - Basic access"/>
                            <ComboBoxItem Content="Supervisor - Moderate access"/>
                            <ComboBoxItem Content="Manager - Full access"/>
                            <ComboBoxItem Content="Administrator - System access"/>
                        </ComboBox>
                    </Grid>
                    
                    <!-- Permission Checkboxes -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Specific Permissions:"
                                   FontWeight="SemiBold"
                                   Margin="0,8,0,4"/>
                        
                        <CheckBox Content="ðŸ“¦ View Inventory" IsChecked="True"/>
                        <CheckBox Content="âž• Add Items" IsChecked="True"/>
                        <CheckBox Content="âœï¸ Edit Items" IsChecked="False"/>
                        <CheckBox Content="ðŸ—‘ï¸ Remove Items" IsChecked="False"/>
                        <CheckBox Content="ðŸ“Š View Reports" IsChecked="True"/>
                        <CheckBox Content="âš™ï¸ System Settings" IsChecked="False"/>
                        <CheckBox Content="ðŸ‘¥ User Management" IsChecked="False"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Account Status -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="12">
                    <TextBlock Text="âš™ï¸ Account Status"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.PrimaryTextBrush}"
                               Margin="0,0,0,8"/>
                    
                    <CheckBox Content="ðŸ”“ Account Enabled" IsChecked="True"/>
                    <CheckBox Content="ðŸ”’ Account Locked" IsChecked="False"/>
                    
                    <StackPanel Spacing="4" Margin="0,8,0,0">
                        <TextBlock Text="Last Login: Today 09:45 AM"
                                   FontSize="12"
                                   Foreground="{DynamicResource MTM_Shared_Logic.SecondaryTextBrush}"/>
                        <TextBlock Text="Account Created: January 15, 2024"
                                   FontSize="12"
                                   Foreground="{DynamicResource MTM_Shared_Logic.SecondaryTextBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal"
                        Spacing="12"
                        HorizontalAlignment="Center"
                        Margin="0,16,0,0">
                
                <Button Content="ðŸ’¾ Save Changes"
                        Classes="mtm-primary"
                        MinWidth="120"
                        Height="36"/>
                
                <Button Content="ðŸ”„ Reset Changes"
                        Classes="mtm-secondary"
                        MinWidth="120"
                        Height="36"/>
                
                <Button Content="âŒ Cancel"
                        Classes="mtm-light"
                        MinWidth="80"
                        Height="36"/>
            </StackPanel>

            <!-- Placeholder Notice -->
            <Border Background="{DynamicResource MTM_Shared_Logic.InfoLightBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.InfoBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,16,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="â„¹ï¸"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="This is a placeholder interface. Full functionality will be implemented with backend integration."
                               FontSize="12"
                               Foreground="{DynamicResource MTM_Shared_Logic.InfoTextBrush}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MTM_WIP_Application_Avalonia.Views.SettingsForm.AddPartView">
    
    <!-- Add Part Panel -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel Spacing="16" MaxWidth="600">
            
            <!-- Header -->
            <Border Background="{DynamicResource MTM_Shared_Logic.PrimaryGradientBrush}"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="📦 Add New Part"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Create a new part record in the inventory system"
                               FontSize="14"
                               Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Part Information -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="16">
                    <TextBlock Text="📋 Part Information"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                               Margin="0,0,0,8"/>
                    
                    <!-- Part Number -->
                    <Grid ColumnDefinitions="140,*">
                        <TextBlock Text="Part Number:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBox Grid.Column="1"
                                 Watermark="Enter unique part number (e.g., MTM-001)"
                                 Text=""/>
                    </Grid>
                    
                    <!-- Part Name -->
                    <Grid ColumnDefinitions="140,*">
                        <TextBlock Text="Part Name:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBox Grid.Column="1"
                                 Watermark="Enter descriptive part name"
                                 Text=""/>
                    </Grid>
                    
                    <!-- Description -->
                    <Grid ColumnDefinitions="140,*">
                        <TextBlock Text="Description:"
                                   Grid.Column="0"
                                   VerticalAlignment="Top"
                                   FontWeight="SemiBold"
                                   Margin="0,8,0,0"/>
                        <TextBox Grid.Column="1"
                                 Watermark="Enter detailed description"
                                 AcceptsReturn="True"
                                 Height="80"
                                 TextWrapping="Wrap"/>
                    </Grid>
                    
                    <!-- Part Category -->
                    <Grid ColumnDefinitions="140,*">
                        <TextBlock Text="Category:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <ComboBox Grid.Column="1"
                                  SelectedIndex="-1">
                            <ComboBoxItem Content="Raw Materials"/>
                            <ComboBoxItem Content="Components"/>
                            <ComboBoxItem Content="Assemblies"/>
                            <ComboBoxItem Content="Finished Goods"/>
                            <ComboBoxItem Content="Tools &amp; Equipment"/>
                            <ComboBoxItem Content="Consumables"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Technical Specifications -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="16">
                    <TextBlock Text="📐 Technical Specifications"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                               Margin="0,0,0,8"/>
                    
                    <!-- Dimensions -->
                    <Grid ColumnDefinitions="140,*,20,*,20,*">
                        <TextBlock Text="Dimensions (L×W×H):"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBox Grid.Column="1"
                                 Watermark="Length"
                                 Text=""/>
                        <TextBlock Text="×"
                                   Grid.Column="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Column="3"
                                 Watermark="Width"
                                 Text=""/>
                        <TextBlock Text="×"
                                   Grid.Column="4"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Column="5"
                                 Watermark="Height"
                                 Text=""/>
                    </Grid>
                    
                    <!-- Weight and Unit -->
                    <Grid ColumnDefinitions="140,*,Auto,100">
                        <TextBlock Text="Weight:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <NumericUpDown Grid.Column="1"
                                       Minimum="0"
                                       Maximum="999999"
                                       Increment="0.1"
                                       FormatString="F2"/>
                        <TextBlock Text="Unit:"
                                   Grid.Column="2"
                                   VerticalAlignment="Center"
                                   Margin="12,0,8,0"/>
                        <ComboBox Grid.Column="3"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="kg"/>
                            <ComboBoxItem Content="g"/>
                            <ComboBoxItem Content="lbs"/>
                            <ComboBoxItem Content="oz"/>
                        </ComboBox>
                    </Grid>
                    
                    <!-- Material -->
                    <Grid ColumnDefinitions="140,*">
                        <TextBlock Text="Material:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBox Grid.Column="1"
                                 Watermark="Steel, Aluminum, Plastic, etc."
                                 Text=""/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Inventory Settings -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="16">
                    <TextBlock Text="📊 Inventory Settings"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                               Margin="0,0,0,8"/>
                    
                    <!-- Unit of Measure -->
                    <Grid ColumnDefinitions="140,*">
                        <TextBlock Text="Unit of Measure:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <ComboBox Grid.Column="1"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Each (EA)"/>
                            <ComboBoxItem Content="Pieces (PC)"/>
                            <ComboBoxItem Content="Boxes (BX)"/>
                            <ComboBoxItem Content="Feet (FT)"/>
                            <ComboBoxItem Content="Meters (M)"/>
                            <ComboBoxItem Content="Liters (L)"/>
                        </ComboBox>
                    </Grid>
                    
                    <!-- Stock Levels -->
                    <Grid ColumnDefinitions="140,*,20,140,*">
                        <TextBlock Text="Minimum Stock:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <NumericUpDown Grid.Column="1"
                                       Minimum="0"
                                       Maximum="999999"
                                       Value="10"/>
                        
                        <TextBlock Text="Maximum Stock:"
                                   Grid.Column="3"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <NumericUpDown Grid.Column="4"
                                       Minimum="0"
                                       Maximum="999999"
                                       Value="100"/>
                    </Grid>
                    
                    <!-- Reorder Point -->
                    <Grid ColumnDefinitions="140,*">
                        <TextBlock Text="Reorder Point:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <NumericUpDown Grid.Column="1"
                                       Minimum="0"
                                       Maximum="999999"
                                       Value="20"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Cost Information -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="16">
                    <TextBlock Text="💰 Cost Information"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                               Margin="0,0,0,8"/>
                    
                    <!-- Unit Cost -->
                    <Grid ColumnDefinitions="140,Auto,*">
                        <TextBlock Text="Unit Cost:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="$"
                                   Grid.Column="1"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   Margin="0,0,4,0"/>
                        <NumericUpDown Grid.Column="2"
                                       Minimum="0"
                                       Maximum="999999"
                                       Increment="0.01"
                                       FormatString="F2"/>
                    </Grid>
                    
                    <!-- Supplier Information -->
                    <Grid ColumnDefinitions="140,*">
                        <TextBlock Text="Primary Supplier:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBox Grid.Column="1"
                                 Watermark="Supplier name or company"
                                 Text=""/>
                    </Grid>
                    
                    <!-- Supplier Part Number -->
                    <Grid ColumnDefinitions="140,*">
                        <TextBlock Text="Supplier Part #:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBox Grid.Column="1"
                                 Watermark="Supplier's part number"
                                 Text=""/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Part Settings -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="12">
                    <TextBlock Text="⚙️ Part Settings"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                               Margin="0,0,0,8"/>
                    
                    <CheckBox Content="🔓 Active Part" IsChecked="True"/>
                    <CheckBox Content="📋 Track Serial Numbers" IsChecked="False"/>
                    <CheckBox Content="📦 Track Lot Numbers" IsChecked="False"/>
                    <CheckBox Content="📅 Track Expiration Dates" IsChecked="False"/>
                    <CheckBox Content="🚨 Critical Part (requires approval for changes)" IsChecked="False"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal"
                        Spacing="12"
                        HorizontalAlignment="Center"
                        Margin="0,16,0,0">
                
                <Button Content="💾 Create Part"
                        Classes="mtm-primary"
                        MinWidth="120"
                        Height="36"/>
                
                <Button Content="💾 Create &amp; Add Another"
                        Classes="mtm-secondary"
                        MinWidth="160"
                        Height="36"/>
                
                <Button Content="🔄 Reset Form"
                        Classes="mtm-light"
                        MinWidth="100"
                        Height="36"/>
                
                <Button Content="❌ Cancel"
                        Classes="mtm-light"
                        MinWidth="80"
                        Height="36"/>
            </StackPanel>

            <!-- Placeholder Notice -->
            <Border Background="{DynamicResource MTM_Shared_Logic.InfoLightBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.InfoBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,16,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ℹ️"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="This is a placeholder interface. Full functionality will be implemented with part number validation and backend integration."
                               FontSize="12"
                               Foreground="{DynamicResource MTM_Shared_Logic.InfoTextBrush}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MTM_WIP_Application_Avalonia.Views.SettingsForm.AddOperationView">
    
    <!-- ⚙️ Add New Operation Panel -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel Spacing="16" MaxWidth="600">
            
            <!-- Header -->
            <Border Background="{DynamicResource MTM_Shared_Logic.PrimaryGradientBrush}"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="⚙️ Add New Operation"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Create new workflow operations"
                               FontSize="14"
                               Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- 📋 Operation Information -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="12">
                    <TextBlock Text="📋 Operation Information"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                               Margin="0,0,0,8"/>
                    
                    <StackPanel Spacing="8" Margin="0,12,0,0">
                        <Grid ColumnDefinitions="120,*">
                            <TextBlock Text="Operation #:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Watermark="e.g., 100, 110, 120"/>
                        </Grid>
                        
                        <Grid ColumnDefinitions="120,*">
                            <TextBlock Text="Operation Name:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Watermark="Enter operation name"/>
                        </Grid>
                        
                        <Grid ColumnDefinitions="120,*">
                            <TextBlock Text="Description:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Watermark="Detailed description" AcceptsReturn="True" Height="60"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ⏱️ Time Settings -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="12">
                    <TextBlock Text="⏱️ Time Settings"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                               Margin="0,0,0,8"/>
                    
                    <StackPanel Spacing="8" Margin="0,12,0,0">
                        <Grid ColumnDefinitions="120,*">
                            <TextBlock Text="Standard Time:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <NumericUpDown Grid.Column="1" Minimum="0" Maximum="480" Increment="0.5" Value="8.0" FormatString="F1"/>
                        </Grid>
                        
                        <Grid ColumnDefinitions="120,*">
                            <TextBlock Text="Setup Time:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <NumericUpDown Grid.Column="1" Minimum="0" Maximum="120" Increment="0.25" Value="1.0" FormatString="F2"/>
                        </Grid>
                        
                        <TextBlock Text="Standard time, setup time estimates"
                                   FontSize="14"
                                   Foreground="{DynamicResource MTM_Shared_Logic.BodyText}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal"
                        Spacing="12"
                        HorizontalAlignment="Center"
                        Margin="0,16,0,0">
                
                <Button Content="💾 Create Operation"
                        Classes="mtm-primary"
                        MinWidth="140"
                        Height="36"/>
                
                <Button Content="🔄 Reset"
                        Classes="mtm-secondary"
                        MinWidth="80"
                        Height="36"/>
                
                <Button Content="❌ Cancel"
                        Classes="mtm-light"
                        MinWidth="80"
                        Height="36"/>
            </StackPanel>

            <!-- Placeholder Notice -->
            <Border Background="{DynamicResource MTM_Shared_Logic.InfoLightBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.InfoBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,16,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ℹ️"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="This is a placeholder interface. Full functionality will be implemented with backend integration."
                               FontSize="12"
                               Foreground="{DynamicResource MTM_Shared_Logic.InfoTextBrush}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>

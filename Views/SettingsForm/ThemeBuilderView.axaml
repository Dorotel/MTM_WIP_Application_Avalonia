<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MTM_WIP_Application_Avalonia.Views.SettingsForm.ThemeBuilderView">
    
    <!-- Theme Builder Panel -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel Spacing="16" MaxWidth="700">
            
            <!-- Header -->
            <Border Background="{DynamicResource MTM_Shared_Logic.AccentBrush}"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="🎨 Advanced Theme Builder"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Customize the application appearance with live preview"
                               FontSize="14"
                               Foreground="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Current Theme Preview -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="16">
                    <TextBlock Text="👁️ Current Theme Preview"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                               Margin="0,0,0,8"/>
                    
                    <!-- Preview Area -->
                    <Border Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}"
                            BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="16"
                            Height="120">
                        
                        <Grid ColumnDefinitions="*,*,*">
                            <!-- Sample UI Elements -->
                            <StackPanel Grid.Column="0" Spacing="8">
                                <TextBlock Text="Sample Text"
                                           Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"/>
                                <Button Content="Primary Button"
                                        Classes="mtm-primary"
                                        Height="32"/>
                                <TextBox Watermark="Sample Input"
                                         Width="120"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Spacing="8">
                                <TextBlock Text="Secondary Text"
                                           Foreground="{DynamicResource MTM_Shared_Logic.BodyText}"/>
                                <Button Content="Secondary Button"
                                        Classes="mtm-secondary"
                                        Height="32"/>
                                <CheckBox Content="Sample Checkbox"
                                          IsChecked="True"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Spacing="8">
                                <TextBlock Text="Accent Text"
                                           Foreground="{DynamicResource MTM_Shared_Logic.AccentBrush}"/>
                                <Button Content="Light Button"
                                        Classes="mtm-light"
                                        Height="32"/>
                                <ProgressBar Value="60"
                                             Maximum="100"
                                             Width="100"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Base Theme Selection -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="16">
                    <TextBlock Text="🎨 Base Theme"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                               Margin="0,0,0,8"/>
                    
                    <Grid ColumnDefinitions="*,*,*">
                        <RadioButton Grid.Column="0"
                                     Content="☀️ MTM Light"
                                     IsChecked="True"
                                     GroupName="BaseTheme"/>
                        <RadioButton Grid.Column="1"
                                     Content="🌙 MTM Dark"
                                     GroupName="BaseTheme"/>
                        <RadioButton Grid.Column="2"
                                     Content="🔆 High Contrast"
                                     GroupName="BaseTheme"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Color Customization -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="16">
                    <TextBlock Text="🌈 Color Customization"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                               Margin="0,0,0,8"/>
                    
                    <!-- Primary Colors -->
                    <Grid ColumnDefinitions="150,*,50,*" RowDefinitions="Auto,Auto,Auto,Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Primary Color:"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="#1E88E5"
                                 Margin="0,0,8,0"/>
                        <Border Grid.Row="0" Grid.Column="2"
                                Background="#1E88E5"
                                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Height="32"
                                Width="32"/>
                        <Button Grid.Row="0" Grid.Column="3"
                                Content="🎨 Pick Color"
                                Classes="mtm-light"
                                Height="32"
                                Margin="8,0,0,0"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Accent Color:"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Margin="0,8,0,0"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Text="#FFA726"
                                 Margin="0,8,8,0"/>
                        <Border Grid.Row="1" Grid.Column="2"
                                Background="#FFA726"
                                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Height="32"
                                Width="32"
                                Margin="0,8,0,0"/>
                        <Button Grid.Row="1" Grid.Column="3"
                                Content="🎨 Pick Color"
                                Classes="mtm-light"
                                Height="32"
                                Margin="8,8,0,0"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Success Color:"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Margin="0,8,0,0"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="#4CAF50"
                                 Margin="0,8,8,0"/>
                        <Border Grid.Row="2" Grid.Column="2"
                                Background="#4CAF50"
                                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Height="32"
                                Width="32"
                                Margin="0,8,0,0"/>
                        <Button Grid.Row="2" Grid.Column="3"
                                Content="🎨 Pick Color"
                                Classes="mtm-light"
                                Height="32"
                                Margin="8,8,0,0"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Error Color:"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Margin="0,8,0,0"/>
                        <TextBox Grid.Row="3" Grid.Column="1"
                                 Text="#F44336"
                                 Margin="0,8,8,0"/>
                        <Border Grid.Row="3" Grid.Column="2"
                                Background="#F44336"
                                BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Height="32"
                                Width="32"
                                Margin="0,8,0,0"/>
                        <Button Grid.Row="3" Grid.Column="3"
                                Content="🎨 Pick Color"
                                Classes="mtm-light"
                                Height="32"
                                Margin="8,8,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Typography Settings -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="16">
                    <TextBlock Text="🔤 Typography Settings"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                               Margin="0,0,0,8"/>
                    
                    <!-- Font Family -->
                    <Grid ColumnDefinitions="150,*">
                        <TextBlock Text="Font Family:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <ComboBox Grid.Column="1"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Segoe UI (Default)"/>
                            <ComboBoxItem Content="Arial"/>
                            <ComboBoxItem Content="Calibri"/>
                            <ComboBoxItem Content="Roboto"/>
                            <ComboBoxItem Content="Open Sans"/>
                        </ComboBox>
                    </Grid>
                    
                    <!-- Font Sizes -->
                    <Grid ColumnDefinitions="150,*,20,150,*">
                        <TextBlock Text="Base Font Size:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <NumericUpDown Grid.Column="1"
                                       Value="14"
                                       Minimum="10"
                                       Maximum="20"/>
                        
                        <TextBlock Text="Header Font Size:"
                                   Grid.Column="3"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <NumericUpDown Grid.Column="4"
                                       Value="18"
                                       Minimum="14"
                                       Maximum="24"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Custom Theme Management -->
            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                
                <StackPanel Spacing="16">
                    <TextBlock Text="💾 Custom Theme Management"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}"
                               Margin="0,0,0,8"/>
                    
                    <!-- Theme Name -->
                    <Grid ColumnDefinitions="150,*">
                        <TextBlock Text="Theme Name:"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBox Grid.Column="1"
                                 Watermark="Enter custom theme name"
                                 Text=""/>
                    </Grid>
                    
                    <!-- Saved Themes List -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Saved Custom Themes:"
                                   FontWeight="SemiBold"/>
                        
                        <ListBox Height="100"
                                 Background="{DynamicResource MTM_Shared_Logic.PanelBackgroundBrush}">
                            <ListBoxItem Content="🎨 Corporate Blue"/>
                            <ListBoxItem Content="🌿 Nature Green"/>
                            <ListBoxItem Content="🔥 Energy Red"/>
                            <ListBoxItem Content="💜 Modern Purple"/>
                        </ListBox>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal"
                        Spacing="12"
                        HorizontalAlignment="Center"
                        Margin="0,16,0,0">
                
                <Button Content="👁️ Preview Theme"
                        Classes="mtm-primary"
                        MinWidth="120"
                        Height="36"/>
                
                <Button Content="💾 Save Theme"
                        Classes="mtm-secondary"
                        MinWidth="120"
                        Height="36"/>
                
                <Button Content="📥 Import Theme"
                        Classes="mtm-light"
                        MinWidth="120"
                        Height="36"/>
                
                <Button Content="📤 Export Theme"
                        Classes="mtm-light"
                        MinWidth="120"
                        Height="36"/>
                
                <Button Content="🔄 Reset to Default"
                        Classes="mtm-light"
                        MinWidth="140"
                        Height="36"/>
            </StackPanel>

            <!-- Placeholder Notice -->
            <Border Background="{DynamicResource MTM_Shared_Logic.InfoLightBrush}"
                    BorderBrush="{DynamicResource MTM_Shared_Logic.InfoBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,16,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ℹ️"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="This is a placeholder interface. Full theme builder functionality will include real-time color picker, live preview updates, and theme file management."
                               FontSize="12"
                               Foreground="{DynamicResource MTM_Shared_Logic.InfoTextBrush}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>

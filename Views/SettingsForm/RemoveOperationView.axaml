<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MTM_WIP_Application_Avalonia.Views.SettingsForm.RemoveOperationView">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel Spacing="16" MaxWidth="600">
            
            <Border Background="{DynamicResource MTM_Shared_Logic.ErrorBrush}" CornerRadius="8" Padding="16">
                <StackPanel>
                    <TextBlock Text="🗑️ Remove Operation" FontSize="20" FontWeight="Bold" 
                               Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Remove operations with dependency checks" FontSize="14" 
                               Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource MTM_Shared_Logic.WarningLightBrush}" BorderBrush="{DynamicResource MTM_Shared_Logic.WarningBrush}" 
                    BorderThickness="2" CornerRadius="8" Padding="16">
                <StackPanel Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="⚠️" FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock Text="⚠️ Warning" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource MTM_Shared_Logic.WarningTextBrush}"/>
                    </StackPanel>
                    <TextBlock Text="Operation removal affects existing workflows" FontSize="14" 
                               Foreground="{DynamicResource MTM_Shared_Logic.WarningTextBrush}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}" BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                    BorderThickness="1" CornerRadius="8" Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="🔍 Operation Selection" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" Margin="0,0,0,8"/>
                    <Grid ColumnDefinitions="120,*">
                        <TextBlock Text="Select Operation:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" SelectedIndex="-1">
                            <ComboBoxItem Content="100 - Cutting (Used by 15 parts)"/>
                            <ComboBoxItem Content="110 - Drilling (Used by 8 parts)"/>
                            <ComboBoxItem Content="999 - Test Operation (Not used)"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center" Margin="0,16,0,0">
                <Button Content="🗑️ Remove Operation" Classes="mtm-danger" MinWidth="140" Height="36" IsEnabled="False"/>
                <Button Content="❌ Cancel" Classes="mtm-light" MinWidth="80" Height="36"/>
            </StackPanel>

            <Border Background="{DynamicResource MTM_Shared_Logic.InfoLightBrush}" BorderBrush="{DynamicResource MTM_Shared_Logic.InfoBrush}" 
                    BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,16,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ℹ️" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Text="This is a placeholder interface. Full functionality will be implemented with backend integration."
                               FontSize="12" Foreground="{DynamicResource MTM_Shared_Logic.InfoTextBrush}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>

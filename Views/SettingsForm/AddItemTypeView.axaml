<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MTM_WIP_Application_Avalonia.Views.SettingsForm.AddItemTypeView">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel Spacing="16" MaxWidth="600">
            
            <Border Background="{DynamicResource MTM_Shared_Logic.PrimaryGradientBrush}" CornerRadius="8" Padding="16">
                <StackPanel>
                    <TextBlock Text="📦 Add New Item Type" FontSize="20" FontWeight="Bold" 
                               Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Create new item type classifications" FontSize="14" 
                               Foreground="{DynamicResource MTM_Shared_Logic.TextonDark}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}" BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                    BorderThickness="1" CornerRadius="8" Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="📋 Type Information" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" Margin="0,0,0,8"/>
                    <Grid ColumnDefinitions="120,*">
                        <TextBlock Text="Type Code:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Watermark="e.g., RAW, COMP, ASSY"/>
                    </Grid>
                    <Grid ColumnDefinitions="120,*">
                        <TextBlock Text="Type Name:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Watermark="Descriptive type name"/>
                    </Grid>
                    <Grid ColumnDefinitions="120,*">
                        <TextBlock Text="Description:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Watermark="Detailed description" AcceptsReturn="True" Height="60"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}" BorderBrush="{DynamicResource MTM_Shared_Logic.BorderBrush}" 
                    BorderThickness="1" CornerRadius="8" Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="📊 Classification" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource MTM_Shared_Logic.HeadingText}" Margin="0,0,0,8"/>
                    <Grid ColumnDefinitions="120,*">
                        <TextBlock Text="Category:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" SelectedIndex="0">
                            <ComboBoxItem Content="Production Material"/>
                            <ComboBoxItem Content="Maintenance Supply"/>
                            <ComboBoxItem Content="Office Supply"/>
                            <ComboBoxItem Content="Safety Equipment"/>
                        </ComboBox>
                    </Grid>
                    <Grid ColumnDefinitions="120,*">
                        <TextBlock Text="Priority:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" SelectedIndex="1">
                            <ComboBoxItem Content="Low"/>
                            <ComboBoxItem Content="Normal"/>
                            <ComboBoxItem Content="High"/>
                            <ComboBoxItem Content="Critical"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center" Margin="0,16,0,0">
                <Button Content="💾 Create Type" Classes="mtm-primary" MinWidth="120" Height="36"/>
                <Button Content="🔄 Reset" Classes="mtm-secondary" MinWidth="80" Height="36"/>
                <Button Content="❌ Cancel" Classes="mtm-light" MinWidth="80" Height="36"/>
            </StackPanel>

            <Border Background="{DynamicResource MTM_Shared_Logic.InfoLightBrush}" BorderBrush="{DynamicResource MTM_Shared_Logic.InfoBrush}" 
                    BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,16,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ℹ️" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Text="This is a placeholder interface. Full functionality will be implemented with backend integration."
                               FontSize="12" Foreground="{DynamicResource MTM_Shared_Logic.InfoTextBrush}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>

<UserControl xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:vm="using:MTM_WIP_Application_Avalonia.ViewModels" mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800" x:Class="MTM_WIP_Application_Avalonia.Views.SettingsView" x:Name="SettingsViewRoot" x:DataType="vm:SettingsViewModel">

    <!-- Comprehensive Settings Form with TreeView Navigation + TabView Content -->
    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header Section -->
        <Border Grid.Row="0" Background="#2196F3" CornerRadius="8" Padding="20" Margin="10,10,10,5">
            <StackPanel>
                <TextBlock Text="⚙️ Advanced Settings &amp; Administration" FontSize="24" FontWeight="Bold" Foreground="#212121" HorizontalAlignment="Center" />
                <TextBlock Text="Comprehensive configuration and administrative hub" FontSize="14" Foreground="#212121" HorizontalAlignment="Center" Margin="0,8,0,0" />
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" ColumnDefinitions="250,*" Margin="10,5,10,5">
            
            <!-- TreeView Navigator -->
            <Border Grid.Column="0" Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="0" Margin="0,0,5,0">
                
                <Grid RowDefinitions="Auto,*">
                    <!-- Navigator Header -->
                    <Border Grid.Row="0" Background="#2196F3" CornerRadius="8,8,0,0" Padding="12">
                        <TextBlock Text="📂 Settings Categories" FontWeight="SemiBold" Foreground="#FFFFFF" FontSize="14" />
                    </Border>
                    
                    <!-- TreeView Navigation -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="8">
                        <TreeView ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" Background="Transparent" BorderThickness="0">
                            
                            <!-- TreeView Item Template -->
                            <TreeView.DataTemplates>
                                <TreeDataTemplate DataType="vm:SettingsCategoryViewModel" ItemsSource="{Binding SubCategories}">
                                    <Border Padding="8,6" CornerRadius="4" Margin="2">
                                        <Border.Styles>
                                            <Style Selector="Border:pointerover">
                                                <Setter Property="Background" Value="#E6E6F0" />
                                            </Style>
                                        </Border.Styles>
                                        
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="{Binding Icon}" FontSize="16" VerticalAlignment="Center" />
                                            <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" Foreground="#212121" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                </TreeDataTemplate>
                            </TreeView.DataTemplates>
                        </TreeView>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Dynamic Content Area -->
            <Border Grid.Column="1" Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Margin="5,0,0,0">
                
                <Grid RowDefinitions="Auto,*">
                    <!-- Content Header -->
                    <Border Grid.Row="0" Background="#757575" CornerRadius="8,8,0,0" Padding="20,12">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="{Binding SelectedCategory.Icon}" FontSize="20" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding SelectedCategory.DisplayName}" FontSize="18" FontWeight="SemiBold" Foreground="#212121" VerticalAlignment="Center" />
                            </StackPanel>
                            
                            <!-- Unsaved Changes Indicator -->
                            <Border Grid.Column="1" Background="#FF9800" CornerRadius="12" Padding="8,4" IsVisible="{Binding HasUnsavedChanges}">
                                <TextBlock Text="● Unsaved Changes" FontSize="12" Foreground="#212121" FontWeight="SemiBold" />
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- Hidden TabStrip for Panel Management -->
                    <TabStrip Grid.Row="1" ItemsSource="{Binding LoadedPanels}" IsVisible="False" />
                    
                    <!-- Content Display Area -->
                    <ContentPresenter Grid.Row="1" Content="{Binding SelectedPanel.Content}" />
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="15,8" Margin="10,5,10,10">
            
            <Grid ColumnDefinitions="*,Auto,Auto">
                <!-- Status Message -->
                <TextBlock Grid.Column="0" Text="{Binding CurrentStatusMessage}" Foreground="#424242" VerticalAlignment="Center" />
                
                <!-- Loading Indicator -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" IsVisible="{Binding IsLoading}" Margin="0,0,12,0">
                    <ProgressBar IsIndeterminate="True" Width="100" Height="4" VerticalAlignment="Center" />
                    <TextBlock Text="Processing..." FontSize="12" Foreground="#424242" VerticalAlignment="Center" />
                </StackPanel>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    
                    <Button Content="💾 Save All" Classes="mtm-primary" Command="{Binding SaveAllChangesCommand}" IsEnabled="{Binding CanSaveChanges}" MinWidth="90" Height="32" />
                    
                    <Button Content="🔄 Revert" Classes="mtm-secondary" Command="{Binding RevertAllChangesCommand}" IsEnabled="{Binding HasUnsavedChanges}" MinWidth="80" Height="32" />
                    
                    <Button Content="❌ Close" Classes="mtm-secondary" Command="{Binding CloseCommand}" MinWidth="70" Height="32" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</UserControl>

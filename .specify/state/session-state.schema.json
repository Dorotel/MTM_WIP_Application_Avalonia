{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GSC Session State Schema",
  "description": "JSON schema for GSC development session tracking and collaboration",
  "type": "object",
  "required": [
    "sessionId",
    "started",
    "status"
  ],
  "properties": {
    "sessionId": {
      "type": "string",
      "pattern": "^ses-[a-zA-Z0-9-_]{8,32}$",
      "description": "Unique session identifier"
    },
    "started": {
      "type": "string",
      "format": "date-time",
      "description": "Session start timestamp"
    },
    "ended": {
      "type": "string",
      "format": "date-time",
      "description": "Session end timestamp"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "paused",
        "completed",
        "abandoned",
        "crashed"
      ],
      "description": "Current session status"
    },
    "participants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "human",
              "ai",
              "system"
            ]
          },
          "joined": {
            "type": "string",
            "format": "date-time"
          },
          "left": {
            "type": "string",
            "format": "date-time"
          },
          "contributions": {
            "type": "integer",
            "description": "Number of contributions made"
          }
        }
      }
    },
    "workflow": {
      "type": "object",
      "description": "Associated workflow information",
      "properties": {
        "workflowId": {
          "type": "string"
        },
        "phase": {
          "type": "string"
        },
        "objective": {
          "type": "string"
        },
        "scope": {
          "type": "string"
        }
      }
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "commandId": {
            "type": "string"
          },
          "command": {
            "type": "string"
          },
          "executed": {
            "type": "string",
            "format": "date-time"
          },
          "duration": {
            "type": "number"
          },
          "success": {
            "type": "boolean"
          },
          "participant": {
            "type": "string"
          }
        }
      }
    },
    "collaboration": {
      "type": "object",
      "description": "Collaboration state and locks",
      "properties": {
        "locks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "resource": {
                "type": "string"
              },
              "holder": {
                "type": "string"
              },
              "acquired": {
                "type": "string",
                "format": "date-time"
              },
              "expires": {
                "type": "string",
                "format": "date-time"
              },
              "type": {
                "type": "string",
                "enum": [
                  "exclusive",
                  "shared",
                  "advisory"
                ]
              }
            }
          }
        },
        "conflicts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "resource": {
                "type": "string"
              },
              "participants": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "detected": {
                "type": "string",
                "format": "date-time"
              },
              "resolved": {
                "type": "string",
                "format": "date-time"
              },
              "resolution": {
                "type": "string"
              }
            }
          }
        },
        "handoffs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "from": {
                "type": "string"
              },
              "to": {
                "type": "string"
              },
              "task": {
                "type": "string"
              },
              "timestamp": {
                "type": "string",
                "format": "date-time"
              },
              "context": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "environment": {
      "type": "object",
      "description": "Session environment details",
      "properties": {
        "platform": {
          "type": "string"
        },
        "powershellVersion": {
          "type": "string"
        },
        "pesterVersion": {
          "type": "string"
        },
        "workingDirectory": {
          "type": "string"
        },
        "memoryAvailable": {
          "type": "boolean"
        },
        "networkConnected": {
          "type": "boolean"
        },
        "diskSpace": {
          "type": "integer",
          "description": "Available disk space in bytes"
        }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Session performance and productivity metrics",
      "properties": {
        "duration": {
          "type": "number",
          "description": "Total session duration in seconds"
        },
        "activeTime": {
          "type": "number",
          "description": "Active development time in seconds"
        },
        "commandCount": {
          "type": "integer"
        },
        "successRate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "avgCommandTime": {
          "type": "number"
        },
        "peakMemoryUsage": {
          "type": "integer"
        },
        "filesModified": {
          "type": "integer"
        },
        "linesOfCode": {
          "type": "integer"
        },
        "testsRun": {
          "type": "integer"
        },
        "testsChanged": {
          "type": "integer"
        }
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "created": {
            "type": "string",
            "format": "date-time"
          },
          "size": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "recovery": {
      "type": "object",
      "description": "Session recovery and continuity information",
      "properties": {
        "checkpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": {
                "type": "string",
                "format": "date-time"
              },
              "state": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            }
          }
        },
        "resumable": {
          "type": "boolean"
        },
        "recoveryData": {
          "type": "string",
          "description": "Serialized recovery state"
        }
      }
    }
  }
}

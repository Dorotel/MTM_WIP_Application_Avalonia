<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

<!-- Include the color primitive tokens -->
<ResourceDictionary.MergedDictionaries>
    <ResourceInclude Source="avares://MTM_WIP_Application_Avalonia/Resources/ThemesV2/Tokens.axaml"/>
</ResourceDictionary.MergedDictionaries>

<!--
Theme V2 Semantic Token Layer
=============================
Role-based semantic mapping of color primitives to UI purposes
This layer provides meaning and context to the raw color tokens
Following MTM architectural patterns and WCAG 2.1 AA compliance
-->

<!-- ===========================================
     BACKGROUND SEMANTIC ROLES
     =========================================== -->

<!-- Primary background surfaces -->
<SolidColorBrush x:Key="ThemeV2.Background.Canvas" Color="{StaticResource ThemeV2.Color.Pure.White}"/>
<SolidColorBrush x:Key="ThemeV2.Background.Surface" Color="{StaticResource ThemeV2.Color.Gray.50}"/>
<SolidColorBrush x:Key="ThemeV2.Background.Card" Color="{StaticResource ThemeV2.Color.Pure.White}"/>

<!-- Secondary background surfaces -->
<SolidColorBrush x:Key="ThemeV2.Background.Subtle" Color="{StaticResource ThemeV2.Color.Gray.100}"/>
<SolidColorBrush x:Key="ThemeV2.Background.Muted" Color="{StaticResource ThemeV2.Color.Gray.200}"/>

<!-- Interactive background states -->
<SolidColorBrush x:Key="ThemeV2.Background.Hover" Color="{StaticResource ThemeV2.Color.Gray.100}"/>
<SolidColorBrush x:Key="ThemeV2.Background.Pressed" Color="{StaticResource ThemeV2.Color.Gray.200}"/>
<SolidColorBrush x:Key="ThemeV2.Background.Selected" Color="{StaticResource ThemeV2.Color.Blue.50}"/>
<SolidColorBrush x:Key="ThemeV2.Background.Focus" Color="{StaticResource ThemeV2.Color.Blue.100}"/>

<!-- ===========================================
     CONTENT/TEXT SEMANTIC ROLES
     =========================================== -->

<!-- Primary text colors -->
<SolidColorBrush x:Key="ThemeV2.Content.Primary" Color="{StaticResource ThemeV2.Color.Gray.900}"/>
<SolidColorBrush x:Key="ThemeV2.Content.Secondary" Color="{StaticResource ThemeV2.Color.Gray.700}"/>
<SolidColorBrush x:Key="ThemeV2.Content.Tertiary" Color="{StaticResource ThemeV2.Color.Gray.500}"/>

<!-- Interactive text states -->
<SolidColorBrush x:Key="ThemeV2.Content.Disabled" Color="{StaticResource ThemeV2.Color.Gray.400}"/>
<SolidColorBrush x:Key="ThemeV2.Content.Placeholder" Color="{StaticResource ThemeV2.Color.Gray.400}"/>

<!-- Inverted content (for dark backgrounds) -->
<SolidColorBrush x:Key="ThemeV2.Content.OnDark" Color="{StaticResource ThemeV2.Color.Pure.White}"/>
<SolidColorBrush x:Key="ThemeV2.Content.OnColor" Color="{StaticResource ThemeV2.Color.Pure.White}"/>

<!-- ===========================================
     ACTION/INTERACTIVE SEMANTIC ROLES
     =========================================== -->

<!-- Primary action colors -->
<SolidColorBrush x:Key="ThemeV2.Action.Primary" Color="{StaticResource ThemeV2.Color.Blue.600}"/>
<SolidColorBrush x:Key="ThemeV2.Action.Primary.Hover" Color="{StaticResource ThemeV2.Color.Blue.700}"/>
<SolidColorBrush x:Key="ThemeV2.Action.Primary.Pressed" Color="{StaticResource ThemeV2.Color.Blue.800}"/>
<SolidColorBrush x:Key="ThemeV2.Action.Primary.Disabled" Color="{StaticResource ThemeV2.Color.Gray.300}"/>

<!-- Secondary action colors -->
<SolidColorBrush x:Key="ThemeV2.Action.Secondary" Color="{StaticResource ThemeV2.Color.Gray.600}"/>
<SolidColorBrush x:Key="ThemeV2.Action.Secondary.Hover" Color="{StaticResource ThemeV2.Color.Gray.700}"/>
<SolidColorBrush x:Key="ThemeV2.Action.Secondary.Pressed" Color="{StaticResource ThemeV2.Color.Gray.800}"/>
<SolidColorBrush x:Key="ThemeV2.Action.Secondary.Disabled" Color="{StaticResource ThemeV2.Color.Gray.300}"/>

<!-- Destructive action colors -->
<SolidColorBrush x:Key="ThemeV2.Action.Destructive" Color="{StaticResource ThemeV2.Color.Red.600}"/>
<SolidColorBrush x:Key="ThemeV2.Action.Destructive.Hover" Color="{StaticResource ThemeV2.Color.Red.700}"/>
<SolidColorBrush x:Key="ThemeV2.Action.Destructive.Pressed" Color="{StaticResource ThemeV2.Color.Red.800}"/>

<!-- Link colors -->
<SolidColorBrush x:Key="ThemeV2.Action.Link" Color="{StaticResource ThemeV2.Color.Blue.600}"/>
<SolidColorBrush x:Key="ThemeV2.Action.Link.Hover" Color="{StaticResource ThemeV2.Color.Blue.800}"/>
<SolidColorBrush x:Key="ThemeV2.Action.Link.Visited" Color="{StaticResource ThemeV2.Color.Blue.700}"/>

<!-- ===========================================
     STATUS/STATE SEMANTIC ROLES
     =========================================== -->

<!-- Success states -->
<SolidColorBrush x:Key="ThemeV2.Status.Success" Color="{StaticResource ThemeV2.Color.Green.600}"/>
<SolidColorBrush x:Key="ThemeV2.Status.Success.Background" Color="{StaticResource ThemeV2.Color.Green.50}"/>
<SolidColorBrush x:Key="ThemeV2.Status.Success.Border" Color="{StaticResource ThemeV2.Color.Green.200}"/>

<!-- Warning states -->
<SolidColorBrush x:Key="ThemeV2.Status.Warning" Color="{StaticResource ThemeV2.Color.Yellow.600}"/>
<SolidColorBrush x:Key="ThemeV2.Status.Warning.Background" Color="{StaticResource ThemeV2.Color.Yellow.50}"/>
<SolidColorBrush x:Key="ThemeV2.Status.Warning.Border" Color="{StaticResource ThemeV2.Color.Yellow.200}"/>

<!-- Error states -->
<SolidColorBrush x:Key="ThemeV2.Status.Error" Color="{StaticResource ThemeV2.Color.Red.600}"/>
<SolidColorBrush x:Key="ThemeV2.Status.Error.Background" Color="{StaticResource ThemeV2.Color.Red.50}"/>
<SolidColorBrush x:Key="ThemeV2.Status.Error.Border" Color="{StaticResource ThemeV2.Color.Red.200}"/>

<!-- Info states -->
<SolidColorBrush x:Key="ThemeV2.Status.Info" Color="{StaticResource ThemeV2.Color.Blue.600}"/>
<SolidColorBrush x:Key="ThemeV2.Status.Info.Background" Color="{StaticResource ThemeV2.Color.Blue.50}"/>
<SolidColorBrush x:Key="ThemeV2.Status.Info.Border" Color="{StaticResource ThemeV2.Color.Blue.200}"/>

<!-- ===========================================
     BORDER/OUTLINE SEMANTIC ROLES
     =========================================== -->

<!-- Default borders -->
<SolidColorBrush x:Key="ThemeV2.Border.Default" Color="{StaticResource ThemeV2.Color.Gray.300}"/>
<SolidColorBrush x:Key="ThemeV2.Border.Subtle" Color="{StaticResource ThemeV2.Color.Gray.200}"/>
<SolidColorBrush x:Key="ThemeV2.Border.Strong" Color="{StaticResource ThemeV2.Color.Gray.400}"/>

<!-- Interactive border states -->
<SolidColorBrush x:Key="ThemeV2.Border.Hover" Color="{StaticResource ThemeV2.Color.Gray.400}"/>
<SolidColorBrush x:Key="ThemeV2.Border.Focus" Color="{StaticResource ThemeV2.Color.Focus}"/>
<SolidColorBrush x:Key="ThemeV2.Border.Pressed" Color="{StaticResource ThemeV2.Color.Gray.500}"/>
<SolidColorBrush x:Key="ThemeV2.Border.Disabled" Color="{StaticResource ThemeV2.Color.Gray.200}"/>

<!-- ===========================================
     OVERLAY/MODAL SEMANTIC ROLES
     =========================================== -->

<!-- Overlay backgrounds -->
<SolidColorBrush x:Key="ThemeV2.Overlay.Background" Color="{StaticResource ThemeV2.Color.Overlay.Dark}"/>
<SolidColorBrush x:Key="ThemeV2.Overlay.Content" Color="{StaticResource ThemeV2.Color.Pure.White}"/>

<!-- Tooltip backgrounds -->
<SolidColorBrush x:Key="ThemeV2.Tooltip.Background" Color="{StaticResource ThemeV2.Color.Gray.900}"/>
<SolidColorBrush x:Key="ThemeV2.Tooltip.Content" Color="{StaticResource ThemeV2.Color.Pure.White}"/>

<!-- ===========================================
     NAVIGATION/SIDEBAR SEMANTIC ROLES
     =========================================== -->

<!-- Navigation backgrounds (following existing MTM patterns) -->
<SolidColorBrush x:Key="ThemeV2.Navigation.Background" Color="{StaticResource ThemeV2.Color.Gray.900}"/>
<SolidColorBrush x:Key="ThemeV2.Navigation.Item" Color="Transparent"/>
<SolidColorBrush x:Key="ThemeV2.Navigation.Item.Hover" Color="{StaticResource ThemeV2.Color.Gray.800}"/>
<SolidColorBrush x:Key="ThemeV2.Navigation.Item.Selected" Color="{StaticResource ThemeV2.Color.Blue.600}"/>
<SolidColorBrush x:Key="ThemeV2.Navigation.Content" Color="{StaticResource ThemeV2.Color.Gray.100}"/>

<!-- ===========================================
     FORM/INPUT SEMANTIC ROLES
     =========================================== -->

<!-- Input field backgrounds -->
<SolidColorBrush x:Key="ThemeV2.Input.Background" Color="{StaticResource ThemeV2.Color.Pure.White}"/>
<SolidColorBrush x:Key="ThemeV2.Input.Background.Hover" Color="{StaticResource ThemeV2.Color.Gray.50}"/>
<SolidColorBrush x:Key="ThemeV2.Input.Background.Focus" Color="{StaticResource ThemeV2.Color.Pure.White}"/>
<SolidColorBrush x:Key="ThemeV2.Input.Background.Disabled" Color="{StaticResource ThemeV2.Color.Gray.100}"/>

<!-- Input field borders -->
<SolidColorBrush x:Key="ThemeV2.Input.Border" Color="{StaticResource ThemeV2.Color.Gray.300}"/>
<SolidColorBrush x:Key="ThemeV2.Input.Border.Hover" Color="{StaticResource ThemeV2.Color.Gray.400}"/>
<SolidColorBrush x:Key="ThemeV2.Input.Border.Focus" Color="{StaticResource ThemeV2.Color.Blue.600}"/>
<SolidColorBrush x:Key="ThemeV2.Input.Border.Error" Color="{StaticResource ThemeV2.Color.Red.600}"/>

<!-- Input field content -->
<SolidColorBrush x:Key="ThemeV2.Input.Content" Color="{StaticResource ThemeV2.Color.Gray.900}"/>
<SolidColorBrush x:Key="ThemeV2.Input.Placeholder" Color="{StaticResource ThemeV2.Color.Gray.500}"/>

<!-- ===========================================
     DATA GRID/TABLE SEMANTIC ROLES
     =========================================== -->

<!-- Table backgrounds -->
<SolidColorBrush x:Key="ThemeV2.Table.Background" Color="{StaticResource ThemeV2.Color.Pure.White}"/>
<SolidColorBrush x:Key="ThemeV2.Table.Header.Background" Color="{StaticResource ThemeV2.Color.Gray.100}"/>
<SolidColorBrush x:Key="ThemeV2.Table.Row.Alternate" Color="{StaticResource ThemeV2.Color.Gray.50}"/>
<SolidColorBrush x:Key="ThemeV2.Table.Row.Hover" Color="{StaticResource ThemeV2.Color.Blue.50}"/>
<SolidColorBrush x:Key="ThemeV2.Table.Row.Selected" Color="{StaticResource ThemeV2.Color.Blue.100}"/>

<!-- Table borders -->
<SolidColorBrush x:Key="ThemeV2.Table.Border" Color="{StaticResource ThemeV2.Color.Gray.200}"/>
<SolidColorBrush x:Key="ThemeV2.Table.Border.Strong" Color="{StaticResource ThemeV2.Color.Gray.300}"/>

<!-- ===========================================
     MTM-SPECIFIC SEMANTIC ROLES
     =========================================== -->

<!-- Manufacturing context colors -->
<SolidColorBrush x:Key="ThemeV2.MTM.Inventory.In" Color="{StaticResource ThemeV2.Color.Green.600}"/>
<SolidColorBrush x:Key="ThemeV2.MTM.Inventory.Out" Color="{StaticResource ThemeV2.Color.Red.600}"/>
<SolidColorBrush x:Key="ThemeV2.MTM.Inventory.Transfer" Color="{StaticResource ThemeV2.Color.Blue.600}"/>

<!-- Operation status colors -->
<SolidColorBrush x:Key="ThemeV2.MTM.Operation.90" Color="{StaticResource ThemeV2.Color.Blue.600}"/>   <!-- Move -->
<SolidColorBrush x:Key="ThemeV2.MTM.Operation.100" Color="{StaticResource ThemeV2.Color.Green.600}"/> <!-- Receive -->
<SolidColorBrush x:Key="ThemeV2.MTM.Operation.110" Color="{StaticResource ThemeV2.Color.Red.600}"/>   <!-- Ship -->

<!-- Quick button states -->
<SolidColorBrush x:Key="ThemeV2.MTM.QuickButton.Background" Color="{StaticResource ThemeV2.Color.Blue.600}"/>
<SolidColorBrush x:Key="ThemeV2.MTM.QuickButton.Background.Hover" Color="{StaticResource ThemeV2.Color.Blue.700}"/>
<SolidColorBrush x:Key="ThemeV2.MTM.QuickButton.Content" Color="{StaticResource ThemeV2.Color.Pure.White}"/>

<!-- ===========================================
     COMPONENT-SPECIFIC SEMANTIC ROLES
     =========================================== -->

<!-- CollapsiblePanel colors -->
<SolidColorBrush x:Key="ThemeV2.CollapsiblePanel.Header" Color="{StaticResource ThemeV2.Color.Gray.100}"/>
<SolidColorBrush x:Key="ThemeV2.CollapsiblePanel.Content" Color="{StaticResource ThemeV2.Color.Pure.White}"/>
<SolidColorBrush x:Key="ThemeV2.CollapsiblePanel.Border" Color="{StaticResource ThemeV2.Color.Gray.200}"/>

<!-- Session history panel colors -->
<SolidColorBrush x:Key="ThemeV2.SessionHistory.Background" Color="{StaticResource ThemeV2.Color.Gray.50}"/>
<SolidColorBrush x:Key="ThemeV2.SessionHistory.Item" Color="{StaticResource ThemeV2.Color.Pure.White}"/>
<SolidColorBrush x:Key="ThemeV2.SessionHistory.Item.Hover" Color="{StaticResource ThemeV2.Color.Gray.100}"/>

<!-- Success overlay colors -->
<SolidColorBrush x:Key="ThemeV2.SuccessOverlay.Background" Color="{StaticResource ThemeV2.Color.Green.50}"/>
<SolidColorBrush x:Key="ThemeV2.SuccessOverlay.Border" Color="{StaticResource ThemeV2.Color.Green.200}"/>
<SolidColorBrush x:Key="ThemeV2.SuccessOverlay.Content" Color="{StaticResource ThemeV2.Color.Green.800}"/>

</ResourceDictionary>

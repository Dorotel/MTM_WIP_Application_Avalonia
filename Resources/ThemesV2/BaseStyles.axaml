<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:ClassModifier="internal">

<!-- Include foundation layers -->
<Styles.Resources>
    <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
            <ResourceInclude Source="avares://MTM_WIP_Application_Avalonia/Resources/ThemesV2/Tokens.axaml"/>
            <ResourceInclude Source="avares://MTM_WIP_Application_Avalonia/Resources/ThemesV2/Semantic.axaml"/>
            <ResourceInclude Source="avares://MTM_WIP_Application_Avalonia/Resources/ThemesV2/Theme.Light.axaml"/>
            <ResourceInclude Source="avares://MTM_WIP_Application_Avalonia/Resources/ThemesV2/Theme.Dark.axaml"/>
        </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
</Styles.Resources>

<!--
Theme V2 Base Control Styles
============================
Provides default styling for all Avalonia UI controls using semantic tokens
Compatible with Avalonia 11.3.4 and follows MTM architectural patterns
WCAG 2.1 AA compliant with 4.5:1 contrast ratios
-->

<!-- ===========================================
     BUTTON CONTROL STYLES
     =========================================== -->

<Style Selector="Button">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Primary}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.OnColor}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Default}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Medium}"/>
    <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Small}"/>
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.FontSize.MD}"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.FontWeight.Regular}"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="Template">
        <ControlTemplate>
            <Border Name="ButtonBorder"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{TemplateBinding CornerRadius}"
                    Padding="{TemplateBinding Padding}">
                <ContentPresenter Name="ButtonContent"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                Content="{TemplateBinding Content}"
                                HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
            </Border>
        </ControlTemplate>
    </Setter>
</Style>

<Style Selector="Button:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Primary.Hover}"/>
</Style>

<Style Selector="Button:pressed">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Primary.Pressed}"/>
</Style>

<Style Selector="Button:disabled">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Primary.Disabled}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Disabled}"/>
    <Setter Property="Opacity" Value="{StaticResource ThemeV2.Opacity.Disabled}"/>
</Style>

<!-- Secondary button variant -->
<Style Selector="Button.Secondary">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Secondary}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
</Style>

<Style Selector="Button.Secondary:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Secondary.Hover}"/>
</Style>

<Style Selector="Button.Secondary:pressed">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Secondary.Pressed}"/>
</Style>

<!-- ===========================================
     TEXTBOX CONTROL STYLES
     =========================================== -->

<Style Selector="TextBox">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Input.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Input.Content}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Input.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
    <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Small}"/>
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Body.FontSize}"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
</Style>

<Style Selector="TextBox:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Input.Background.Hover}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Input.Border.Hover}"/>
</Style>

<Style Selector="TextBox:focus">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Input.Background.Focus}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Input.Border.Focus}"/>
    <Setter Property="BorderThickness" Value="2"/>
</Style>

<Style Selector="TextBox:disabled">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Input.Background.Disabled}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Disabled}"/>
    <Setter Property="Opacity" Value="{StaticResource ThemeV2.Opacity.Disabled}"/>
</Style>

<Style Selector="TextBox /template/ TextBlock#PART_Watermark">
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Input.Placeholder}"/>
    <Setter Property="FontStyle" Value="Italic"/>
</Style>

<!-- ===========================================
     COMBOBOX CONTROL STYLES
     =========================================== -->

<Style Selector="ComboBox">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Input.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Input.Content}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Input.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
    <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Small}"/>
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Body.FontSize}"/>
</Style>

<Style Selector="ComboBox:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Input.Background.Hover}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Input.Border.Hover}"/>
</Style>

<Style Selector="ComboBox:focus">
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Input.Border.Focus}"/>
    <Setter Property="BorderThickness" Value="2"/>
</Style>

<!-- ===========================================
     DATAGRID CONTROL STYLES
     =========================================== -->

<Style Selector="DataGrid">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Table.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Table.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Medium}"/>
    <Setter Property="HeadersVisibility" Value="Column"/>
    <Setter Property="GridLinesVisibility" Value="Horizontal"/>
    <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource ThemeV2.Table.Border}"/>
    <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource ThemeV2.Table.Border}"/>
    <!-- Note: AlternatingRowBackground not available in Avalonia DataGrid - use row styling instead -->
    <Setter Property="RowHeight" Value="36"/>
</Style>

<Style Selector="DataGridColumnHeader">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Table.Header.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Table.Border.Strong}"/>
    <Setter Property="BorderThickness" Value="0,0,1,1"/>
    <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Medium}"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Heading6.FontWeight}"/>
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Body.FontSize}"/>
    <Setter Property="HorizontalContentAlignment" Value="Left"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
</Style>

<Style Selector="DataGridRow">
    <Setter Property="Background" Value="Transparent"/>
</Style>

<Style Selector="DataGridRow:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Table.Row.Hover}"/>
</Style>

<Style Selector="DataGridRow:selected">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Table.Row.Selected}"/>
</Style>

<!-- ===========================================
     BORDER CONTROL STYLES
     =========================================== -->

<Style Selector="Border.Card">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Card}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Default}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Large}"/>
    <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Large}"/>
</Style>

<Style Selector="Border.Panel">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Surface}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Subtle}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Medium}"/>
    <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Medium}"/>
</Style>

<!-- ===========================================
     TEXTBLOCK CONTROL STYLES
     =========================================== -->

<Style Selector="TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Body.FontSize}"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Body.FontWeight}"/>
    <!-- LineHeight removed - let Avalonia use default -->
</Style>

<!-- Typography hierarchy -->
<Style Selector="TextBlock.Heading1">
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Heading1.FontSize}"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Heading1.FontWeight}"/>
    <!-- LineHeight removed - let Avalonia use default -->
    <Setter Property="Margin" Value="0,0,0,16"/>
</Style>

<Style Selector="TextBlock.Heading2">
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Heading2.FontSize}"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Heading2.FontWeight}"/>
    <!-- LineHeight removed - let Avalonia use default -->
    <Setter Property="Margin" Value="0,0,0,12"/>
</Style>

<Style Selector="TextBlock.Heading3">
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Heading3.FontSize}"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Heading3.FontWeight}"/>
    <!-- LineHeight removed - let Avalonia use default -->
    <Setter Property="Margin" Value="0,0,0,10"/>
</Style>

<Style Selector="TextBlock.Body">
    <!-- Default body style - inherits from base TextBlock -->
</Style>

<Style Selector="TextBlock.Caption">
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Caption.FontSize}"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Caption.FontWeight}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Secondary}"/>
</Style>

<Style Selector="TextBlock.Secondary">
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Secondary}"/>
</Style>

<Style Selector="TextBlock.Tertiary">
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Tertiary}"/>
</Style>

<!-- ===========================================
     WINDOW CONTROL STYLES
     =========================================== -->

<Style Selector="Window">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Canvas}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Body.FontSize}"/>
    <Setter Property="FontFamily" Value="Segoe UI, Arial, sans-serif"/>
</Style>

<!-- ===========================================
     TABCONTROL CONTROL STYLES
     =========================================== -->

<!-- All TabControl styles moved to StyleSystem/Navigation/TabStyles.axaml -->

<!-- ===========================================
     SCROLLVIEWER CONTROL STYLES
     =========================================== -->

<Style Selector="ScrollViewer">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="AllowAutoHide" Value="True"/>
</Style>

<Style Selector="ScrollBar">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="AllowAutoHide" Value="True"/>
    <Setter Property="Width" Value="12"/>
</Style>

<Style Selector="ScrollBar /template/ Thumb">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Border.Default}"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Opacity" Value="{StaticResource ThemeV2.Opacity.Disabled}"/>
</Style>

<Style Selector="ScrollBar /template/ Thumb:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Border.Strong}"/>
    <Setter Property="Opacity" Value="{StaticResource ThemeV2.Opacity.Medium}"/>
</Style>

<!-- ===========================================
     MTM SPECIFIC CONTROL STYLES
     =========================================== -->

<!-- Quick button styling -->
<Style Selector="Button.QuickButton">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.MTM.QuickButton.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.MTM.QuickButton.Content}"/>
    <Setter Property="BorderBrush" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Medium}"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Heading6.FontWeight}"/>
</Style>

<Style Selector="Button.QuickButton:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.MTM.QuickButton.Background.Hover}"/>
</Style>

<!-- Success overlay styling -->
<Style Selector="Border.SuccessOverlay">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.SuccessOverlay.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.SuccessOverlay.Border}"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Large}"/>
    <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.XLarge}"/>
</Style>

<Style Selector="Border.SuccessOverlay TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.SuccessOverlay.Content}"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Heading5.FontWeight}"/>
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Heading5.FontSize}"/>
    <Setter Property="TextAlignment" Value="Center"/>
</Style>

<!-- Status indicators -->
<Style Selector="Border.Status.Success">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Status.Success.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Status.Success.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
</Style>

<Style Selector="Border.Status.Warning">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Status.Warning.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Status.Warning.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
</Style>

<Style Selector="Border.Status.Error">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Status.Error.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Status.Error.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
</Style>

<!-- Navigation styling -->
<Style Selector="Border.Navigation">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Navigation.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Strong}"/>
    <Setter Property="BorderThickness" Value="0,0,1,0"/>
</Style>

<!-- ===========================================
     VALIDATION AND ERROR STATES
     =========================================== -->

<Style Selector="TextBox.Error">
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Input.Border.Error}"/>
    <Setter Property="BorderThickness" Value="2"/>
</Style>

<Style Selector="ComboBox.Error">
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Input.Border.Error}"/>
    <Setter Property="BorderThickness" Value="2"/>
</Style>

</Styles>

<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:ClassModifier="internal">

<!-- Include foundation layers -->
<ResourceDictionary.MergedDictionaries>
    <ResourceInclude Source="avares://MTM_WIP_Application_Avalonia/Resources/ThemesV2/Tokens.axaml"/>
    <ResourceInclude Source="avares://MTM_WIP_Application_Avalonia/Resources/ThemesV2/Semantic.axaml"/>
</ResourceDictionary.MergedDictionaries>

<!--
Theme V2 Dark Variant Implementation
===================================
Avalonia 11.3.4 ThemeVariant="Dark" compatible theme
Implements semantic tokens for dark mode appearance
Following MTM architectural patterns and WCAG 2.1 AA compliance
-->

<ResourceDictionary.ThemeDictionaries>
    <ResourceDictionary x:Key="Dark">

        <!-- ===========================================
             BACKGROUND THEME ASSIGNMENTS (DARK)
             =========================================== -->

        <!-- Primary surfaces use dark colors -->
        <SolidColorBrush x:Key="ThemeV2.Background.Canvas" Color="{StaticResource ThemeV2.Color.Gray.900}"/>
        <SolidColorBrush x:Key="ThemeV2.Background.Surface" Color="{StaticResource ThemeV2.Color.Gray.800}"/>
        <SolidColorBrush x:Key="ThemeV2.Background.Card" Color="{StaticResource ThemeV2.Color.Gray.800}"/>

        <!-- Secondary surfaces -->
        <SolidColorBrush x:Key="ThemeV2.Background.Subtle" Color="{StaticResource ThemeV2.Color.Gray.700}"/>
        <SolidColorBrush x:Key="ThemeV2.Background.Muted" Color="{StaticResource ThemeV2.Color.Gray.600}"/>

        <!-- Interactive states for dark theme -->
        <SolidColorBrush x:Key="ThemeV2.Background.Hover" Color="{StaticResource ThemeV2.Color.Gray.700}"/>
        <SolidColorBrush x:Key="ThemeV2.Background.Pressed" Color="{StaticResource ThemeV2.Color.Gray.600}"/>
        <SolidColorBrush x:Key="ThemeV2.Background.Selected" Color="{StaticResource ThemeV2.Color.Blue.900}"/>
        <SolidColorBrush x:Key="ThemeV2.Background.Focus" Color="{StaticResource ThemeV2.Color.Blue.800}"/>

        <!-- ===========================================
             CONTENT/TEXT THEME ASSIGNMENTS (DARK)
             =========================================== -->

        <!-- High contrast text on dark backgrounds -->
        <SolidColorBrush x:Key="ThemeV2.Content.Primary" Color="{StaticResource ThemeV2.Color.Gray.100}"/>
        <SolidColorBrush x:Key="ThemeV2.Content.Secondary" Color="{StaticResource ThemeV2.Color.Gray.300}"/>
        <SolidColorBrush x:Key="ThemeV2.Content.Tertiary" Color="{StaticResource ThemeV2.Color.Gray.500}"/>

        <!-- Muted and disabled states -->
        <SolidColorBrush x:Key="ThemeV2.Content.Disabled" Color="{StaticResource ThemeV2.Color.Gray.600}"/>
        <SolidColorBrush x:Key="ThemeV2.Content.Placeholder" Color="{StaticResource ThemeV2.Color.Gray.600}"/>

        <!-- Text for light surfaces -->
        <SolidColorBrush x:Key="ThemeV2.Content.OnDark" Color="{StaticResource ThemeV2.Color.Pure.White}"/>
        <SolidColorBrush x:Key="ThemeV2.Content.OnColor" Color="{StaticResource ThemeV2.Color.Pure.White}"/>

        <!-- ===========================================
             ACTION/INTERACTIVE THEME ASSIGNMENTS (DARK)
             =========================================== -->

        <!-- Primary actions (slightly brighter for dark mode) -->
        <SolidColorBrush x:Key="ThemeV2.Action.Primary" Color="{StaticResource ThemeV2.Color.Blue.500}"/>
        <SolidColorBrush x:Key="ThemeV2.Action.Primary.Hover" Color="{StaticResource ThemeV2.Color.Blue.400}"/>
        <SolidColorBrush x:Key="ThemeV2.Action.Primary.Pressed" Color="{StaticResource ThemeV2.Color.Blue.600}"/>
        <SolidColorBrush x:Key="ThemeV2.Action.Primary.Disabled" Color="{StaticResource ThemeV2.Color.Gray.600}"/>

        <!-- Secondary actions -->
        <SolidColorBrush x:Key="ThemeV2.Action.Secondary" Color="{StaticResource ThemeV2.Color.Gray.400}"/>
        <SolidColorBrush x:Key="ThemeV2.Action.Secondary.Hover" Color="{StaticResource ThemeV2.Color.Gray.300}"/>
        <SolidColorBrush x:Key="ThemeV2.Action.Secondary.Pressed" Color="{StaticResource ThemeV2.Color.Gray.500}"/>
        <SolidColorBrush x:Key="ThemeV2.Action.Secondary.Disabled" Color="{StaticResource ThemeV2.Color.Gray.600}"/>

        <!-- ===========================================
             BORDER/OUTLINE THEME ASSIGNMENTS (DARK)
             =========================================== -->

        <!-- Subtle borders on dark backgrounds -->
        <SolidColorBrush x:Key="ThemeV2.Border.Default" Color="{StaticResource ThemeV2.Color.Gray.600}"/>
        <SolidColorBrush x:Key="ThemeV2.Border.Subtle" Color="{StaticResource ThemeV2.Color.Gray.700}"/>
        <SolidColorBrush x:Key="ThemeV2.Border.Strong" Color="{StaticResource ThemeV2.Color.Gray.500}"/>

        <!-- Interactive border states -->
        <SolidColorBrush x:Key="ThemeV2.Border.Hover" Color="{StaticResource ThemeV2.Color.Gray.500}"/>
        <SolidColorBrush x:Key="ThemeV2.Border.Focus" Color="{StaticResource ThemeV2.Color.Blue.500}"/>
        <SolidColorBrush x:Key="ThemeV2.Border.Pressed" Color="{StaticResource ThemeV2.Color.Gray.400}"/>
        <SolidColorBrush x:Key="ThemeV2.Border.Disabled" Color="{StaticResource ThemeV2.Color.Gray.700}"/>

        <!-- ===========================================
             INPUT FIELD THEME ASSIGNMENTS (DARK)
             =========================================== -->

        <!-- Dark input fields with appropriate contrast -->
        <SolidColorBrush x:Key="ThemeV2.Input.Background" Color="{StaticResource ThemeV2.Color.Gray.800}"/>
        <SolidColorBrush x:Key="ThemeV2.Input.Background.Hover" Color="{StaticResource ThemeV2.Color.Gray.700}"/>
        <SolidColorBrush x:Key="ThemeV2.Input.Background.Focus" Color="{StaticResource ThemeV2.Color.Gray.800}"/>
        <SolidColorBrush x:Key="ThemeV2.Input.Background.Disabled" Color="{StaticResource ThemeV2.Color.Gray.800}"/>

        <SolidColorBrush x:Key="ThemeV2.Input.Border" Color="{StaticResource ThemeV2.Color.Gray.600}"/>
        <SolidColorBrush x:Key="ThemeV2.Input.Border.Hover" Color="{StaticResource ThemeV2.Color.Gray.500}"/>
        <SolidColorBrush x:Key="ThemeV2.Input.Border.Focus" Color="{StaticResource ThemeV2.Color.Blue.500}"/>
        <SolidColorBrush x:Key="ThemeV2.Input.Border.Error" Color="{StaticResource ThemeV2.Color.Red.500}"/>

        <SolidColorBrush x:Key="ThemeV2.Input.Content" Color="{StaticResource ThemeV2.Color.Gray.100}"/>
        <SolidColorBrush x:Key="ThemeV2.Input.Placeholder" Color="{StaticResource ThemeV2.Color.Gray.500}"/>

        <!-- ===========================================
             NAVIGATION THEME ASSIGNMENTS (DARK)
             =========================================== -->

        <!-- Even darker navigation for distinction -->
        <SolidColorBrush x:Key="ThemeV2.Navigation.Background" Color="{StaticResource ThemeV2.Color.Pure.Black}"/>
        <SolidColorBrush x:Key="ThemeV2.Navigation.Item" Color="Transparent"/>
        <SolidColorBrush x:Key="ThemeV2.Navigation.Item.Hover" Color="{StaticResource ThemeV2.Color.Gray.800}"/>
        <SolidColorBrush x:Key="ThemeV2.Navigation.Item.Selected" Color="{StaticResource ThemeV2.Color.Blue.600}"/>
        <SolidColorBrush x:Key="ThemeV2.Navigation.Content" Color="{StaticResource ThemeV2.Color.Gray.300}"/>

        <!-- ===========================================
             TABLE/DATAGRID THEME ASSIGNMENTS (DARK)
             =========================================== -->

        <!-- Dark table appearance with good contrast -->
        <SolidColorBrush x:Key="ThemeV2.Table.Background" Color="{StaticResource ThemeV2.Color.Gray.800}"/>
        <SolidColorBrush x:Key="ThemeV2.Table.Header.Background" Color="{StaticResource ThemeV2.Color.Gray.700}"/>
        <SolidColorBrush x:Key="ThemeV2.Table.Row.Alternate" Color="{StaticResource ThemeV2.Color.Gray.700}"/>
        <SolidColorBrush x:Key="ThemeV2.Table.Row.Hover" Color="{StaticResource ThemeV2.Color.Blue.900}"/>
        <SolidColorBrush x:Key="ThemeV2.Table.Row.Selected" Color="{StaticResource ThemeV2.Color.Blue.800}"/>

        <SolidColorBrush x:Key="ThemeV2.Table.Border" Color="{StaticResource ThemeV2.Color.Gray.600}"/>
        <SolidColorBrush x:Key="ThemeV2.Table.Border.Strong" Color="{StaticResource ThemeV2.Color.Gray.500}"/>

        <!-- ===========================================
             STATUS STATE THEME ASSIGNMENTS (DARK)
             =========================================== -->

        <!-- Success states (adjusted for dark mode) -->
        <SolidColorBrush x:Key="ThemeV2.Status.Success" Color="{StaticResource ThemeV2.Color.Green.400}"/>
        <SolidColorBrush x:Key="ThemeV2.Status.Success.Background" Color="{StaticResource ThemeV2.Color.Green.900}"/>
        <SolidColorBrush x:Key="ThemeV2.Status.Success.Border" Color="{StaticResource ThemeV2.Color.Green.700}"/>

        <!-- Warning states -->
        <SolidColorBrush x:Key="ThemeV2.Status.Warning" Color="{StaticResource ThemeV2.Color.Yellow.400}"/>
        <SolidColorBrush x:Key="ThemeV2.Status.Warning.Background" Color="{StaticResource ThemeV2.Color.Yellow.900}"/>
        <SolidColorBrush x:Key="ThemeV2.Status.Warning.Border" Color="{StaticResource ThemeV2.Color.Yellow.700}"/>

        <!-- Error states -->
        <SolidColorBrush x:Key="ThemeV2.Status.Error" Color="{StaticResource ThemeV2.Color.Red.400}"/>
        <SolidColorBrush x:Key="ThemeV2.Status.Error.Background" Color="{StaticResource ThemeV2.Color.Red.900}"/>
        <SolidColorBrush x:Key="ThemeV2.Status.Error.Border" Color="{StaticResource ThemeV2.Color.Red.700}"/>

        <!-- Info states -->
        <SolidColorBrush x:Key="ThemeV2.Status.Info" Color="{StaticResource ThemeV2.Color.Blue.400}"/>
        <SolidColorBrush x:Key="ThemeV2.Status.Info.Background" Color="{StaticResource ThemeV2.Color.Blue.900}"/>
        <SolidColorBrush x:Key="ThemeV2.Status.Info.Border" Color="{StaticResource ThemeV2.Color.Blue.700}"/>

        <!-- ===========================================
             MTM COMPONENT THEME ASSIGNMENTS (DARK)
             =========================================== -->

        <!-- CollapsiblePanel appearance -->
        <SolidColorBrush x:Key="ThemeV2.CollapsiblePanel.Header" Color="{StaticResource ThemeV2.Color.Gray.700}"/>
        <SolidColorBrush x:Key="ThemeV2.CollapsiblePanel.Content" Color="{StaticResource ThemeV2.Color.Gray.800}"/>
        <SolidColorBrush x:Key="ThemeV2.CollapsiblePanel.Border" Color="{StaticResource ThemeV2.Color.Gray.600}"/>

        <!-- Session history panel -->
        <SolidColorBrush x:Key="ThemeV2.SessionHistory.Background" Color="{StaticResource ThemeV2.Color.Gray.800}"/>
        <SolidColorBrush x:Key="ThemeV2.SessionHistory.Item" Color="{StaticResource ThemeV2.Color.Gray.700}"/>
        <SolidColorBrush x:Key="ThemeV2.SessionHistory.Item.Hover" Color="{StaticResource ThemeV2.Color.Gray.600}"/>

        <!-- Success overlay -->
        <SolidColorBrush x:Key="ThemeV2.SuccessOverlay.Background" Color="{StaticResource ThemeV2.Color.Green.900}"/>
        <SolidColorBrush x:Key="ThemeV2.SuccessOverlay.Border" Color="{StaticResource ThemeV2.Color.Green.700}"/>
        <SolidColorBrush x:Key="ThemeV2.SuccessOverlay.Content" Color="{StaticResource ThemeV2.Color.Green.200}"/>

        <!-- ===========================================
             SHADOW SYSTEM (DARK THEME)
             =========================================== -->

        <!-- Shadows for dark theme - more prominent for visibility on dark backgrounds -->
        <BoxShadows x:Key="ThemeV2.Shadow.Small">0 2 8 0 #40000000</BoxShadows>
        <BoxShadows x:Key="ThemeV2.Shadow.Medium">0 4 12 0 #50000000</BoxShadows>
        <BoxShadows x:Key="ThemeV2.Shadow.Large">0 8 16 0 #60000000</BoxShadows>
        <BoxShadows x:Key="ThemeV2.Shadow.ExtraLarge">0 12 24 0 #70000000</BoxShadows>

        <!-- Specialized shadows for different UI elements -->
        <BoxShadows x:Key="ThemeV2.Shadow.Card">0 2 6 0 #30000000</BoxShadows>
        <BoxShadows x:Key="ThemeV2.Shadow.Hover">0 4 12 0 #50000000</BoxShadows>
        <BoxShadows x:Key="ThemeV2.Shadow.Focus">0 6 16 0 #60000000</BoxShadows>
        <BoxShadows x:Key="ThemeV2.Shadow.Modal">0 10 20 0 #80000000</BoxShadows>

        <!-- Overlay backgrounds for dark theme -->
        <SolidColorBrush x:Key="ThemeV2.Overlay.Light" Color="#30000000"/>
        <SolidColorBrush x:Key="ThemeV2.Overlay.Medium" Color="#60000000"/>
        <SolidColorBrush x:Key="ThemeV2.Overlay.Heavy" Color="#90000000"/>

        <!-- MTM Manufacturing context -->
        <SolidColorBrush x:Key="ThemeV2.MTM.Inventory.In" Color="{StaticResource ThemeV2.Color.Green.400}"/>
        <SolidColorBrush x:Key="ThemeV2.MTM.Inventory.Out" Color="{StaticResource ThemeV2.Color.Red.400}"/>
        <SolidColorBrush x:Key="ThemeV2.MTM.Inventory.Transfer" Color="{StaticResource ThemeV2.Color.Blue.400}"/>

        <!-- Quick buttons - Enhanced visibility for Dark theme -->
        <SolidColorBrush x:Key="ThemeV2.MTM.QuickButton.Background" Color="{StaticResource ThemeV2.Color.Blue.500}"/>
        <SolidColorBrush x:Key="ThemeV2.MTM.QuickButton.Background.Hover" Color="{StaticResource ThemeV2.Color.Blue.400}"/>
        <SolidColorBrush x:Key="ThemeV2.MTM.QuickButton.Content" Color="{StaticResource ThemeV2.Color.Pure.White}"/>

        <!-- Quick button badges and labels -->
        <SolidColorBrush x:Key="ThemeV2.MTM.QuickButton.Badge.Background" Color="{StaticResource ThemeV2.Color.Gray.600}"/>
        <SolidColorBrush x:Key="ThemeV2.MTM.QuickButton.Badge.Border" Color="{StaticResource ThemeV2.Color.Pure.White}"/>
        <SolidColorBrush x:Key="ThemeV2.MTM.QuickButton.Badge.Content" Color="{StaticResource ThemeV2.Color.Pure.White}"/>
        <SolidColorBrush x:Key="ThemeV2.MTM.QuickButton.Position.Background" Color="Transparent"/>
        <SolidColorBrush x:Key="ThemeV2.MTM.QuickButton.Position.Border" Color="{StaticResource ThemeV2.Color.Pure.White}"/>
        <SolidColorBrush x:Key="ThemeV2.MTM.QuickButton.Position.Content" Color="{StaticResource ThemeV2.Color.Pure.White}"/>

        <!-- ===========================================
             MISSING TOKENS FOR MAINVIEW TRANSFORMATION
             =========================================== -->

        <!-- Navigation Tab Icon Backgrounds -->
        <SolidColorBrush x:Key="ThemeV2.Navigation.TabIcon.Background" Color="{StaticResource ThemeV2.Color.Blue.400}"/>

        <!-- Overlay Background -->
        <SolidColorBrush x:Key="ThemeV2.Overlay.Background" Color="#99000000"/>

        <!-- Shadow Colors for Effects -->
        <Color x:Key="ThemeV2.Shadow.Color.Header">#1E40AF</Color>
        <Color x:Key="ThemeV2.Shadow.Color.Footer">#374151</Color>
        <Color x:Key="ThemeV2.Shadow.Color.Card">#1F2937</Color>

        <!-- Opacity Values -->
        <x:Double x:Key="ThemeV2.Opacity.Overlay">0.6</x:Double>
        <x:Double x:Key="ThemeV2.Opacity.Shadow">0.12</x:Double>

    </ResourceDictionary>
</ResourceDictionary.ThemeDictionaries>

<!-- ===========================================
     AVALONIA SYSTEM THEME INTEGRATION (DARK)
     =========================================== -->

<!-- Dark theme system colors -->
<!-- SystemAccent colors MUST be Color resources for Fluent theme compatibility -->
<Color x:Key="SystemAccentColor">#3B82F6</Color>       <!-- ThemeV2.Color.Blue.500 -->
<Color x:Key="SystemAccentColorLight1">#60A5FA</Color> <!-- ThemeV2.Color.Blue.400 -->
<Color x:Key="SystemAccentColorLight2">#93C5FD</Color> <!-- ThemeV2.Color.Blue.300 -->
<Color x:Key="SystemAccentColorLight3">#BFDBFE</Color> <!-- ThemeV2.Color.Blue.200 -->

<!-- Default control colors for dark mode -->
<SolidColorBrush x:Key="SystemControlForegroundBaseHighBrush" Color="{StaticResource ThemeV2.Color.Gray.100}"/>
<SolidColorBrush x:Key="SystemControlBackgroundBaseLowBrush" Color="{StaticResource ThemeV2.Color.Gray.800}"/>
<SolidColorBrush x:Key="SystemControlBackgroundBaseMediumBrush" Color="{StaticResource ThemeV2.Color.Gray.700}"/>

</ResourceDictionary>

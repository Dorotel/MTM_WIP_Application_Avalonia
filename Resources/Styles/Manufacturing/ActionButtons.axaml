<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

<!--
MTM Manufacturing Action Buttons - Theme V2 Compatible
======================================================
Specialized buttons for manufacturing operations
Uses MTM-specific semantic tokens and operation colors
WCAG 2.1 AA compliant with high visibility indicators
-->

<!-- Quick Action Button - For QuickButtonsView -->
<Style Selector="Button.QuickAction">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.MTM.QuickButton.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.MTM.QuickButton.Content}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Default}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Medium}"/>
    <Setter Property="Padding" Value="8,8"/>
    <Setter Property="Margin" Value="3,2"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Body.FontWeight}"/>
    <Setter Property="Cursor" Value="Hand"/>
</Style>

<Style Selector="Button.QuickAction:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.MTM.QuickButton.Background.Hover}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Action.Primary}"/>
    <Setter Property="BorderThickness" Value="2"/>
</Style>

<Style Selector="Button.QuickAction:pressed">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Secondary}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Action.Primary}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.OnColor}"/>
</Style>

<!-- Transfer Operation Button -->
<Style Selector="Button.Transfer">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Status.Success}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.OnColor}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Status.Success}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Heading6.FontWeight}"/>
    <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Small}"/>
    <Setter Property="Cursor" Value="Hand"/>
</Style>

<Style Selector="Button.Transfer:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Status.Success}"/>
    <Setter Property="Opacity" Value="0.9"/>
</Style>

<!-- Delete/Remove Operation Button -->
<Style Selector="Button.Delete">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Destructive}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.OnColor}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Action.Destructive}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Heading6.FontWeight}"/>
    <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Small}"/>
    <Setter Property="Cursor" Value="Hand"/>
</Style>

<Style Selector="Button.Delete:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Destructive.Hover}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Action.Destructive.Hover}"/>
</Style>

<Style Selector="Button.Delete:pressed">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Destructive.Pressed}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Action.Destructive.Pressed}"/>
</Style>

<!-- Header Toggle Button for QuickButtonsView -->
<Style Selector="Button.HeaderToggle">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Primary}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Strong}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.OnColor}"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Medium}"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="Margin" Value="4,2"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Body.FontWeight}"/>
    <Setter Property="Cursor" Value="Hand"/>
</Style>

<Style Selector="Button.HeaderToggle:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Card}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Action.Primary}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
</Style>

<Style Selector="Button.HeaderToggle.Active">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Card}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Action.Primary}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
</Style>

<!-- Footer Toggle Button for compact actions -->
<Style Selector="Button.FooterToggle">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Action.Primary}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Secondary}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
    <Setter Property="Padding" Value="6,4"/>
    <Setter Property="Margin" Value="2,0"/>
    <Setter Property="Cursor" Value="Hand"/>
</Style>

<Style Selector="Button.FooterToggle:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Card}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Action.Primary}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
</Style>

<Style Selector="Button.FooterToggle.Active">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Card}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Default}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
</Style>

</Styles>

<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialIcons="using:Material.Icons.Avalonia">

<!--
MTM Manufacturing Form Styles - Theme V2 Compatible
===================================================
Specialized form field layouts for manufacturing data entry
Optimized for Part ID, Operation, Location, Quantity workflows
Uses MTM semantic tokens and WCAG 2.1 AA compliance
-->

<!-- Manufacturing Field Container - Fixed height with proper containment -->
<Style Selector="Border.ManufacturingField">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Input.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Input.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Medium}"/>
    <Setter Property="Padding" Value="8"/>
    <Setter Property="Margin" Value="4"/>
    <Setter Property="Height" Value="80"/>
    <Setter Property="MinHeight" Value="80"/>
    <Setter Property="MaxHeight" Value="80"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Top"/>
    <Setter Property="ClipToBounds" Value="True"/>
</Style>

<!-- Manufacturing Field Container - Notes variant that stretches -->
<Style Selector="Border.ManufacturingField.Notes">
    <Setter Property="Height" Value="NaN"/>
    <Setter Property="MinHeight" Value="80"/>
    <Setter Property="MaxHeight" Value="999"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
</Style>

<!-- Manufacturing Field Container - Hover state -->
<Style Selector="Border.ManufacturingField:pointerover">
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Focus}"/>
    <Setter Property="BorderThickness" Value="2"/>
</Style>

<!-- Manufacturing Field Container - Focus within state -->
<Style Selector="Border.ManufacturingField:focus-within">
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Focus}"/>
    <Setter Property="BorderThickness" Value="2"/>
</Style>

<!-- Manufacturing Field Label -->
<Style Selector="TextBlock.ManufacturingFieldLabel">
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Secondary}"/>
    <Setter Property="Margin" Value="0"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
</Style>

<!-- Manufacturing Form Input - Optimized for field containers -->
<Style Selector="TextBox.ManufacturingInput">
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
    <Setter Property="Margin" Value="0"/>
    <Setter Property="Padding" Value="4"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
    <Setter Property="TextWrapping" Value="NoWrap"/>
    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Hidden"/>
    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Hidden"/>
    <Setter Property="Height" Value="36"/>
</Style>

<!-- Manufacturing Form Input - Notes variant with wrapping -->
<Style Selector="TextBox.ManufacturingInput.Notes">
    <Setter Property="TextWrapping" Value="Wrap"/>
    <Setter Property="AcceptsReturn" Value="True"/>
    <Setter Property="VerticalContentAlignment" Value="Top"/>
    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
    <Setter Property="Height" Value="NaN"/>
    <Setter Property="MinHeight" Value="80"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
</Style>

<!-- Manufacturing Form Title Container -->
<Style Selector="StackPanel.ManufacturingFormTitle">
    <Setter Property="Orientation" Value="Horizontal"/>
    <Setter Property="Spacing" Value="{StaticResource ThemeV2.Space.MD}"/>
    <Setter Property="HorizontalAlignment" Value="Left"/>
    <Setter Property="Margin" Value="0,0,0,16"/>
</Style>

<!-- Manufacturing Form Title Icon Container -->
<Style Selector="Border.ManufacturingTitleIcon">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Primary}"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
    <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Small}"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
</Style>

<!-- Manufacturing Form Title Text -->
<Style Selector="TextBlock.ManufacturingFormTitle">
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Heading3.FontSize}"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Heading3.FontWeight}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
</Style>

<!-- Manufacturing Form Grid - Specialized layout -->
<Style Selector="Grid.ManufacturingForm">
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
    <Setter Property="Margin" Value="0"/>
</Style>

<!-- Manufacturing Action Panel -->
<Style Selector="Grid.ManufacturingActions">
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="Margin" Value="0"/>
</Style>

<!-- Manufacturing Primary Action Button -->
<Style Selector="Button.ManufacturingSave">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Primary}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.OnColor}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Action.Primary}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
    <Setter Property="MinWidth" Value="120"/>
    <Setter Property="Height" Value="44"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="Margin" Value="0"/>
    <Setter Property="Cursor" Value="Hand"/>
</Style>

<!-- Manufacturing Secondary Action Button -->
<Style Selector="Button.ManufacturingReset">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Secondary}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Default}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
    <Setter Property="MinWidth" Value="100"/>
    <Setter Property="Height" Value="44"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="Margin" Value="0"/>
    <Setter Property="Cursor" Value="Hand"/>
</Style>

<!-- Manufacturing Advanced Action Button -->
<Style Selector="Button.ManufacturingAdvanced">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Surface}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Default}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
    <Setter Property="Width" Value="48"/>
    <Setter Property="Height" Value="48"/>
    <Setter Property="Padding" Value="8"/>
    <Setter Property="Margin" Value="0"/>
    <Setter Property="Cursor" Value="Hand"/>
</Style>

<!-- Manufacturing Field Label Header Container -->
<Style Selector="StackPanel.ManufacturingFieldHeader">
    <Setter Property="Orientation" Value="Horizontal"/>
    <Setter Property="Spacing" Value="4"/>
    <Setter Property="Height" Value="20"/>
    <Setter Property="Margin" Value="0,0,0,4"/>
    <Setter Property="VerticalAlignment" Value="Top"/>
</Style>

<!-- Manufacturing Field Content Container -->
<Style Selector="StackPanel.ManufacturingFieldContent">
    <Setter Property="Spacing" Value="4"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
</Style>

<!-- Manufacturing Form Layout - Two Column Equal Width -->
<Style Selector="Grid.ManufacturingTwoColumn">
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="ColumnSpacing" Value="12"/>
</Style>

<!-- Manufacturing Form Layout - Single Column Full Width -->
<Style Selector="Grid.ManufacturingSingleColumn">
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
    <Setter Property="MinHeight" Value="80"/>
    <Setter Property="RowSpacing" Value="4"/>
</Style>

</Styles>

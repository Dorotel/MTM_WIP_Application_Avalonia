<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="using:MTM_WIP_Application_Avalonia.Views">

<!--
Overlay Panel Styles - MainView Modal and Overlay Enhancement
=============================================================
Provides styling for suggestion, success, and NewQuickButton overlay panels.
All styles use Theme V2 semantic tokens with proper backdrop and containment.
Designed for manufacturing modal workflows with accessibility compliance.
-->

<!-- Overlay Panel Base Style -->
<Style Selector="Border.OverlayPanel">
  <Setter Property="Background" Value="{DynamicResource ThemeV2.Overlay.Background}"/>
  <Setter Property="HorizontalAlignment" Value="Stretch"/>
  <Setter Property="VerticalAlignment" Value="Stretch"/>
  <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Large}"/>
  <Setter Property="ClipToBounds" Value="True"/>
</Style>

<!-- Overlay Panel with Elevation -->
<Style Selector="Border.OverlayPanel.Elevated">
  <Setter Property="Effect">
    <DropShadowEffect Color="{DynamicResource ThemeV2.Shadow.Color.Card}"
                      BlurRadius="20"
                      OffsetX="0"
                      OffsetY="8"
                      Opacity="0.25"/>
  </Setter>
</Style>

<!-- Overlay Content Container -->
<Style Selector="Border.OverlayContent">
  <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Card}"/>
  <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Default}"/>
  <Setter Property="BorderThickness" Value="1"/>
  <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Large}"/>
  <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Large}"/>
  <Setter Property="HorizontalAlignment" Value="Stretch"/>
  <Setter Property="VerticalAlignment" Value="Stretch"/>
  <Setter Property="ClipToBounds" Value="True"/>
</Style>

<!-- Suggestion Overlay Specific -->
<Style Selector="Border.SuggestionOverlay">
  <Setter Property="ZIndex" Value="1003"/>
  <Setter Property="Margin" Value="{StaticResource ThemeV2.Spacing.Small}"/>
</Style>

<!-- Success Overlay Specific -->
<Style Selector="Border.SuccessOverlay">
  <Setter Property="ZIndex" Value="1001"/>
  <Setter Property="Margin" Value="{StaticResource ThemeV2.Spacing.Small}"/>
</Style>

<!-- NewQuickButton Overlay Specific -->
<Style Selector="Border.NewQuickButtonOverlay">
  <Setter Property="ZIndex" Value="1002"/>
  <Setter Property="HorizontalAlignment" Value="Center"/>
  <Setter Property="VerticalAlignment" Value="Center"/>
</Style>

<!-- Overlay Content Controls -->
<Style Selector="Border.OverlayPanel ContentControl">
  <Setter Property="HorizontalAlignment" Value="Stretch"/>
  <Setter Property="VerticalAlignment" Value="Stretch"/>
  <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
  <Setter Property="VerticalContentAlignment" Value="Stretch"/>
</Style>

<!-- NewQuickButtonView Container Styling -->
<Style Selector="Border.NewQuickButtonOverlay views|NewQuickButtonView">
  <Setter Property="MaxWidth" Value="600"/>
  <Setter Property="MaxHeight" Value="500"/>
  <Setter Property="HorizontalAlignment" Value="Center"/>
  <Setter Property="VerticalAlignment" Value="Center"/>
</Style>

<!-- Backdrop Dimming Effect -->
<Style Selector="Border.OverlayBackdrop">
  <Setter Property="Background">
    <SolidColorBrush Color="#000000" Opacity="{StaticResource ThemeV2.Opacity.Overlay}"/>
  </Setter>
  <Setter Property="HorizontalAlignment" Value="Stretch"/>
  <Setter Property="VerticalAlignment" Value="Stretch"/>
</Style>

</Styles>

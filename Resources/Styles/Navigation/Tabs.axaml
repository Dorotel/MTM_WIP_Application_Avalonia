<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

<!--
MTM Navigation Styles - Theme V2 Compatible
==========================================
Tab controls, menus, and navigation elements
Uses Theme V2 semantic tokens for consistent theming
WCAG 2.1 AA compliant navigation patterns
-->

<!-- Enhanced TabControl styling -->
<Style Selector="TabControl.MTMTabs">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Surface}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Default}"/>
    <Setter Property="BorderThickness" Value="0,1,0,0"/>
    <Setter Property="Padding" Value="0"/>
</Style>

<!-- Enhanced TabItem styling with custom template for proper bottom border positioning -->
<Style Selector="TabControl.MTMTabs TabItem">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Secondary}"/>
    <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Medium}"/>
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Body.FontSize}"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Body.FontWeight}"/>
    <Setter Property="Margin" Value="0,0,0,0"/>
    <Setter Property="Template">
        <ControlTemplate>
            <Grid>
                <!-- Main tab content area that fills the entire TabItem -->
                <Border x:Name="PART_Root"
                        Background="{TemplateBinding Background}"
                        Padding="{TemplateBinding Padding}">
                    <ContentPresenter x:Name="PART_ContentPresenter"
                                      Content="{TemplateBinding Header}"
                                      ContentTemplate="{TemplateBinding HeaderTemplate}"
                                      Foreground="{TemplateBinding Foreground}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      RecognizesAccessKey="True" />
                </Border>

                <!-- Bottom selection indicator positioned at absolute bottom -->
                <Border x:Name="PART_SelectionIndicator"
                        Height="2"
                        Background="Transparent"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom" />
            </Grid>
        </ControlTemplate>
    </Setter>
</Style>

<Style Selector="TabControl.MTMTabs TabItem:selected /template/ Border#PART_SelectionIndicator">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Primary}"/>
</Style>

<Style Selector="TabControl.MTMTabs TabItem:selected">
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Heading6.FontWeight}"/>
</Style>

<Style Selector="TabControl.MTMTabs TabItem:pointerover">
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
</Style>

<Style Selector="TabControl.MTMTabs TabItem:pointerover /template/ Border#PART_SelectionIndicator">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Border.Default}"/>
</Style>

<!-- Tab header with icon and text -->
<Style Selector="TabControl.MTMTabs TabItem StackPanel.TabHeader">
    <Setter Property="Orientation" Value="Horizontal"/>
    <Setter Property="Spacing" Value="12"/>
</Style>

<Style Selector="TabControl.MTMTabs TabItem Border.TabIcon">
    <Setter Property="CornerRadius" Value="10"/>
    <Setter Property="Width" Value="24"/>
    <Setter Property="Height" Value="24"/>
</Style>

<Style Selector="TabControl.MTMTabs TabItem TextBlock.TabTitle">
    <Setter Property="FontSize" Value="15"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="TextDecorations" Value="{x:Null}"/>
</Style>

<!-- Ensure no borders or underlines on tab content -->
<Style Selector="TabControl.MTMTabs TabItem StackPanel">
    <Setter Property="Background" Value="Transparent"/>
</Style>

<Style Selector="TabControl.MTMTabs TabItem Border">
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="BorderBrush" Value="Transparent"/>
</Style>

<Style Selector="TabControl.MTMTabs TabItem TextBlock">
    <Setter Property="TextDecorations" Value="{x:Null}"/>
</Style>

<!-- Override any template-level text decorations -->
<Style Selector="TabControl.MTMTabs TabItem /template/ TextBlock">
    <Setter Property="TextDecorations" Value="{x:Null}"/>
</Style>

<!-- Menu styling -->
<Style Selector="Menu.MTMMenu">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.OnColor}"/>
</Style>

<Style Selector="Menu.MTMMenu MenuItem">
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.OnColor}"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
    <Setter Property="Margin" Value="2"/>
</Style>

<Style Selector="Menu.MTMMenu MenuItem:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Hover}"/>
</Style>

<Style Selector="Menu.MTMMenu MenuItem:pressed">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Pressed}"/>
</Style>

<!-- Submenu styling -->
<Style Selector="Menu.MTMMenu MenuItem > MenuItem">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Card}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Default}"/>
    <Setter Property="BorderThickness" Value="1"/>
</Style>

<!-- Breadcrumb navigation -->
<Style Selector="StackPanel.Breadcrumb">
    <Setter Property="Orientation" Value="Horizontal"/>
    <Setter Property="Spacing" Value="8"/>
    <Setter Property="Margin" Value="0,0,0,16"/>
</Style>

<Style Selector="StackPanel.Breadcrumb Button.BreadcrumbItem">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Action.Link}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="4,2"/>
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Caption.FontSize}"/>
</Style>

<Style Selector="StackPanel.Breadcrumb Button.BreadcrumbItem:pointerover">
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Action.Link.Hover}"/>
</Style>

<Style Selector="StackPanel.Breadcrumb TextBlock.BreadcrumbSeparator">
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Tertiary}"/>
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Caption.FontSize}"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
</Style>

<!-- Sidebar navigation -->
<Style Selector="Border.SidebarNav">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Navigation.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Strong}"/>
    <Setter Property="BorderThickness" Value="0,0,1,0"/>
    <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Medium}"/>
</Style>

<Style Selector="Border.SidebarNav Button.NavItem">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Navigation.Item}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Navigation.Content}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="Margin" Value="0,2"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="HorizontalContentAlignment" Value="Left"/>
</Style>

<Style Selector="Border.SidebarNav Button.NavItem:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Navigation.Item.Hover}"/>
</Style>

<Style Selector="Border.SidebarNav Button.NavItem.Active">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Navigation.Item.Selected}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.OnColor}"/>
</Style>

<!-- Tree navigation -->
<Style Selector="TreeView.MTMTreeNav">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="8"/>
</Style>

<Style Selector="TreeView.MTMTreeNav TreeViewItem">
    <Setter Property="Padding" Value="8,6"/>
    <Setter Property="Margin" Value="2"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
</Style>

<Style Selector="TreeView.MTMTreeNav TreeViewItem:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Hover}"/>
</Style>

<Style Selector="TreeView.MTMTreeNav TreeViewItem:selected">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Selected}"/>
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
</Style>

</Styles>

<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialIcons="using:Material.Icons.Avalonia">

<!--
Navigation Tab Styles - MainView Tab Control Enhancement
========================================================
Provides comprehensive styling for MainView tab control with icons and consistent spacing.
All styles use Theme V2 semantic tokens for perfect light/dark mode compatibility.
Designed for manufacturing navigation with industrial accessibility standards.
-->

<!-- Main Navigation Tab Control - Complete styling moved from BaseStyles.axaml -->
<Style Selector="TabControl.MainNavigation">
  <Setter Property="Background" Value="Transparent"/>
  <Setter Property="BorderThickness" Value="0"/>
  <Setter Property="BorderBrush" Value="Transparent"/>
  <Setter Property="Padding" Value="0"/>
  <Setter Property="HorizontalAlignment" Value="Stretch"/>
  <Setter Property="VerticalAlignment" Value="Stretch"/>
  <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
  <Setter Property="VerticalContentAlignment" Value="Stretch"/>
</Style>

<!-- Main Navigation Tab Items - Complete custom template to eliminate all default borders -->
<Style Selector="TabControl.MainNavigation TabItem">
  <Setter Property="Background" Value="Transparent"/>
  <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Secondary}"/>
  <Setter Property="BorderBrush" Value="Transparent"/>
  <Setter Property="BorderThickness" Value="0"/>
  <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Medium}"/>
  <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Body.FontSize}"/>
  <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Body.FontWeight}"/>
  <Setter Property="MinHeight" Value="44"/>
  <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
  <Setter Property="VerticalContentAlignment" Value="Stretch"/>
  <Setter Property="Template">
    <ControlTemplate>
      <Border Name="PART_LayoutRoot"
              Background="{TemplateBinding Background}"
              BorderBrush="Transparent"
              BorderThickness="0">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2"/>
          </Grid.RowDefinitions>

          <!-- Tab Content Area with Padding -->
          <ContentPresenter Name="PART_ContentPresenter"
                          Grid.Row="0"
                          Background="Transparent"
                          BorderBrush="Transparent"
                          BorderThickness="0"
                          Margin="{TemplateBinding Padding}"
                          ContentTemplate="{TemplateBinding HeaderTemplate}"
                          Content="{TemplateBinding Header}"
                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                          FontFamily="{TemplateBinding FontFamily}"
                          FontSize="{TemplateBinding FontSize}"
                          FontWeight="{TemplateBinding FontWeight}"
                          Foreground="{TemplateBinding Foreground}"/>

          <!-- Selection Indicator at Bottom -->
          <Border Name="PART_SelectedPipe"
                  Grid.Row="1"
                  Background="Transparent"
                  Height="2"
                  VerticalAlignment="Bottom"/>
        </Grid>
      </Border>
    </ControlTemplate>
  </Setter>
</Style>

<!-- Selected tab styling -->
<Style Selector="TabControl.MainNavigation TabItem:selected">
  <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
  <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Heading6.FontWeight}"/>
</Style>

<Style Selector="TabControl.MainNavigation TabItem:selected /template/ Border#PART_SelectedPipe">
  <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Primary}"/>
</Style>

<!-- Hover tab styling -->
<Style Selector="TabControl.MainNavigation TabItem:pointerover">
  <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Hover}"/>
  <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
</Style>

<Style Selector="TabControl.MainNavigation TabItem:pointerover /template/ Border#PART_SelectedPipe">
  <Setter Property="Background" Value="{DynamicResource ThemeV2.Border.Default}"/>
</Style>

<!-- Selected tab takes precedence over hover -->
<Style Selector="TabControl.MainNavigation TabItem:selected:pointerover /template/ Border#PART_SelectedPipe">
  <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Primary}"/>
</Style>

<!-- Remove text decorations from all tab content -->
<Style Selector="TabControl.MainNavigation TabItem TextBlock">
  <Setter Property="TextDecorations" Value="{x:Null}"/>
</Style>

<Style Selector="TabControl.MainNavigation TabItem StackPanel TextBlock">
  <Setter Property="TextDecorations" Value="{x:Null}"/>
</Style>

<!-- Tab Header Container -->
<Style Selector="StackPanel.TabHeader">
  <Setter Property="Orientation" Value="Horizontal"/>
  <Setter Property="Spacing" Value="{StaticResource ThemeV2.Space.SM}"/>
  <Setter Property="VerticalAlignment" Value="Center"/>
</Style>

<!-- Tab Icon Container - Base Style -->
<Style Selector="Border.TabIcon">
  <Setter Property="BorderThickness" Value="0"/>
  <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
  <Setter Property="Width" Value="28"/>
  <Setter Property="Height" Value="28"/>
  <Setter Property="Padding" Value="4"/>
  <Setter Property="HorizontalAlignment" Value="Center"/>
  <Setter Property="VerticalAlignment" Value="Center"/>
</Style>

<!-- Tab Icon - Primary Style (Inventory) -->
<Style Selector="Border.TabIcon.Primary">
  <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Primary}"/>
</Style>

<!-- Tab Icon - Warning Style (Remove) -->
<Style Selector="Border.TabIcon.Warning">
  <Setter Property="Background" Value="{DynamicResource ThemeV2.Status.Warning}"/>
</Style>

<!-- Tab Icon - Success Style (Transfer) -->
<Style Selector="Border.TabIcon.Success">
  <Setter Property="Background" Value="{DynamicResource ThemeV2.Status.Success}"/>
</Style>

<!-- Tab Icon MaterialIcon -->
<Style Selector="Border.TabIcon materialIcons|MaterialIcon">
  <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.OnColor}"/>
  <Setter Property="Width" Value="20"/>
  <Setter Property="Height" Value="20"/>
  <Setter Property="HorizontalAlignment" Value="Center"/>
  <Setter Property="VerticalAlignment" Value="Center"/>
</Style>

<!-- Tab Title Text -->
<Style Selector="TextBlock.TabTitle">
  <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
  <Setter Property="FontWeight" Value="SemiBold"/>
  <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Body.FontSize}"/>
  <Setter Property="TextDecorations" Value="{x:Null}"/>
  <Setter Property="VerticalAlignment" Value="Center"/>
</Style>

<!-- Tab Content Container -->
<Style Selector="TabControl.MainNavigation TabItem DockPanel">
  <Setter Property="HorizontalAlignment" Value="Stretch"/>
  <Setter Property="VerticalAlignment" Value="Stretch"/>
  <Setter Property="LastChildFill" Value="True"/>
</Style>

<!-- Tab Content ContentControl -->
<Style Selector="TabControl.MainNavigation TabItem ContentControl">
  <Setter Property="HorizontalAlignment" Value="Stretch"/>
  <Setter Property="VerticalAlignment" Value="Stretch"/>
  <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
  <Setter Property="VerticalContentAlignment" Value="Stretch"/>
</Style>

</Styles>

<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

<!--
MTM Card Layout Styles - Theme V2 Compatible
===========================================
Card containers for content grouping
Uses Theme V2 semantic tokens for consistent theming
Following MTM design system patterns
-->

<!-- Standard Card - Main content containers -->
<Style Selector="Border.Card">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Card}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Default}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Large}"/>
    <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Large}"/>
</Style>

<!-- Card with subtle elevation -->
<Style Selector="Border.Card.Elevated">
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Subtle}"/>
    <!-- Note: BoxShadow requires converter in actual implementation -->
</Style>

<!-- Panel - Secondary containers -->
<Style Selector="Border.Panel">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Surface}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Subtle}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Medium}"/>
    <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Medium}"/>
</Style>

<!-- Header Panel - For section headers -->
<Style Selector="Border.HeaderPanel">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Primary}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Action.Primary}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="8,8,0,0"/>
    <Setter Property="Padding" Value="16,12"/>
</Style>

<Style Selector="Border.HeaderPanel TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.OnColor}"/>
    <Setter Property="FontWeight" Value="{StaticResource ThemeV2.Typography.Heading6.FontWeight}"/>
    <Setter Property="FontSize" Value="{StaticResource ThemeV2.Typography.Heading6.FontSize}"/>
</Style>

<!-- Footer Panel - For action areas -->
<Style Selector="Border.FooterPanel">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Subtle}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Subtle}"/>
    <Setter Property="BorderThickness" Value="1,0,1,1"/>
    <Setter Property="CornerRadius" Value="0,0,8,8"/>
    <Setter Property="Padding" Value="16,12"/>
</Style>

<!-- Form Card - For form sections -->
<Style Selector="Border.FormCard">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Card}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Default}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Medium}"/>
    <Setter Property="Padding" Value="16"/>
    <Setter Property="Margin" Value="0,0,0,8"/>
</Style>

<!-- Status Cards -->
<Style Selector="Border.Card.Success">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Status.Success.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Status.Success.Border}"/>
    <Setter Property="BorderThickness" Value="2"/>
</Style>

<Style Selector="Border.Card.Warning">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Status.Warning.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Status.Warning.Border}"/>
    <Setter Property="BorderThickness" Value="2"/>
</Style>

<Style Selector="Border.Card.Error">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Status.Error.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Status.Error.Border}"/>
    <Setter Property="BorderThickness" Value="2"/>
</Style>

<Style Selector="Border.Card.Info">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Status.Info.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Status.Info.Border}"/>
    <Setter Property="BorderThickness" Value="2"/>
</Style>

<!-- Compact Card variant -->
<Style Selector="Border.Card.Compact">
    <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Small}"/>
    <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Small}"/>
</Style>

<!-- Navigation Card - For sidebar/navigation -->
<Style Selector="Border.Card.Navigation">
    <Setter Property="Background" Value="{DynamicResource ThemeV2.Navigation.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Strong}"/>
    <Setter Property="BorderThickness" Value="0,0,1,0"/>
    <Setter Property="CornerRadius" Value="0"/>
</Style>

</Styles>

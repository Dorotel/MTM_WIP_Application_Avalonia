<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

<!--
Header and Footer Panel Styles - MainView Container Enhancement
===============================================================
Provides styling for header menu bar and footer status bar components.
All styles use Theme V2 semantic tokens with manufacturing-optimized spacing.
Includes shadow effects and proper containment for industrial UI standards.
-->

<!-- Header Panel Base Style -->
<Style Selector="Border.HeaderPanel">
  <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Primary}"/>
  <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Small}"/>
  <Setter Property="HorizontalAlignment" Value="Stretch"/>
  <Setter Property="ClipToBounds" Value="True"/>
  <Setter Property="BorderThickness" Value="0"/>
</Style>

<!-- Header Panel with Shadow -->
<Style Selector="Border.HeaderPanel.WithShadow">
  <Setter Property="Effect">
    <DropShadowEffect Color="{DynamicResource ThemeV2.Shadow.Color.Header}"
                      BlurRadius="8"
                      OffsetX="0"
                      OffsetY="2"
                      Opacity="{StaticResource ThemeV2.Opacity.Shadow}"/>
  </Setter>
</Style>

<!-- Header Content Grid -->
<Style Selector="Grid.HeaderContent">
  <Setter Property="HorizontalAlignment" Value="Stretch"/>
</Style>

<!-- Footer Panel Base Style -->
<Style Selector="Border.FooterPanel">
  <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Surface}"/>
  <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Small}"/>
  <Setter Property="HorizontalAlignment" Value="Stretch"/>
  <Setter Property="BorderThickness" Value="0"/>
</Style>

<!-- Footer Panel with Border -->
<Style Selector="Border.FooterPanel.WithBorder">
  <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Subtle}"/>
  <Setter Property="BorderThickness" Value="0,1,0,0"/>
  <Setter Property="Effect">
    <DropShadowEffect Color="{DynamicResource ThemeV2.Shadow.Color.Footer}"
                      BlurRadius="4"
                      OffsetX="0"
                      OffsetY="-1"
                      Opacity="{StaticResource ThemeV2.Opacity.Shadow}"/>
  </Setter>
</Style>

<!-- Footer Content Grid -->
<Style Selector="Grid.FooterContent">
  <Setter Property="ColumnSpacing" Value="16"/>
  <Setter Property="HorizontalAlignment" Value="Stretch"/>
</Style>

<!-- Main Menu Styling -->
<Style Selector="Menu.MainMenu">
  <Setter Property="Background" Value="Transparent"/>
  <Setter Property="HorizontalAlignment" Value="Left"/>
  <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.OnColor}"/>
</Style>

<Style Selector="Menu.MainMenu MenuItem">
  <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.OnColor}"/>
  <Setter Property="FontWeight" Value="SemiBold"/>
</Style>

<Style Selector="Menu.MainMenu MenuItem MenuItem">
  <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.Primary}"/>
  <Setter Property="FontWeight" Value="Normal"/>
</Style>

<!-- Status Card in Footer -->
<Style Selector="Border.StatusCard">
  <Setter Property="Background" Value="{DynamicResource ThemeV2.Background.Card}"/>
  <Setter Property="BorderBrush" Value="{DynamicResource ThemeV2.Border.Default}"/>
  <Setter Property="BorderThickness" Value="1"/>
  <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Medium}"/>
  <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Medium}"/>
  <Setter Property="MinWidth" Value="140"/>
  <Setter Property="HorizontalAlignment" Value="Right"/>
  <Setter Property="Effect">
    <DropShadowEffect Color="{DynamicResource ThemeV2.Shadow.Color.Card}"
                      BlurRadius="4"
                      OffsetX="0"
                      OffsetY="1"
                      Opacity="{StaticResource ThemeV2.Opacity.Shadow}"/>
  </Setter>
</Style>

<!-- Version Badge Styling -->
<Style Selector="Border.VersionBadge">
  <Setter Property="Background" Value="{DynamicResource ThemeV2.Action.Primary}"/>
  <Setter Property="CornerRadius" Value="{StaticResource ThemeV2.CornerRadius.Large}"/>
  <Setter Property="Padding" Value="{StaticResource ThemeV2.Spacing.Medium}"/>
  <Setter Property="HorizontalAlignment" Value="Right"/>
  <Setter Property="ClipToBounds" Value="True"/>
  <Setter Property="Effect">
    <DropShadowEffect Color="{DynamicResource ThemeV2.Shadow.Color.Header}"
                      BlurRadius="6"
                      OffsetX="0"
                      OffsetY="2"
                      Opacity="{StaticResource ThemeV2.Opacity.Shadow}"/>
  </Setter>
</Style>

<Style Selector="Border.VersionBadge TextBlock">
  <Setter Property="Foreground" Value="{DynamicResource ThemeV2.Content.OnColor}"/>
  <Setter Property="FontWeight" Value="Bold"/>
  <Setter Property="VerticalAlignment" Value="Center"/>
</Style>

<!-- Progress Display Area -->
<Style Selector="Border.ProgressDisplay">
  <Setter Property="HorizontalAlignment" Value="Left"/>
  <Setter Property="VerticalAlignment" Value="Center"/>
  <Setter Property="MinWidth" Value="200"/>
  <Setter Property="MaxWidth" Value="280"/>
</Style>

<!-- Theme Switcher Container -->
<Style Selector="Border.ThemeSwitcher">
  <Setter Property="HorizontalAlignment" Value="Right"/>
  <Setter Property="VerticalAlignment" Value="Center"/>
  <Setter Property="Margin" Value="16,0,0,0"/>
</Style>

</Styles>


<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:themes="using:MTM_WIP_Application_Avalonia.Resources.Themes"
       >
	<!-- ================================================================== -->
	<!-- MTM COMPONENT STYLES - Modern UI Design System                    -->
	<!-- ================================================================== -->
	<!-- Generated: December 19, 2024                                      -->
	<!-- Version: 2.0 - Redesigned Tab Control with Button Style           -->
	<!-- ================================================================== -->

	<!-- Design-time preview -->
	<Design.PreviewWith>
		<Border Padding="20">
			<themes:MTMComponentsPreview />
		</Border>
	</Design.PreviewWith>

	<!-- ================================================================== -->
	<!-- TAB CONTROL STYLES - REDESIGNED BUTTON-STYLE TABS                -->
	<!-- ================================================================== -->

	<!-- Complete TabControl Template Override -->
	<Style Selector="TabControl">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="TabStripPlacement" Value="Top"/>
		<Setter Property="Padding" Value="0"/>
		<Setter Property="Template">
			<ControlTemplate>
				<DockPanel LastChildFill="True" Background="Transparent">
					<!-- Tab Strip Area with proper padding alignment -->
					<ItemsPresenter Name="PART_TabStrip"
									DockPanel.Dock="Top"
									ItemsPanel="{TemplateBinding ItemsPanel}"
									Margin="16,16,16,16"/>
					<!-- Content Area with matching padding -->
					<ContentPresenter Name="PART_SelectedContentHost"
									  Content="{TemplateBinding SelectedContent}"
									  ContentTemplate="{TemplateBinding SelectedContentTemplate}"
									  Background="Transparent"
									  BorderThickness="0"
									  Padding="16,0,16,16"
									  Margin="0"/>
				</DockPanel>
			</ControlTemplate>
		</Setter>
	</Style>

	<!-- Complete TabItem Template Override - Eliminates ALL default styling -->
	<Style Selector="TabItem">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
		<Setter Property="BorderThickness" Value="2"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"/>
		<Setter Property="CornerRadius" Value="25"/>
		<Setter Property="Margin" Value="0,0,8,0"/>
		<Setter Property="Padding" Value="16,12"/>
		<Setter Property="MinWidth" Value="140"/>
		<Setter Property="Height" Value="50"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>
		<Setter Property="VerticalAlignment" Value="Top"/>
		<Setter Property="Template">
			<ControlTemplate>
				<Border Background="{TemplateBinding Background}"
						BorderBrush="{TemplateBinding BorderBrush}"
						BorderThickness="{TemplateBinding BorderThickness}"
						CornerRadius="{TemplateBinding CornerRadius}"
						Padding="{TemplateBinding Padding}">
					<ContentPresenter Name="PART_ContentPresenter"
									  Content="{TemplateBinding Header}"
									  ContentTemplate="{TemplateBinding HeaderTemplate}"
									  Background="Transparent"
									  BorderThickness="0"/>
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>

	<!-- SELECTED TabItem - Highlighted rounded button with theme colors -->
	<Style Selector="TabItem:selected">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="BorderThickness" Value="3"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="CornerRadius" Value="25"/>
		<Setter Property="Margin" Value="0,0,8,0"/>
		<Setter Property="Padding" Value="16,12"/>
		<Setter Property="MinWidth" Value="140"/>
		<Setter Property="Height" Value="50"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>
		<Setter Property="VerticalAlignment" Value="Top"/>
	</Style>

	<!-- Hover effect for non-selected tabs -->
	<Style Selector="TabItem:pointerover:not(:selected)">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="BorderThickness" Value="2"/>
		<Setter Property="CornerRadius" Value="25"/>
	</Style>

	<!-- SELECTED tab text styling - Theme-based white text for custom headers -->
	<Style Selector="TabItem:selected StackPanel TextBlock">
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.TextonDark}"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="FontSize" Value="15"/>
	</Style>



	<!-- NON-SELECTED tab text styling for custom headers -->
	<Style Selector="TabItem:not(:selected) StackPanel TextBlock">
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BodyText}"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="FontSize" Value="15"/>
	</Style>



	<!-- Hover text effects for non-selected tabs with custom headers -->
	<Style Selector="TabItem:pointerover:not(:selected) StackPanel TextBlock">
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="FontWeight" Value="Bold"/>
	</Style>



	<!-- FALLBACK: Simple tab text styling (for tabs without custom headers) -->
	<Style Selector="TabItem:selected TextBlock">
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.TextonDark}"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="FontSize" Value="15"/>
	</Style>

	<Style Selector="TabItem:not(:selected) TextBlock">
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BodyText}"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="FontSize" Value="15"/>
	</Style>

	<!-- FALLBACK: Content presenter styling -->
	<Style Selector="TabItem:selected /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
	</Style>

	<Style Selector="TabItem:not(:selected) /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
	</Style>


	<!-- ================================================================== -->
	<!-- LISTBOX & LISTBOXITEM - MTM OVERLAY/SUGGESTION THEME              -->
	<!-- ================================================================== -->

	<!-- Overlay/Suggestion ListBox Style (applies to overlays, suggestion popups, etc.) -->
	<Style Selector="ListBox.mtm-overlay">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"/>
		<Setter Property="BorderThickness" Value="2"/>
		<Setter Property="CornerRadius" Value="12"/>
		<Setter Property="Padding" Value="0"/>
		<Setter Property="Margin" Value="0"/>
	</Style>

	<!-- Overlay/Suggestion ListBoxItem Style -->
	<Style Selector="ListBox.mtm-overlay ListBoxItem">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"/>
		<Setter Property="FontSize" Value="18"/>
		<Setter Property="Padding" Value="8,4,8,4"/>
		<Setter Property="Margin" Value="0"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="CornerRadius" Value="6"/>
	</Style>
		<Style Selector="ListBox.mtm-overlay ListBoxItem:selected">
			<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
			<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"/>
		</Style>
	<Style Selector="ListBox.mtm-overlay ListBoxItem:pointerover">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
	</Style>
	<Style Selector="ListBox.mtm-overlay ListBoxItem:focused">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.OverlayTextBrush}"/>
	</Style>
	<Style Selector="ListBox.mtm-overlay ListBoxItem:disabled">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.MutedTextBrush}"/>
	</Style>

	<!-- ================================================================== -->
	<!-- BUTTON STYLES - THEME-BASED COLORS ONLY                          -->
	<!-- ================================================================== -->

	<!-- Primary Button - Uses theme colors exclusively -->
	<Style Selector="Button.mtm-primary">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.TextonDark}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="Padding" Value="16,10"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="BorderThickness" Value="2"/>
		<Setter Property="MinHeight" Value="40"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<!-- Primary Button Hover -->
	<Style Selector="Button.mtm-primary:pointerover">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
	</Style>

	<!-- Secondary Button -->
	<Style Selector="Button.mtm-secondary">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BodyText}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"/>
		<Setter Property="Padding" Value="16,10"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="BorderThickness" Value="2"/>
		<Setter Property="MinHeight" Value="40"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<!-- Secondary Button Hover -->
	<Style Selector="Button.mtm-secondary:pointerover">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
	</Style>

	<!-- Global Button styling - Theme-based colors -->
	<Style Selector="Button">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BodyText}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="CornerRadius" Value="6"/>
		<Setter Property="Padding" Value="12,8"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<!-- Global Button Hover -->
	<Style Selector="Button:pointerover">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
	</Style>

	<!-- ================================================================== -->
	<!-- INPUT CONTROLS - THEME-BASED COLORS ONLY                         -->
	<!-- ================================================================== -->

	<!-- Global TextBox styling -->
	<Style Selector="TextBox">
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.HeadingText}"/>
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="CornerRadius" Value="6"/>
		<Setter Property="Padding" Value="8"/>
		<Setter Property="MinHeight" Value="32"/>
	</Style>

	<!-- TextBox Focus -->
	<Style Selector="TextBox:focus">
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="BorderThickness" Value="2"/>
	</Style>

	<!-- Global AutoCompleteBox styling -->
	<Style Selector="AutoCompleteBox">
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.HeadingText}"/>
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="CornerRadius" Value="6"/>
		<Setter Property="Padding" Value="8"/>
		<Setter Property="MinHeight" Value="32"/>
	</Style>

	<!-- AutoCompleteBox Focus -->
	<Style Selector="AutoCompleteBox:focus">
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="BorderThickness" Value="2"/>
	</Style>

	<!-- AutoCompleteBox Dropdown Border Container -->
	<Style Selector="AutoCompleteBox /template/ Border#PART_PopupBorder">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="CornerRadius" Value="6"/>
		<Setter Property="Padding" Value="6"/>
	</Style>

	<!-- AutoCompleteBox Dropdown ListBox -->
	<Style Selector="AutoCompleteBox /template/ ListBox">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="2"/>
		<Setter Property="MaxHeight" Value="200"/>
	</Style>

	<!-- AutoCompleteBox Dropdown ListBox Items -->
	<Style Selector="AutoCompleteBox ListBoxItem">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.TextonDark}"/>
		<Setter Property="Padding" Value="8,6"/>
		<Setter Property="MinHeight" Value="32"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="CornerRadius" Value="4"/>
		<Setter Property="Margin" Value="1"/>
		<Setter Property="FontSize" Value="14"/>
	</Style>

	<!-- AutoCompleteBox Dropdown ListBox Item Hover -->
	<Style Selector="AutoCompleteBox ListBoxItem:pointerover">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
	</Style>

	<!-- AutoCompleteBox Dropdown ListBox Item Selected -->
	<Style Selector="AutoCompleteBox ListBoxItem:selected">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.TextonDark}"/>
	</Style>

	<!-- AutoCompleteBox Dropdown ListBox Item Pressed -->
	<Style Selector="AutoCompleteBox ListBoxItem:pressed">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.TextonDark}"/>
		<Setter Property="Opacity" Value="0.9"/>
	</Style>

	<!-- ================================================================== -->
	<!-- DATA DISPLAY CONTROLS - THEME-BASED COLORS                       -->
	<!-- ================================================================== -->

	<!-- DataGrid styling -->
	<Style Selector="DataGrid">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BodyText}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="GridLinesVisibility" Value="Horizontal"/>
		<Setter Property="HeadersVisibility" Value="Column"/>
	</Style>

	<!-- DataGrid Header -->
	<Style Selector="DataGridColumnHeader">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.HeadingText}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="Padding" Value="8"/>
	</Style>

	<!-- DataGrid Row -->
	<Style Selector="DataGridRow">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BodyText}"/>
	</Style>

	<!-- DataGrid Row Hover -->
	<Style Selector="DataGridRow:pointerover">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.HoverBackground}"/>
	</Style>

	<!-- DataGrid Cell -->
	<Style Selector="DataGridCell">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BodyText}"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="8"/>
	</Style>

	<!-- ================================================================== -->
	<!-- LAYOUT CONTAINERS - THEME-BASED COLORS                           -->
	<!-- ================================================================== -->

	<!-- Card-style Border -->
	<Style Selector="Border.mtm-card">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.BorderAccentBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Padding" Value="16"/>
		<Setter Property="Margin" Value="0,0,0,8"/>
	</Style>

	<!-- Header-style Border -->
	<Style Selector="Border.mtm-header">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource MTM_Shared_Logic.PrimaryAction}"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="CornerRadius" Value="8,8,0,0"/>
		<Setter Property="Padding" Value="16"/>
	</Style>

	<!-- Panel backgrounds -->
	<Style Selector="StackPanel.mtm-panel">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
	</Style>

	<Style Selector="Grid.mtm-panel">
		<Setter Property="Background" Value="{DynamicResource MTM_Shared_Logic.CardBackgroundBrush}"/>
	</Style>

	<!-- ================================================================== -->
	<!-- TEXT CONTROLS - THEME-BASED COLORS                               -->
	<!-- ================================================================== -->

	<!-- TextBlock styling -->
	<Style Selector="TextBlock.mtm-heading">
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.HeadingText}"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="FontSize" Value="16"/>
	</Style>

	<Style Selector="TextBlock.mtm-subheading">
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.HeadingText}"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="FontSize" Value="14"/>
	</Style>

	<Style Selector="TextBlock.mtm-body">
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BodyText}"/>
		<Setter Property="FontWeight" Value="Normal"/>
		<Setter Property="FontSize" Value="12"/>
	</Style>

	<Style Selector="TextBlock.mtm-caption">
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.BodyText}"/>
		<Setter Property="FontWeight" Value="Normal"/>
		<Setter Property="FontSize" Value="11"/>
		<Setter Property="Opacity" Value="0.8"/>
	</Style>



	<!-- Label-style TextBlock for form fields -->
	<Style Selector="TextBlock.mtm-label">
		<Setter Property="Foreground" Value="{DynamicResource MTM_Shared_Logic.HeadingText}"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="FontSize" Value="13"/>
		<Setter Property="Margin" Value="0,0,0,4"/>
	</Style>



</Styles>

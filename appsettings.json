{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=MTM_WIP;Uid=mtm_user;Pwd=your_password;SslMode=none;"
  },
  "MTM": {
    "ApplicationName": "MTM WIP Application",
    "Version": "1.0.0",
    "SessionTimeoutMinutes": 60,
    "MaxQuickButtons": 10,
    "EnableDebugMode": false,
    "AutoSaveUserPreferences": true,
    "AutoSaveIntervalMinutes": 5,
    "ValidOperations": [ "90", "100", "110" ],
    "DefaultLocations": [ "FLOOR", "RECEIVING", "SHIPPING" ]
  },
  "Database": {
    "CommandTimeoutSeconds": 30,
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 5,
    "EnableConnectionPooling": true,
    "MinPoolSize": 5,
    "MaxPoolSize": 100
  },
  "ErrorHandling": {
    "EnableFileServerLogging": true,
    "EnableDatabaseLogging": false,
    "EnableConsoleLogging": true,
    "LogRetentionDays": 30,
    "MaxLogFileSizeBytes": 10485760,
    "EnableDetailedStackTrace": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "MTM.Services": "Information",
      "MTM.ViewModels": "Warning", 
      "Microsoft": "Warning",
      "System": "Error"
    },
    "Console": {
      "IncludeScopes": true,
      "LogToStandardErrorThreshold": "Error"
    },
    "File": {
      "Enable": true,
      "LogRetentionDays": 30,
      "IncludeScopes": true
    }
  }
}
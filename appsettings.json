{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning",
      "MTM": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "HH:mm:ss "
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=MTM_WIP;Uid=root;Pwd=password;Pooling=true;Min Pool Size=5;Max Pool Size=100;"
  },
  "MTM": {
    "ApplicationName": "MTM WIP Application",
    "Version": "1.0.0",
    "SessionTimeoutMinutes": 60,
    "MaxQuickButtons": 10,
    "EnableDebugMode": true,
    "AutoSaveUserPreferences": true,
    "AutoSaveIntervalMinutes": 5,
    "ValidOperations": [ "90", "100", "110" ],
    "DefaultLocations": [ "FLOOR", "RECEIVING", "SHIPPING" ]
  },
  "Database": {
    "CommandTimeoutSeconds": 30,
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 5,
    "EnableConnectionPooling": true,
    "MinPoolSize": 5,
    "MaxPoolSize": 100
  },
  "ErrorHandling": {
    "EnableFileServerLogging": true,
    "EnableDatabaseLogging": false,
    "EnableConsoleLogging": true,
    "LogRetentionDays": 30,
    "MaxLogFileSizeBytes": 10485760,
    "EnableDetailedStackTrace": true
  }
}
